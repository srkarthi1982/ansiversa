---
type Props = {
  title?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
  showCloseButton?: boolean;
};

const {
  title,
  size = 'md',
  className = '',
  showCloseButton = true,
  ...rest
} = Astro.props as Props & Record<string, unknown>;

const sizeClasses: Record<string, string> = {
  sm: 'max-w-sm',
  md: 'max-w-lg',
  lg: 'max-w-2xl',
  xl: 'max-w-3xl',
};

const hasTitleSlot = Astro.slots.has('title');
const hasFooterSlot = Astro.slots.has('footer');
---
<div
  {...rest}
  x-cloak
  x-transition:enter="transition ease-out duration-200"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-150"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  role="dialog"
  aria-modal="true"
  class={`fixed inset-0 z-[100] flex items-center justify-center px-4 sm:px-6 ${className}`}
>
  <div
    class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm"
    x-on:click="$dispatch('modal-close')"
    aria-hidden="true"
  ></div>
  <div
    class={`relative z-10 w-full ${sizeClasses[size] ?? sizeClasses.md}`}
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="translate-y-4 opacity-0 sm:translate-y-0 sm:scale-95"
    x-transition:enter-end="translate-y-0 opacity-100 sm:scale-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 sm:scale-100"
    x-transition:leave-end="translate-y-4 opacity-0 sm:translate-y-0 sm:scale-95"
  >
    <div
      class="flex max-h-[calc(100vh-3rem)] flex-col overflow-hidden rounded-2xl bg-white shadow-[0_32px_80px_-32px_rgba(15,23,42,0.45)] ring-1 ring-slate-900/10"
    >
      {(hasTitleSlot || title) && (
        <header class="flex shrink-0 items-start justify-between gap-4 border-b border-slate-100 px-6 py-4">
          <div class="space-y-1">
            <slot name="title">
              {title && <h2 class="text-lg font-semibold text-slate-900">{title}</h2>}
            </slot>
          </div>
          {showCloseButton && (
            <button
              type="button"
              class="inline-flex h-9 w-9 items-center justify-center rounded-full text-slate-500 transition hover:bg-slate-100 hover:text-slate-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
              x-on:click="$dispatch('modal-close')"
              aria-label="Close modal"
            >
              <i class="fas fa-times text-sm"></i>
            </button>
          )}
        </header>
      )}
      <div class="flex-1 overflow-y-auto px-6 py-5">
        <slot />
      </div>
      <footer class="flex shrink-0 flex-wrap items-center justify-end gap-3 border-t border-slate-100 bg-slate-50 px-6 py-4">
        <slot name="footer">
          <button
            type="button"
            class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800"
            x-on:click="$dispatch('modal-close')"
          >
            Close
          </button>
        </slot>
      </footer>
    </div>
  </div>
</div>
