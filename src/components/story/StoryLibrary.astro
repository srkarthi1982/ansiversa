---
import Button from "../Button.astro";
---
<section id="story-library" class="bg-slate-50 py-16">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <header class="flex flex-wrap items-center justify-between gap-6">
      <div class="space-y-2">
        <h2 class="text-3xl font-semibold text-slate-900">Project library</h2>
        <p class="max-w-xl text-sm text-slate-600">
          Track word-count progress, resurface stalled drafts, and spin up new universes in a few clicks. Filters keep your
          roadmap tidy even as ideas grow.
        </p>
      </div>
      <div class="flex flex-wrap items-center gap-3">
        <Button type="button" variant="outline" @click="story.createProject('short-story')">
          <i class="fas fa-feather-pointed text-xs"></i>
          New short story
        </Button>
        <Button type="button" variant="outline" @click="story.createProject('novella')">
          <i class="fas fa-book-open text-xs"></i>
          Novella template
        </Button>
      </div>
    </header>
    <div class="flex flex-wrap gap-4">
      <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm text-slate-600 shadow-sm">
        <i class="fas fa-search text-xs"></i>
        <input
          type="search"
          placeholder="Search title, logline, or tag"
          class="w-56 bg-transparent text-sm focus:outline-none"
          :value="story.state.filters.search"
          @input.debounce.250ms="story.setFilter('search', $event.target.value)"
        />
      </label>
      <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm text-slate-600 shadow-sm">
        <i class="fas fa-layer-group text-xs"></i>
        <select
          class="bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
          :value="story.state.filters.status"
          @change="story.setFilter('status', $event.target.value)"
        >
          <option value="all">All statuses</option>
          <option value="active">Active</option>
          <option value="archived">Archived</option>
        </select>
      </label>
      <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm text-slate-600 shadow-sm">
        <i class="fas fa-masks-theater text-xs"></i>
        <select
          class="bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
          :value="story.state.filters.genre"
          @change="story.setFilter('genre', $event.target.value)"
        >
          <template x-for="genre in story.genres" :key="`genre-${genre}`">
            <option :value="genre" x-text="genre === 'all' ? 'All genres' : genre"></option>
          </template>
        </select>
      </label>
    </div>
    <div class="grid gap-6 lg:grid-cols-3">
      <template x-if="story.filteredProjects.length === 0">
        <div class="lg:col-span-3 rounded-3xl border border-dashed border-slate-300 bg-white/70 p-10 text-center text-slate-500">
          <p class="text-sm font-semibold">No projects match your filters.</p>
          <p class="mt-2 text-sm">Create a new workspace or clear filters to see archived universes.</p>
        </div>
      </template>
      <template x-for="project in story.filteredProjects" :key="project.id">
        <article
          class="flex h-full flex-col justify-between rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-lg"
        >
          <div class="space-y-4">
            <div class="flex items-start justify-between gap-3">
              <div>
                <h3 class="text-lg font-semibold text-slate-900" x-text="project.title"></h3>
                <p class="mt-1 text-xs uppercase tracking-[0.25em] text-slate-400" x-text="project.genre"></p>
              </div>
              <span
                class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold"
                :class="project.status === 'active' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-200 text-slate-600'"
                x-text="project.status === 'active' ? 'Active' : 'Archived'"
              ></span>
            </div>
            <p class="text-sm text-slate-600" x-text="project.logline"></p>
            <div class="space-y-2">
              <div class="flex items-center justify-between text-xs text-slate-500">
                <span>Progress</span>
                <span x-text="`${Math.round((project.wordsWritten / project.targetWords) * 100)}% of ${project.targetWords.toLocaleString()}w`"></span>
              </div>
              <div class="h-2 overflow-hidden rounded-full bg-slate-200">
                <div
                  class="h-full rounded-full bg-gradient-to-r from-indigo-500 via-sky-500 to-purple-500"
                  :style="`width: ${Math.min(100, Math.round((project.wordsWritten / project.targetWords) * 100))}%`"
                ></div>
              </div>
            </div>
            <ul class="flex flex-wrap gap-2 text-[11px] font-medium text-slate-500">
              <template x-for="tag in project.tags" :key="`${project.id}-tag-${tag}`">
                <li class="rounded-full bg-slate-100 px-3 py-1" x-text="tag"></li>
              </template>
            </ul>
          </div>
          <footer class="mt-6 flex flex-wrap items-center justify-between gap-3 text-xs text-slate-500">
            <div class="space-y-1">
              <p>Last edited <span class="font-semibold" x-text="story.formatRelative(project.lastEdited)"></span></p>
              <p>Beat sheet v<span x-text="project.beatSheetVersion"></span> Â· AI assists this week <span x-text="project.aiCallsThisWeek"></span></p>
            </div>
            <div class="flex flex-wrap gap-2">
              <Button type="button" size="sm" variant="secondary" @click="story.selectProject(project.id, 'overview')">
                Open dashboard
              </Button>
              <Button type="button" size="sm" variant="ghost" @click="story.selectProject(project.id, 'outline')">
                Outline
              </Button>
              <Button type="button" size="sm" variant="ghost" @click="story.selectProject(project.id, 'scenes')">
                Scenes
              </Button>
            </div>
          </footer>
        </article>
      </template>
    </div>
  </div>
</section>
