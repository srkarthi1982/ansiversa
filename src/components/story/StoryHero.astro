---
import Button from "../Button.astro";
---
<section class="relative overflow-hidden bg-gradient-to-br from-indigo-700 via-sky-600 to-purple-700 text-white">
  <div class="absolute inset-0 opacity-40">
    <div class="absolute -left-24 top-16 h-64 w-64 rounded-full bg-white/10 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 h-72 w-72 rounded-full bg-emerald-300/10 blur-3xl"></div>
  </div>
  <div class="relative mx-auto flex max-w-6xl flex-col gap-12 px-4 py-16 sm:px-6 lg:flex-row lg:items-end lg:px-8">
    <div class="flex-1 space-y-6">
      <span class="inline-flex items-center gap-2 rounded-full bg-white/20 px-4 py-1 text-xs font-semibold tracking-[0.3em] uppercase">
        Story Crafter
      </span>
      <h1 class="text-4xl font-black leading-tight sm:text-5xl lg:text-6xl">
        Shape your worlds with a story studio built for imagination
      </h1>
      <p class="max-w-2xl text-base text-white/80 sm:text-lg">
        Manage story bibles, generate beat sheets, track character arcs, and draft scenes in a single creative cockpit.
        Story Crafter keeps canon tight while giving you the knobs to steer tone, POV, and pacing.
      </p>
      <div class="flex flex-wrap gap-3">
        <Button type="button" size="lg" @click="story.createProject('novel')">
          <i class="fas fa-rocket-launch text-sm"></i>
          Start a novel workspace
        </Button>
        <Button type="button" size="lg" variant="outline" @click="story.togglePlan()">
          <i class="fas fa-bolt text-sm"></i>
          <span x-text="story.state.plan === 'free' ? 'Preview Pro limits' : 'Switch to Free plan'"></span>
        </Button>
      </div>
    </div>
    <div class="w-full max-w-sm space-y-4 rounded-3xl border border-white/10 bg-white/10 p-6 shadow-2xl backdrop-blur">
      <header class="flex items-center justify-between text-xs uppercase tracking-[0.3em] text-white/70">
        <span class="inline-flex items-center gap-2">
          <span class="h-2 w-2 animate-pulse rounded-full bg-emerald-300"></span>
          Creative telemetry
        </span>
        <span>Live snapshot</span>
      </header>
      <dl class="grid gap-3 text-sm">
        <div class="rounded-2xl border border-white/15 bg-white/10 px-4 py-3">
          <dt class="text-xs font-semibold uppercase tracking-wide text-white/60">Words drafted</dt>
          <dd class="mt-1 text-2xl font-semibold" x-text="story.formatNumber(story.state.metrics.totalWords)"></dd>
        </div>
        <div class="rounded-2xl border border-white/15 bg-white/10 px-4 py-3">
          <dt class="text-xs font-semibold uppercase tracking-wide text-white/60">Active universes</dt>
          <dd class="mt-1 text-2xl font-semibold" x-text="story.state.metrics.activeProjects"></dd>
        </div>
        <div class="rounded-2xl border border-white/15 bg-white/10 px-4 py-3">
          <dt class="text-xs font-semibold uppercase tracking-wide text-white/60">AI assists today</dt>
          <dd class="mt-1 text-2xl font-semibold" x-text="story.state.metrics.aiCallsToday"></dd>
        </div>
        <div class="rounded-2xl border border-white/15 bg-white/10 px-4 py-3">
          <dt class="text-xs font-semibold uppercase tracking-wide text-white/60">Last export</dt>
          <dd class="mt-1 text-base font-semibold" x-text="story.formatRelative(story.state.metrics.lastExportAt)"></dd>
        </div>
      </dl>
    </div>
  </div>
</section>
