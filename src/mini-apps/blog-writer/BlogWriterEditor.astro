---
import Button from "../../components/Button.astro";
---
<section class="space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-2">
    <h2 class="text-lg font-semibold text-slate-900">Draft workspace</h2>
    <p class="text-sm text-slate-600">
      Write in Markdown. The right-hand panel shows SEO and export readiness as you go.
    </p>
  </header>
  <div class="space-y-6">
    <div class="space-y-2">
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Title</label>
      <input
        type="text"
        class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-lg font-semibold text-slate-900 shadow-sm focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-100"
        placeholder="Catchy, scannable headline"
        :value="$store['blog-writer'].builder.record.title"
        @input="$store['blog-writer'].updateTitle($event.target.value)"
      />
    </div>
    <div class="space-y-2">
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Summary</label>
      <textarea
        rows="3"
        class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 shadow-sm focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-100"
        placeholder="Explain the promise and reader outcome"
        x-model="$store['blog-writer'].builder.record.summary"
        @input="$store['blog-writer'].updateSummary($event.target.value)"
      ></textarea>
    </div>
    <div class="space-y-2">
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Tags</label>
      <div class="flex flex-wrap gap-2">
        <template x-for="tag in $store['blog-writer'].builder.record.tags" :key="`tag-${tag}`">
          <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
            <span x-text="tag"></span>
            <button type="button" class="text-indigo-500 hover:text-indigo-700" @click.prevent="$store['blog-writer'].removeTag(tag)">
              <i class="fas fa-times text-[10px]"></i>
            </button>
          </span>
        </template>
        <input
          type="text"
          class="min-w-[140px] flex-1 rounded-full border border-dashed border-indigo-300 bg-white px-3 py-1 text-xs text-slate-600 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-100"
          placeholder="Add tag"
          :value="$store['blog-writer'].builder.newTag"
          @input="$store['blog-writer'].builder.newTag = $event.target.value"
          @keydown.enter.prevent="$store['blog-writer'].addTag($store['blog-writer'].builder.newTag)"
          @blur="$store['blog-writer'].addTag($store['blog-writer'].builder.newTag)"
        />
      </div>
    </div>
    <div class="space-y-2">
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Content</label>
      <textarea
        rows="18"
        class="w-full rounded-3xl border border-slate-200 bg-slate-50 px-4 py-4 text-sm font-mono text-slate-800 shadow-inner focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-100"
        placeholder="# Welcome to your draft\n\nUse Markdown for headings, lists, and code blocks."
        x-model="$store['blog-writer'].builder.record.contentMd"
        @input="$store['blog-writer'].updateContent($event.target.value)"
      ></textarea>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
        <h3 class="text-sm font-semibold text-slate-900">Draft stats</h3>
        <dl class="mt-3 space-y-2 text-sm text-slate-600">
          <div class="flex items-center justify-between">
            <dt>Word count</dt>
            <dd class="font-semibold text-slate-900" x-text="$store['blog-writer'].builder.stats.wordCount"></dd>
          </div>
          <div class="flex items-center justify-between">
            <dt>Estimated reading time</dt>
            <dd class="font-semibold text-slate-900">
              <span x-text="$store['blog-writer'].builder.stats.readingMinutes"></span>
              <span class="ml-1 text-xs text-slate-500">mins</span>
            </dd>
          </div>
          <div class="flex items-center justify-between">
            <dt>Last saved</dt>
            <dd class="font-semibold text-slate-900" x-text="$store['blog-writer'].builder.lastSavedLabel || 'moments ago'"></dd>
          </div>
        </dl>
      </div>
      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
        <h3 class="text-sm font-semibold text-slate-900">Quick actions</h3>
        <div class="mt-3 flex flex-wrap gap-2">
          <Button type="button" size="sm" variant="light" @click.prevent="$store['blog-writer'].rewriteSelection('clarify')">
            <i class="fas fa-highlighter text-xs"></i>
            Clarify selection
          </Button>
          <Button type="button" size="sm" variant="light" @click.prevent="$store['blog-writer'].rewriteSelection('shorten')">
            <i class="fas fa-scissors text-xs"></i>
            Shorten
          </Button>
          <Button type="button" size="sm" variant="light" @click.prevent="$store['blog-writer'].rewriteSelection('expand')">
            <i class="fas fa-chart-line text-xs"></i>
            Expand
          </Button>
          <Button type="button" size="sm" variant="ghost" @click.prevent="$store['blog-writer'].addVersion()">
            <i class="fas fa-bookmark text-xs"></i>
            Save version
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
