---
import Layout from "../../layouts/Layout.astro";
import HeroSection from "../../components/HeroSection.astro";
import SectionHeading from "../../components/SectionHeading.astro";
import PricingTierCard from "../../components/PricingTierCard.astro";
---

<Layout>
  <HeroSection
    eyebrow="Pricing"
    title="Memberships for the Ansiversa mini-app ecosystem"
    description="Every tier unlocks curated experiences crafted by the Ansiversa teamâ€”no app submissions required, just polished tools ready to use."
  />

  <section class="bg-white py-16">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionHeading
        align="center"
        eyebrow="Memberships"
        title="Choose your plan and keep exploring"
        description="Flexible tiers make it easy to start with featured tools, go unlimited with Pro, or lock in annual savings with Elite."
        containerClass="max-w-3xl"
        titleClass="mt-3 text-3xl font-bold tracking-tight sm:text-4xl text-slate-900"
        descriptionClass="mt-4 text-base text-slate-600"
      />
      <div class="mt-12 grid gap-8 md:grid-cols-3">
        <PricingTierCard
          name="Free"
          price="$0"
          priceSuffix="/month"
          description="Explore featured mini-apps with limited usage and starter templates."
          features={[
            'Guided access to Quiz Institute & FlashNote basics',
            'Essential AI prompts and template gallery',
            'Community updates and launch announcements',
          ]}
          ctaLabel="Create free account"
          ctaHref="/app/signup"
        />
        <PricingTierCard
          name="Pro"
          price="$10"
          priceSuffix="/month"
          description="Unlock the full Ansiversa library with unlimited sessions and premium templates."
          features={[
            'Full catalog access across every mini-app',
            'Advanced AI drafting & content refinement tools',
            'Priority feature updates and roadmap previews',
          ]}
          ctaLabel="Upgrade to Pro"
          ctaHref="/app/signup"
          featured
        />
        <PricingTierCard
          name="Elite"
          price="$50"
          priceSuffix="/year"
          description="Save annually and be first to experience new releases and seasonal drops."
          features={[
            'Everything in Pro, billed once per year',
            'Early access to upcoming mini-apps and betas',
            'Exclusive themes, content packs, and launch webinars',
          ]}
          ctaLabel="Go Elite (annual)"
          ctaHref="/app/signup"
        />
      </div>
    </div>
  </section>
</Layout>
