---
import { Fragment } from "astro/jsx-runtime";
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/Button.astro";
import DataGrid from "../../../components/DataGrid.astro";

const roleColumns = [
  {
    key: "name",
    label: "Role",
    sortable: true,
    sortKey: "name",
    filter: { type: "text", key: "name", placeholder: "Role name" },
  },
  {
    key: "userCount",
    label: "Users",
    sortable: true,
    sortKey: "userCount",
    align: "center",
    widthClass: "w-32",
  },
  {
    key: "id",
    label: "Role ID",
    sortable: true,
    sortKey: "id",
    align: "center",
    widthClass: "w-24",
  },
];
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="py-4" x-data="{ roles: $store.roles }" x-init="roles.onInit()">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <h2 class="mt-3 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Roles</h2>
            <p class="mt-1 text-sm text-slate-600">
              Review and manage access roles available within the application.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="roles.loadRoles()"
              x-bind:disabled="roles.loading"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3.5 w-3.5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.181a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.181"
                />
              </svg>
              Refresh
            </Button>
            <template x-if="roles.hasActiveFilters">
              <Button type="button" size="sm" variant="ghost" x-on:click="roles.clearFilters()">
                Clear filters
              </Button>
            </template>
          </div>
        </div>

        <div class="mt-10">
          <DataGrid
            columns={roleColumns}
            rowsVar="roles.roles"
            loadingVar="roles.loading"
            errorVar="roles.error"
            filtersVar="roles.filters"
            hasFiltersVar="roles.hasActiveFilters"
            sortStateVar="roles.sort"
            onSort="roles.setSort"
            onFilterChange="roles.onFilterChange"
            onPageSizeChange="roles.setPageSize"
            onPrevPage="roles.prevPage"
            onNextPage="roles.nextPage"
            onSetPage="roles.setPage"
            onFirstPage="roles.firstPage"
            onLastPage="roles.lastPage"
            pageSizeVar="roles.pageSize"
            pageSizeOptions={[10, 20, 30, 40, 50]}
            pageVar="roles.page"
            pageNumbersVar="roles.pageNumbers"
            totalVar="roles.totalItems"
            totalPagesVar="roles.totalPages"
            emptyMessage="No roles found."
            filteredEmptyMessage="No roles match the current filters."
          >
            <Fragment slot="body">
              <template x-for="item in roles.roles" :key="item.id">
                <tr class="transition hover:bg-slate-50">
                  <td class="px-3 py-3 align-top">
                    <div class="flex flex-col gap-1">
                      <span class="font-semibold text-slate-900" x-text="item.name"></span>
                      <span class="text-xs text-slate-500" x-text="'Role ID: ' + item.id"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3 text-center align-top">
                    <span class="inline-flex items-center justify-center gap-2 rounded-lg bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-600">
                      <i class="fas fa-users text-[10px]"></i>
                      <span x-text="Intl.NumberFormat().format(item.userCount)"></span>
                    </span>
                  </td>
                  <td class="px-3 py-3 text-center align-top">
                    <span class="text-sm text-slate-700" x-text="item.id"></span>
                  </td>
                </tr>
              </template>
            </Fragment>
          </DataGrid>
        </div>
      </div>
    </section>
  </main>
</Layout>
