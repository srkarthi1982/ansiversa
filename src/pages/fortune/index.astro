---
import Layout from '../../layouts/Layout.astro';
import FortuneHero from './components/FortuneHero.astro';
import FortunePreviewHub from './components/FortunePreviewHub.astro';
import FortunePersonalization from './components/FortunePersonalization.astro';
import FortuneThemes from './components/FortuneThemes.astro';
import FortunePlanGating from './components/FortunePlanGating.astro';
import FortuneSafety from './components/FortuneSafety.astro';
import FortuneRoadmap from './components/FortuneRoadmap.astro';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#fortune-preview"
  >
    Skip to preview
  </a>
  <main
    class="min-h-screen bg-slate-50"
    x-data="() => ({ fortune: $store.fortuneOracle })"
    x-init="fortune.init()"
  >
    <FortuneHero />
    <FortunePreviewHub />
    <FortunePersonalization />
    <FortuneThemes />
    <FortunePlanGating />
    <FortuneSafety />
    <FortuneRoadmap />
  </main>
</Layout>
