<section class="bg-slate-950 py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8" x-data="() => ({ scanner: Alpine.store('smartTextbookScanner') })">
    <header class="flex flex-col gap-4 lg:flex-row lg:items-end lg:justify-between">
      <div>
        <p class="text-sm font-semibold uppercase tracking-wide text-indigo-300">Plans and limits</p>
        <h2 class="mt-2 text-3xl font-bold text-white sm:text-4xl">Scale from classroom handouts to full textbooks</h2>
        <p class="mt-3 max-w-2xl text-sm text-indigo-100 sm:text-base">
          Free handles quick chapter scans with markdown and PDF exports. Pro unlocks larger jobs, premium exports, integrations,
          and unlimited retention.
        </p>
      </div>
      <div class="rounded-2xl border border-emerald-400/40 bg-emerald-400/10 p-4 text-sm text-indigo-100">
        <p class="font-semibold text-white">Upgrade benefits</p>
        <p class="mt-1 text-xs text-indigo-200">Full LaTeX, integrations, and 12 daily export jobs for power users.</p>
      </div>
    </header>
    <div class="mt-10 overflow-hidden rounded-3xl border border-white/10">
      <table class="min-w-full divide-y divide-white/10 text-left text-sm text-indigo-100">
        <thead class="bg-white/5 text-xs uppercase tracking-wide text-indigo-200">
          <tr>
            <th scope="col" class="px-6 py-3 font-semibold">Feature</th>
            <th scope="col" class="px-6 py-3 font-semibold">Free</th>
            <th scope="col" class="px-6 py-3 font-semibold">Pro</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <template x-for="row in scanner.planComparison" :key="row.feature">
            <tr class="bg-white/5 odd:bg-white/0">
              <td class="px-6 py-4 text-sm font-semibold text-white" x-text="row.feature"></td>
              <td class="px-6 py-4 text-sm text-indigo-100" x-text="row.free"></td>
              <td class="px-6 py-4 text-sm text-indigo-100" x-text="row.pro"></td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
  </div>
</section>
