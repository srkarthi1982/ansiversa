---
import SectionHeading from "../../../components/SectionHeading.astro";
import { integrations, automationFlows } from "../data/notesSummarizerData";
---
<section class="bg-slate-900 py-16 text-white sm:py-20" aria-labelledby="notes-summarizer-integrations">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Connected workspaces"
      title="Hand off insights in one click"
      description="Push action items to Meeting Minutes AI, convert bullets into FlashNote cards, and enrich Research Assistant evidence boards without copy-paste."
      id="notes-summarizer-integrations"
      variant="light"
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="grid gap-4 sm:grid-cols-3">
        {integrations.map((integration) => (
          <article
            key={integration.title}
            class="rounded-3xl border border-white/10 bg-white/5 p-6 text-slate-200 shadow-lg backdrop-blur transition hover:border-emerald-200/80 hover:bg-emerald-500/10"
          >
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-emerald-500/20 text-emerald-200">
              <i class={`${integration.icon} text-sm`}></i>
            </span>
            <h3 class="mt-3 text-base font-semibold text-white">{integration.title}</h3>
            <p class="mt-2 text-sm text-slate-300">{integration.description}</p>
          </article>
        ))}
      </div>
      <div class="space-y-5 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-xl backdrop-blur">
        <h3 class="text-lg font-semibold text-white">Automation recipes</h3>
        <p class="text-sm text-slate-300">
          Orchestrate summaries with downstream tools using secure webhooks, queued exports, and event triggers.
        </p>
        <ul class="space-y-4 text-sm text-slate-200">
          {automationFlows.map((flow) => (
            <li key={flow.title} class="rounded-2xl border border-white/10 bg-slate-900/70 p-4">
              <p class="font-semibold text-white">{flow.title}</p>
              <p class="text-xs text-slate-300">{flow.description}</p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
