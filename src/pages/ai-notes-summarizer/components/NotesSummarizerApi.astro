---
import SectionHeading from "../../../components/SectionHeading.astro";
import { apiContracts } from "../data/notesSummarizerData";
---
<section class="bg-white py-16 sm:py-20" aria-labelledby="notes-summarizer-api">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="API contract"
      title="Server endpoints for ingestion, summarization, and exports"
      description="Each endpoint validates plan limits and returns structured payloads ready for downstream automations."
      id="notes-summarizer-api"
    />
    <div class="mt-10 grid gap-4">
      {apiContracts.map((contract) => (
        <article
          key={contract.path}
          class="flex flex-col gap-3 rounded-3xl border border-slate-200 bg-slate-50 p-6 text-slate-700 shadow-sm"
        >
          <div class="flex flex-wrap items-center gap-3 text-sm font-semibold text-indigo-700">
            <span class="rounded-full bg-indigo-100 px-3 py-1 uppercase tracking-wide">{contract.method}</span>
            <code class="rounded-full bg-slate-900 px-3 py-1 text-xs font-semibold text-white">{contract.path}</code>
          </div>
          <p class="text-sm text-slate-600">{contract.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
