---
import SectionHeading from "../../../components/SectionHeading.astro";
import { workflowSteps } from "../data/notesSummarizerData";
---
<section class="bg-slate-50 py-16 sm:py-20" aria-labelledby="notes-summarizer-workflow">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Orchestrated pipeline"
      title="Guided workflow from ingest to distribution"
      description="We keep status, validations, and audit trails visible across every step so teams can trust the output."
      id="notes-summarizer-workflow"
    />
    <div class="mt-12 grid gap-8 lg:grid-cols-4">
      {workflowSteps.map((step, index) => (
        <article
          key={step.step}
          class="relative flex flex-col gap-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm"
        >
          <span class="flex h-12 w-12 items-center justify-center rounded-full text-lg font-semibold"
            class:list={{
              'bg-indigo-600 text-white shadow-lg shadow-indigo-500/30': index === 0,
              'bg-indigo-50 text-indigo-700': index !== 0,
            }}
          >
            {step.step}
          </span>
          <h3 class="text-lg font-semibold text-slate-900">{step.title}</h3>
          <p class="text-sm text-slate-600">{step.description}</p>
          <div class="mt-auto text-xs font-semibold uppercase tracking-wide text-indigo-600">
            {index === 0 ? 'Upload and tagging' : index === 1 ? 'Modes and tones' : index === 2 ? 'Editor and diff' : 'Exports and syncs'}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
