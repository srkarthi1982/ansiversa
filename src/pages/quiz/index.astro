---
import Layout from "../../layouts/Layout.astro";
import { db, Result, Platform, Subject, Topic, Roadmap, eq, desc } from "astro:db";

const highlights = [
  {
    title: "Curated subjects",
    description: "Quickly dive into subjects that are ready to challenge your knowledge, from coding concepts to general trivia.",
    icon: "fas fa-layer-group",
  },
  {
    title: "Progressive difficulty",
    description: "Each platform is designed to scale with you, introducing harder questions as you improve.",
    icon: "fas fa-chart-line",
  },
  {
    title: "Instant feedback",
    description: "Learn as you go with immediate feedback that helps reinforce the correct answer right away.",
    icon: "fas fa-bolt",
  },
];

const user = Astro.locals.user ?? undefined;
const isAdmin = user?.roleId === 1;

type ActivityEntry = {
  id: number;
  mark: number;
  totalQuestions: number;
  level: string | null;
  platformName: string;
  subjectName: string;
  topicName: string;
  roadmapName: string;
  createdAtISO: string;
  createdAtLabel: string;
};

const recentActivities: ActivityEntry[] = [];

if (user) {
  const rows = await db
    .select({
      id: Result.id,
      mark: Result.mark,
      level: Result.level,
      responses: Result.responses,
      createdAt: Result.createdAt,
      platformName: Platform.name,
      subjectName: Subject.name,
      topicName: Topic.name,
      roadmapName: Roadmap.name,
    })
    .from(Result)
    .leftJoin(Platform, eq(Result.platformId, Platform.id))
    .leftJoin(Subject, eq(Result.subjectId, Subject.id))
    .leftJoin(Topic, eq(Result.topicId, Topic.id))
    .leftJoin(Roadmap, eq(Result.roadmapId, Roadmap.id))
    .where(eq(Result.userId, user.id))
    .orderBy(desc(Result.createdAt))
    .limit(4);

  const formatter = new Intl.DateTimeFormat("en-US", { dateStyle: "medium", timeStyle: "short" });

  rows.forEach((row) => {
    const responses = Array.isArray(row.responses) ? row.responses : [];
    const createdAtRaw = row.createdAt instanceof Date ? row.createdAt : new Date(row.createdAt ?? Date.now());
    recentActivities.push({
      id: Number(row.id),
      mark: typeof row.mark === "number" ? row.mark : Number(row.mark ?? 0),
      totalQuestions: responses.length,
      level: typeof row.level === "string" ? row.level : null,
      platformName: row.platformName ?? "—",
      subjectName: row.subjectName ?? "—",
      topicName: row.topicName ?? "—",
      roadmapName: row.roadmapName ?? "—",
      createdAtISO: createdAtRaw.toISOString(),
      createdAtLabel: formatter.format(createdAtRaw),
    });
  });
}
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="relative overflow-hidden py-4 sm:py-8">
      <div class="absolute inset-0 -z-10 bg-gradient-to-br from-indigo-100 via-white to-transparent pointer-events-none"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid items-center gap-10 lg:grid-cols-[1.1fr_0.9fr]">
          <div class="text-center lg:text-left space-y-6">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-star text-xs"></i>
              New quiz experiences
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Discover quiz platforms that make learning feel effortless
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Explore a growing collection of interactive quizzes tailored for different learning journeys. Whether you are brushing up on fundamentals or mastering advanced topics, start with a platform that matches your pace.
            </p>
            <div class="flex flex-wrap items-center justify-center gap-3 lg:justify-start">
              <a
                href="/quiz/test"
                class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-700"
              >
                <i class="fas fa-play text-xs"></i>
                Get started
              </a>
              {isAdmin && (
                <a
                  href="/quiz/admin"
                  class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-6 py-2.5 text-sm font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800"
                >
                  <i class="fas fa-sliders-h text-xs"></i>
                  Admin dashboard
                </a>
              )}
            </div>
          </div>
          <div class="flex items-center justify-center">
            <div class="grid w-full max-w-md gap-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-lg">
              <h2 class="text-lg font-semibold text-slate-900">What you can expect</h2>
              <ul class="grid gap-4">
                {highlights.map((item) => (
                  <li class="flex items-start gap-3 rounded-2xl bg-slate-50 p-4">
                    <span class="flex h-10 w-10 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
                      <i class={`${item.icon} text-sm`}></i>
                    </span>
                    <div class="space-y-1">
                      <p class="text-sm font-semibold text-slate-900">{item.title}</p>
                      <p class="text-sm text-slate-600">{item.description}</p>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    {user && (
      <section class="border-t border-slate-200 bg-white py-8">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 space-y-8">
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <h2 class="text-2xl font-semibold text-slate-900">Your recent activity</h2>
              <p class="text-sm text-slate-500">A quick look at the latest quizzes you have completed.</p>
            </div>
            <a
              href="/quiz/results"
              class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800"
            >
              <i class="fas fa-arrow-right text-xs"></i>
              View all results
            </a>
          </div>

          {recentActivities.length > 0 ? (
            <div class="grid gap-4 lg:grid-cols-2">
              {recentActivities.map((activity) => (
                <article class="flex flex-col justify-between gap-4 rounded-2xl border border-slate-200 bg-slate-50 p-5 shadow-sm">
                  <div class="flex flex-wrap items-center justify-between gap-3">
                    <div class="space-y-1">
                      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Attempt #{activity.id}</p>
                      <h3 class="text-lg font-semibold text-slate-900">
                        <span class="text-indigo-600" aria-hidden="true">{activity.mark}</span>
                        <span class="text-slate-500"> / {activity.totalQuestions || 0}</span>
                      </h3>
                      <p class="text-xs text-slate-500">Taken on <time datetime={activity.createdAtISO}>{activity.createdAtLabel}</time></p>
                    </div>
                    <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-3 py-1 text-xs font-semibold text-indigo-600">
                      <i class="fas fa-signal text-[10px]"></i>
                      <span>{activity.level ?? "—"}</span>
                    </span>
                  </div>

                  <dl class="grid gap-3 text-sm text-slate-600 sm:grid-cols-2">
                    <div class="flex flex-col">
                      <dt class="font-semibold text-slate-500">Platform</dt>
                      <dd class="mt-0.5">{activity.platformName}</dd>
                    </div>
                    <div class="flex flex-col">
                      <dt class="font-semibold text-slate-500">Subject</dt>
                      <dd class="mt-0.5">{activity.subjectName}</dd>
                    </div>
                    <div class="flex flex-col">
                      <dt class="font-semibold text-slate-500">Topic</dt>
                      <dd class="mt-0.5">{activity.topicName}</dd>
                    </div>
                    <div class="flex flex-col">
                      <dt class="font-semibold text-slate-500">Roadmap</dt>
                      <dd class="mt-0.5">{activity.roadmapName}</dd>
                    </div>
                  </dl>

                  <div class="flex items-center justify-end">
                    <a
                      href="/quiz/results"
                      class="inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 transition hover:text-indigo-700"
                    >
                      Review attempt
                      <i class="fas fa-arrow-right text-xs"></i>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-10 text-center text-sm text-slate-500">
              No activity yet. Take your first quiz to see it appear here.
            </div>
          )}
        </div>
      </section>
    )}

  </main>
</Layout>
