---
import { Fragment } from "astro/jsx-runtime";
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/Button.astro";
import Modal from "../../../components/Modal.astro";
import DataGrid from "../../../components/DataGrid.astro";

const roadmapColumns = [
  {
    key: "name",
    label: "Roadmap",
    sortable: true,
    sortKey: "name",
    filter: { type: "text", key: "name", placeholder: "Name" },
  },
  {
    key: "topic",
    label: "Topic",
    sortable: true,
    sortKey: "topicName",
    filter: {
      type: "number",
      key: "topicId",
      placeholder: "Topic ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "subject",
    label: "Subject",
    sortable: true,
    sortKey: "subjectName",
    filter: {
      type: "number",
      key: "subjectId",
      placeholder: "Subject ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "platform",
    label: "Platform",
    sortable: true,
    sortKey: "platformName",
    filter: {
      type: "number",
      key: "platformId",
      placeholder: "Platform ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "qCount",
    label: "Questions",
    sortable: true,
    sortKey: "qCount",
    align: "right",
    filter: {
      type: "number-range",
      minKey: "minQuestions",
      maxKey: "maxQuestions",
      minPlaceholder: "Min",
      maxPlaceholder: "Max",
    },
  },
  {
    key: "status",
    label: "Status",
    sortable: true,
    sortKey: "status",
    align: "center",
    widthClass: "w-16",
    filter: {
      type: "select",
      key: "status",
      options: [
        { label: "All", value: "all" },
        { label: "✓", value: "active" },
        { label: "✕", value: "inactive" },
      ],
    },
  },
  {
    key: "actions",
    label: "Actions",
    filter: {
      type: "button",
      label: "Clear",
      onClick: "roadmaps.clearFilters()",
    },
  },
];
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="py-4" x-data="{ roadmaps: $store.roadmaps }" x-init="roadmaps.onInit()">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <h2 class="mt-3 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
              Roadmaps
            </h2>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <div class="rounded-full border border-slate-200 bg-white px-4 py-2 text-xs font-semibold text-slate-600">
              <span class="text-slate-400">Total:</span>
              <span class="ml-2 text-slate-900" x-text="Intl.NumberFormat().format(roadmaps.totalItems)"></span>
            </div>
            <template x-if="roadmaps.totalItems > 0">
              <div class="rounded-full border border-slate-200 bg-white px-4 py-2 text-xs font-semibold text-slate-600">
                <span class="text-slate-400">Showing</span>
                <span
                  class="ml-2 text-slate-900"
                  x-text="`${Intl.NumberFormat().format((roadmaps.page - 1) * roadmaps.pageSize + 1)}-${Intl.NumberFormat().format(Math.min(roadmaps.page * roadmaps.pageSize, roadmaps.totalItems))}`"
                ></span>
              </div>
            </template>
            <Button
              type="button"
              size="sm"
              x-on:click="roadmaps.openCreateModal()"
              x-bind:disabled="roadmaps.loading || roadmaps.mutating"
            >
              <i class="fas fa-plus text-sm"></i>
              Add roadmap
            </Button>
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="roadmaps.loadRoadmaps()"
              x-bind:disabled="roadmaps.loading || roadmaps.mutating"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.181a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.181" />
              </svg>
              Refresh
            </Button>
          </div>
        </div>

        <Modal
          size="md"
          x-show="roadmaps.showModal"
          x-on:keydown.escape.window="roadmaps.closeModal()"
          x-on:modal-close="roadmaps.closeModal()"
        >
          <template slot="title">
            <div class="flex items-center justify-between gap-3">
              <h2 class="text-lg font-semibold text-slate-900" x-text="roadmaps.isEditMode ? 'Update roadmap' : 'Add a new roadmap'"></h2>
              <template x-if="roadmaps.isEditMode">
                <span
                  class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600"
                >
                  <span>ID</span>
                  <span class="text-slate-900" x-text="roadmaps.editingId ?? ''"></span>
                </span>
              </template>
            </div>
          </template>
          <form id="roadmap-form" class="grid gap-4" x-on:submit.prevent="roadmaps.submitModal()">
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Platform ID</span>
              <input
                type="text"
                inputmode="numeric"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="roadmaps.form.platformId"
                x-bind:disabled="roadmaps.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Subject ID</span>
              <input
                type="text"
                inputmode="numeric"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="roadmaps.form.subjectId"
                x-bind:disabled="roadmaps.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Topic ID</span>
              <input
                type="text"
                inputmode="numeric"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="roadmaps.form.topicId"
                x-bind:disabled="roadmaps.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Name</span>
              <input
                type="text"
                placeholder="Roadmap name"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="roadmaps.form.name"
                x-bind:disabled="roadmaps.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Question count</span>
              <input
                type="number"
                min="0"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.number="roadmaps.form.qCount"
                x-bind:disabled="roadmaps.mutating"
              />
            </label>
            <label class="inline-flex items-center gap-2 text-xs font-semibold text-slate-600">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border border-slate-300 text-indigo-600 focus:ring-indigo-500 disabled:cursor-not-allowed"
                x-model="roadmaps.form.isActive"
                x-bind:disabled="roadmaps.mutating"
              />
              <span>Roadmap is active</span>
            </label>
          </form>
          <div slot="footer" class="flex w-full items-center justify-end gap-3">
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="roadmaps.closeModal()"
              x-bind:disabled="roadmaps.mutating"
            >
              Cancel
            </Button>
            <Button
              type="submit"
              form="roadmap-form"
              size="sm"
              x-bind:disabled="roadmaps.mutating"
            >
              <i class="fas fa-save text-sm"></i>
              <span x-text="roadmaps.isEditMode ? 'Save changes' : 'Save roadmap'"></span>
            </Button>
          </div>
        </Modal>

        <div class="mt-10">
          <DataGrid
            columns={roadmapColumns}
            rowsVar="roadmaps.roadmaps"
            loadingVar="roadmaps.loading"
            errorVar="roadmaps.error"
            filtersVar="roadmaps.filters"
            hasFiltersVar="roadmaps.hasActiveFilters"
            sortStateVar="roadmaps.sort"
            onSort="roadmaps.setSort"
            onFilterChange="roadmaps.onFilterChange"
            onPageSizeChange="roadmaps.setPageSize"
            onPrevPage="roadmaps.prevPage"
            onNextPage="roadmaps.nextPage"
            onSetPage="roadmaps.setPage"
            onFirstPage="roadmaps.firstPage"
            onLastPage="roadmaps.lastPage"
            pageSizeVar="roadmaps.pageSize"
            pageSizeOptions={[10, 20, 30, 40]}
            pageVar="roadmaps.page"
            pageNumbersVar="roadmaps.pageNumbers"
            totalVar="roadmaps.totalItems"
            totalPagesVar="roadmaps.totalPages"
            emptyMessage="No roadmaps available yet."
            filteredEmptyMessage="No roadmaps match the current filters."
          >
            <Fragment slot="body">
              <template x-for="roadmap in roadmaps.roadmaps" :key="roadmap.id">
                <tr class="transition hover:bg-slate-50">
                  <td class="px-3 py-3">
                    <div
                      class="relative"
                      x-data="{ open: false }"
                      x-on:click.away="open = false"
                      x-on:keydown.escape.stop="open = false"
                    >
                      <Button
                        type="button"
                        variant="ghost"
                        size="sm"
                        x-on:click="open = !open"
                        x-bind:disabled="roadmaps.loading || roadmaps.mutating"
                        aria-label="Roadmap actions"
                      >
                        <i class="fas fa-ellipsis-v text-sm"></i>
                      </Button>
                      <div
                        x-cloak
                        x-show="open"
                        x-transition
                        class="absolute left-full top-0 z-20 mt-0 ml-3 w-40 rounded-lg border border-slate-200 bg-white p-1 shadow-lg"
                      >
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          x-on:click="open = false; roadmaps.openEditModal(roadmap)"
                          x-bind:disabled="roadmaps.loading || roadmaps.mutating"
                        >
                          Edit
                        </Button>
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          class="text-rose-600 hover:bg-rose-50"
                          x-on:click="open = false; roadmaps.deleteRoadmap(roadmap.id)"
                          x-bind:disabled="roadmaps.loading || roadmaps.mutating"
                        >
                          Delete
                        </Button>
                      </div>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-semibold text-slate-900" x-text="roadmap.name"></span>
                      <span class="text-xs text-slate-500" x-text="`ID: ${roadmap.id}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="roadmap.topicName || 'Unknown topic'"></span>
                      <span class="text-xs text-slate-500" x-text="`Topic ID: ${roadmap.topicId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="roadmap.subjectName || 'Unknown subject'"></span>
                      <span class="text-xs text-slate-500" x-text="`Subject ID: ${roadmap.subjectId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="roadmap.platformName || 'Unassigned platform'"></span>
                      <span class="text-xs text-slate-500" x-text="`Platform ID: ${roadmap.platformId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3 text-right">
                    <span class="inline-flex items-center gap-2 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-700">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5h-.75A2.25 2.25 0 0 0 5.25 6.75v12a.75.75 0 0 0 .75.75h12a.75.75 0 0 0 .75-.75v-12a2.25 2.25 0 0 0-2.25-2.25H15" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 3.75v1.5M15 3.75v1.5M5.25 9h13.5" />
                      </svg>
                      <span x-text="new Intl.NumberFormat().format(roadmap.qCount ?? 0)"></span>
                    </span>
                  </td>
                  <td class="px-3 py-3 text-center">
                    <span
                      class="inline-flex h-7 w-7 items-center justify-center rounded-full border text-sm font-semibold"
                      :class="roadmap.isActive ? 'border-emerald-200 bg-emerald-50 text-emerald-600' : 'border-rose-200 bg-rose-50 text-rose-600'"
                      x-text="roadmap.isActive ? '✓' : '✕'"
                    ></span>
                  </td>
                </tr>
              </template>
            </Fragment>
          </DataGrid>
        </div>
      </div>
    </section>
  </main>
</Layout>
