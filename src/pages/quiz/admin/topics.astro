---
import { Fragment } from "astro/jsx-runtime";
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/Button.astro";
import Modal from "../../../components/Modal.astro";
import DataGrid from "../../../components/DataGrid.astro";

const topicColumns = [
  {
    key: "name",
    label: "Topic",
    sortable: true,
    sortKey: "name",
    filter: { type: "text", key: "name", placeholder: "Name" },
  },
  {
    key: "subject",
    label: "Subject",
    sortable: true,
    sortKey: "subjectName",
    filter: {
      type: "number",
      key: "subjectId",
      placeholder: "Subject ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "platform",
    label: "Platform",
    sortable: true,
    sortKey: "platformName",
    filter: {
      type: "number",
      key: "platformId",
      placeholder: "Platform ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "qCount",
    label: "Questions",
    sortable: true,
    sortKey: "qCount",
    align: "right",
    filter: {
      type: "number-range",
      minKey: "minQuestions",
      maxKey: "maxQuestions",
      minPlaceholder: "Min",
      maxPlaceholder: "Max",
    },
  },
  {
    key: "status",
    label: "Status",
    sortable: true,
    sortKey: "status",
    align: "center",
    widthClass: "w-16",
    filter: {
      type: "select",
      key: "status",
      options: [
        { label: "All", value: "all" },
        { label: "✓", value: "active" },
        { label: "✕", value: "inactive" },
      ],
    },
  },
  {
    key: "actions",
    label: "Actions",
    filter: {
      type: "button",
      label: "Clear",
      onClick: "topics.clearFilters()",
    },
  },
];
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="py-4" x-data="{ topics: $store.topics }" x-init="topics.onInit()">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <h2 class="mt-3 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
              Topics
            </h2>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <Button
              type="button"
              size="sm"
              x-on:click="topics.openCreateModal()"
              x-bind:disabled="topics.loading || topics.mutating"
            >
              <i class="fas fa-plus text-sm"></i>
              Add topic
            </Button>
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="topics.loadTopics()"
              x-bind:disabled="topics.loading || topics.mutating"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.181a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.181" />
              </svg>
              Refresh
            </Button>
          </div>
        </div>

        <Modal
          size="md"
          x-show="topics.showModal"
          x-on:keydown.escape.window="topics.closeModal()"
          x-on:modal-close="topics.closeModal()"
        >
          <template slot="title">
            <div class="flex items-center justify-between gap-3">
              <h2 class="text-lg font-semibold text-slate-900" x-text="topics.isEditMode ? 'Update topic' : 'Add a new topic'"></h2>
              <template x-if="topics.isEditMode">
                <span
                  class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600"
                >
                  <span>ID</span>
                  <span class="text-slate-900" x-text="topics.editingId ?? ''"></span>
                </span>
              </template>
            </div>
          </template>
          <form id="topic-form" class="grid gap-4" x-on:submit.prevent="topics.submitModal()">
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Platform ID</span>
              <input
                type="text"
                inputmode="numeric"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="topics.form.platformId"
                x-bind:disabled="topics.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Subject ID</span>
              <input
                type="text"
                inputmode="numeric"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="topics.form.subjectId"
                x-bind:disabled="topics.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Name</span>
              <input
                type="text"
                placeholder="Topic name"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="topics.form.name"
                x-bind:disabled="topics.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Question count</span>
              <input
                type="number"
                min="0"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.number="topics.form.qCount"
                x-bind:disabled="topics.mutating"
              />
            </label>
            <label class="inline-flex items-center gap-2 text-xs font-semibold text-slate-600">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border border-slate-300 text-indigo-600 focus:ring-indigo-500 disabled:cursor-not-allowed"
                x-model="topics.form.isActive"
                x-bind:disabled="topics.mutating"
              />
              <span>Topic is active</span>
            </label>
          </form>
          <div slot="footer" class="flex w-full items-center justify-end gap-3">
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="topics.closeModal()"
              x-bind:disabled="topics.mutating"
            >
              Cancel
            </Button>
            <Button
              type="submit"
              form="topic-form"
              size="sm"
              x-bind:disabled="topics.mutating"
            >
              <i class="fas fa-save text-sm"></i>
              <span x-text="topics.isEditMode ? 'Save changes' : 'Save topic'"></span>
            </Button>
          </div>
        </Modal>

        <div class="mt-10">
          <DataGrid
            columns={topicColumns}
            rowsVar="topics.topics"
            loadingVar="topics.loading"
            errorVar="topics.error"
            filtersVar="topics.filters"
            hasFiltersVar="topics.hasActiveFilters"
            sortStateVar="topics.sort"
            onSort="topics.setSort"
            onFilterChange="topics.onFilterChange"
            onPageSizeChange="topics.setPageSize"
            onPrevPage="topics.prevPage"
            onNextPage="topics.nextPage"
            onSetPage="topics.setPage"
            onFirstPage="topics.firstPage"
            onLastPage="topics.lastPage"
            pageSizeVar="topics.pageSize"
            pageSizeOptions={[10, 20, 30, 40]}
            pageVar="topics.page"
            pageNumbersVar="topics.pageNumbers"
            totalVar="topics.totalItems"
            totalPagesVar="topics.totalPages"
            emptyMessage="No topics available yet."
            filteredEmptyMessage="No topics match the current filters."
          >
            <Fragment slot="body">
              <template x-for="topic in topics.topics" :key="topic.id">
                <tr class="transition hover:bg-slate-50">
                  <td class="px-3 py-3">
                    <div
                      class="relative"
                      x-data="{ open: false }"
                      x-on:click.away="open = false"
                      x-on:keydown.escape.stop="open = false"
                    >
                      <Button
                        type="button"
                        variant="ghost"
                        size="sm"
                        x-on:click="open = !open"
                        x-bind:disabled="topics.loading || topics.mutating"
                        aria-label="Topic actions"
                      >
                        <i class="fas fa-ellipsis-v text-sm"></i>
                      </Button>
                      <div
                        x-cloak
                        x-show="open"
                        x-transition
                        class="absolute left-full top-0 z-20 mt-0 ml-3 w-40 rounded-lg border border-slate-200 bg-white p-1 shadow-lg"
                      >
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          x-on:click="open = false; topics.openEditModal(topic)"
                          x-bind:disabled="topics.loading || topics.mutating"
                        >
                          Edit
                        </Button>
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          x-on:click="open = false; topics.deleteTopic(topic.id)"
                          x-bind:disabled="topics.loading || topics.mutating"
                        >
                          Delete
                        </Button>
                      </div>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-semibold text-slate-900" x-text="topic.name"></span>
                      <span class="text-xs text-slate-500" x-text="`ID: ${topic.id}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="topic.subjectName || 'Unknown subject'"></span>
                      <span class="text-xs text-slate-500" x-text="`Subject ID: ${topic.subjectId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="topic.platformName || 'Unassigned platform'"></span>
                      <span class="text-xs text-slate-500" x-text="`Platform ID: ${topic.platformId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3 text-right">
                    <span class="inline-flex items-center gap-2 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-700">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5h-.75A2.25 2.25 0 0 0 5.25 6.75v12a.75.75 0 0 0 .75.75h12a.75.75 0 0 0 .75-.75v-12a2.25 2.25 0 0 0-2.25-2.25H15" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 3.75v1.5M15 3.75v1.5M5.25 9h13.5" />
                      </svg>
                      <span x-text="new Intl.NumberFormat().format(topic.qCount ?? 0)"></span>
                    </span>
                  </td>
                  <td class="px-3 py-3 text-center">
                    <span
                      class="inline-flex h-7 w-7 items-center justify-center rounded-full border text-sm font-semibold"
                      :class="topic.isActive ? 'border-emerald-200 bg-emerald-50 text-emerald-600' : 'border-rose-200 bg-rose-50 text-rose-600'"
                      x-text="topic.isActive ? '✓' : '✕'"
                    ></span>
                  </td>
                </tr>
              </template>
            </Fragment>
          </DataGrid>
        </div>
      </div>
    </section>
  </main>
</Layout>
