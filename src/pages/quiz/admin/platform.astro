---
import { Fragment } from "astro/jsx-runtime";
import Layout from "../../../layouts/Layout.astro";
import Modal from "../../../components/Modal.astro";
import DataGrid from "../../../components/DataGrid.astro";

const platformColumns = [
  {
    key: "name",
    label: "Platform",
    sortable: true,
    sortKey: "name",
    filter: { type: "text", key: "name", placeholder: "Filter name" },
  },
  {
    key: "description",
    label: "Description",
    sortable: true,
    sortKey: "description",
    filter: { type: "text", key: "description", placeholder: "Filter description" },
  },
  {
    key: "type",
    label: "Type",
    sortable: true,
    sortKey: "type",
    filter: { type: "text", key: "type", placeholder: "Filter type" },
  },
  {
    key: "qCount",
    label: "Questions",
    sortable: true,
    sortKey: "qCount",
    align: "right",
    filter: {
      type: "number-range",
      minKey: "minQuestions",
      maxKey: "maxQuestions",
      minPlaceholder: "Min",
      maxPlaceholder: "Max",
    },
  },
  {
    key: "status",
    label: "Status",
    sortable: true,
    sortKey: "status",
    filter: {
      type: "select",
      key: "status",
      options: [
        { label: "All", value: "all" },
        { label: "Active", value: "active" },
        { label: "Inactive", value: "inactive" },
      ],
    },
  },
  {
    key: "actions",
    label: "Actions",
    align: "right",
    filter: {
      type: "button",
      label: "Clear",
      onClick: "quiz.clearFilters()",
    },
  },
];
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="py-4" x-data="{ quiz: $store.quiz }">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <h2 class="mt-3 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
              Platforms
            </h2>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <button
              type="button"
              class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-xs font-semibold text-white shadow-sm transition hover:bg-indigo-700 disabled:cursor-not-allowed disabled:bg-indigo-400"
              x-on:click="quiz.openCreateModal()"
              x-bind:disabled="quiz.loading || quiz.mutating"
            >
              <i class="fas fa-plus text-sm"></i>
              Add platform
            </button>
            <button
              type="button"
              class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800 disabled:cursor-not-allowed disabled:opacity-60"
              x-on:click="quiz.loadPlatforms()"
              x-bind:disabled="quiz.loading || quiz.mutating"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.181a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.181" />
              </svg>
              Refresh
            </button>
          </div>
        </div>

        <Modal
          size="lg"
          x-show="quiz.showCreateModal"
          x-on:keydown.escape.window="quiz.closeCreateModal()"
          x-on:modal-close="quiz.closeCreateModal()"
        >
          <template slot="title">
            <h2 class="text-lg font-semibold text-slate-900">Add a new platform</h2>
          </template>
          <form id="create-platform-form" class="grid gap-4 sm:grid-cols-2" x-on:submit.prevent="quiz.createPlatform()">
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Name</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder="Platform name"
                x-model.trim="quiz.newPlatform.name"
                x-bind:disabled="quiz.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Icon classes</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder="e.g. fas fa-rocket"
                x-model.trim="quiz.newPlatform.icon"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="sm:col-span-2 flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Description</span>
              <textarea
                class="min-h-[96px] rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder="Short summary that appears on the card"
                x-model.trim="quiz.newPlatform.description"
                x-bind:disabled="quiz.mutating"
              ></textarea>
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Type</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder="Optional category"
                x-model.trim="quiz.newPlatform.type"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Question count</span>
              <input
                type="number"
                min="0"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder="0"
                x-model.number="quiz.newPlatform.qCount"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="sm:col-span-2 inline-flex items-center gap-2 text-xs font-semibold text-slate-600">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border border-slate-300 text-indigo-600 focus:ring-indigo-500 disabled:cursor-not-allowed"
                x-model="quiz.newPlatform.isActive"
                x-bind:disabled="quiz.mutating"
              />
              <span>Platform is active</span>
            </label>
          </form>
          <div slot="footer" class="flex w-full items-center justify-end gap-3">
            <button
              type="button"
              class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800 disabled:cursor-not-allowed disabled:opacity-60"
              x-on:click="quiz.closeCreateModal()"
              x-bind:disabled="quiz.mutating"
            >
              Cancel
            </button>
            <button
              type="submit"
              form="create-platform-form"
              class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-xs font-semibold text-white shadow-sm transition hover:bg-indigo-700 disabled:cursor-not-allowed disabled:bg-indigo-400"
              x-bind:disabled="quiz.mutating"
            >
              <i class="fas fa-save text-sm"></i>
              Save platform
            </button>
          </div>
        </Modal>

        <Modal
          size="lg"
          x-show="quiz.showEditModal"
          x-on:keydown.escape.window="quiz.closeEditModal()"
          x-on:modal-close="quiz.closeEditModal()"
        >
          <template slot="title">
            <div class="flex items-center justify-between gap-3">
              <h2 class="text-lg font-semibold text-slate-900">Update platform</h2>
              <span
                class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600"
              >
                <span>ID</span>
                <span class="text-slate-900" x-text="quiz.editingId ?? ''"></span>
              </span>
            </div>
          </template>
          <form id="edit-platform-form" class="grid gap-4 sm:grid-cols-2" x-on:submit.prevent="quiz.saveEdit()">
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Name</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="quiz.editPlatform.name"
                x-bind:disabled="quiz.mutating"
                required
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Icon classes</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="quiz.editPlatform.icon"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="sm:col-span-2 flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Description</span>
              <textarea
                class="min-h-[96px] rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="quiz.editPlatform.description"
                x-bind:disabled="quiz.mutating"
              ></textarea>
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Type</span>
              <input
                type="text"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="quiz.editPlatform.type"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Question count</span>
              <input
                type="number"
                min="0"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.number="quiz.editPlatform.qCount"
                x-bind:disabled="quiz.mutating"
              />
            </label>
            <label class="sm:col-span-2 inline-flex items-center gap-2 text-xs font-semibold text-slate-600">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border border-slate-300 text-indigo-600 focus:ring-indigo-500 disabled:cursor-not-allowed"
                x-model="quiz.editPlatform.isActive"
                x-bind:disabled="quiz.mutating"
              />
              <span>Platform is active</span>
            </label>
          </form>
          <div slot="footer" class="flex w-full items-center justify-end gap-3">
            <button
              type="button"
              class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800 disabled:cursor-not-allowed disabled:opacity-60"
              x-on:click="quiz.closeEditModal()"
              x-bind:disabled="quiz.mutating"
            >
              Cancel
            </button>
            <button
              type="submit"
              form="edit-platform-form"
              class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-xs font-semibold text-white shadow-sm transition hover:bg-indigo-700 disabled:cursor-not-allowed disabled:bg-indigo-400"
              x-bind:disabled="quiz.mutating"
            >
              <i class="fas fa-save text-sm"></i>
              Save changes
            </button>
          </div>
        </Modal>

        <div class="mt-10">
          <DataGrid
            columns={platformColumns}
            rowsVar="quiz.platforms"
            loadingVar="quiz.loading"
            errorVar="quiz.error"
            filtersVar="quiz.filters"
            hasFiltersVar="quiz.hasActiveFilters"
            sortStateVar="quiz.sort"
            onSort="quiz.setSort"
            onFilterChange="quiz.onFilterChange"
            onPageSizeChange="quiz.setPageSize"
            onPrevPage="quiz.prevPage"
            onNextPage="quiz.nextPage"
            onSetPage="quiz.setPage"
            pageSizeVar="quiz.pageSize"
            pageSizeOptions={[6, 12, 24, 48]}
            pageVar="quiz.page"
            pageNumbersVar="quiz.pageNumbers"
            totalVar="quiz.totalItems"
            totalPagesVar="quiz.totalPages"
            emptyMessage="No platforms available yet."
            filteredEmptyMessage="No platforms match the current filters."
          >
            <Fragment slot="body">
              <template x-for="platform in quiz.platforms" :key="platform.id">
                <tr class="transition hover:bg-slate-50">
                  <td class="px-4 py-4">
                    <div class="flex items-center gap-3">
                      <div class="flex h-11 w-11 items-center justify-center rounded-xl bg-indigo-50 text-indigo-600">
                        <template x-if="(platform.icon || '').trim() !== ''">
                          <i class="fas text-lg" :class="platform.icon"></i>
                        </template>
                        <template x-if="!(platform.icon || '').trim()">
                          <i class="fas fa-times text-lg"></i>
                        </template>
                      </div>
                      <div class="flex flex-col">
                        <span class="font-semibold text-slate-900" x-text="platform.name"></span>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 align-top">
                    <p class="max-w-xs text-sm text-slate-600" x-text="platform.description || 'No description provided.'"></p>
                  </td>
                  <td class="px-4 py-4 align-top">
                    <span
                      class="inline-flex items-center gap-2 rounded-full border border-sky-200 bg-sky-50 px-3 py-1 text-xs font-semibold text-sky-600"
                      x-text="platform.type ? `Type ${platform.type}` : 'Uncategorized'"
                    ></span>
                  </td>
                  <td class="px-4 py-4 text-right align-top">
                    <span class="inline-flex items-center gap-2 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-700">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5h-.75A2.25 2.25 0 0 0 5.25 6.75v12a.75.75 0 0 0 .75.75h12a.75.75 0 0 0 .75-.75v-12a2.25 2.25 0 0 0-2.25-2.25H15" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 3.75v1.5M15 3.75v1.5M5.25 9h13.5" />
                      </svg>
                      <span x-text="`${new Intl.NumberFormat().format(platform.qCount ?? 0)} questions`"></span>
                    </span>
                  </td>
                  <td class="px-4 py-4 align-top">
                    <span
                      class="inline-flex items-center gap-2 rounded-full border px-3 py-1 text-xs font-semibold"
                      :class="platform.isActive ? 'border-emerald-200 bg-emerald-50 text-emerald-600' : 'border-slate-200 bg-slate-100 text-slate-500'"
                    >
                      <span class="h-2 w-2 rounded-full" :class="platform.isActive ? 'bg-emerald-500' : 'bg-slate-400'"></span>
                      <span x-text="platform.isActive ? 'Active' : 'Inactive'"></span>
                    </span>
                  </td>
                  <td class="px-4 py-4 text-right align-top">
                    <div class="flex justify-end gap-2">
                      <button
                        type="button"
                        class="inline-flex items-center justify-center rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-800 disabled:cursor-not-allowed disabled:opacity-60"
                        x-on:click="quiz.openEditModal(platform)"
                        x-bind:disabled="quiz.loading || quiz.mutating"
                        aria-label="Edit platform"
                      >
                        <i class="fas fa-pen text-sm"></i>
                      </button>
                      <button
                        type="button"
                        class="inline-flex items-center justify-center rounded-full border border-red-200 px-3 py-1 text-xs font-semibold text-red-600 transition hover:border-red-300 hover:text-red-700 disabled:cursor-not-allowed disabled:opacity-60"
                        x-on:click="quiz.deletePlatform(platform.id)"
                        x-bind:disabled="quiz.loading || quiz.mutating"
                        aria-label="Delete platform"
                      >
                        <i class="fas fa-trash text-sm"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              </template>
            </Fragment>
          </DataGrid>
        </div>
      </div>
    </section>
  </main>
</Layout>
