---
import { Fragment } from "astro/jsx-runtime";
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/Button.astro";
import Modal from "../../../components/Modal.astro";
import DataGrid from "../../../components/DataGrid.astro";

const questionColumns = [
  {
    key: "questionText",
    label: "Question",
    sortable: true,
    sortKey: "questionText",
    filter: { type: "text", key: "questionText", placeholder: "Search" },
  },
  {
    key: "topic",
    label: "Topic",
    sortable: true,
    sortKey: "topicName",
    filter: {
      type: "number",
      key: "topicId",
      placeholder: "Topic ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "subject",
    label: "Subject",
    sortable: true,
    sortKey: "subjectName",
    filter: {
      type: "number",
      key: "subjectId",
      placeholder: "Subject ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "platform",
    label: "Platform",
    sortable: true,
    sortKey: "platformName",
    filter: {
      type: "number",
      key: "platformId",
      placeholder: "Platform ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "roadmap",
    label: "Roadmap",
    sortable: true,
    sortKey: "roadmapName",
    filter: {
      type: "number",
      key: "roadmapId",
      placeholder: "Roadmap ID",
      attributes: { inputmode: "numeric" },
    },
  },
  {
    key: "difficulty",
    label: "Difficulty",
    sortable: true,
    sortKey: "difficulty",
    filter: { type: "text", key: "difficulty", placeholder: "Difficulty" },
  },
  {
    key: "questionType",
    label: "Type",
    sortable: true,
    sortKey: "questionType",
    filter: { type: "text", key: "questionType", placeholder: "Type" },
  },
  {
    key: "status",
    label: "Status",
    sortable: true,
    sortKey: "status",
    align: "center",
    widthClass: "w-16",
    filter: {
      type: "select",
      key: "status",
      options: [
        { label: "All", value: "all" },
        { label: "✓", value: "active" },
        { label: "✕", value: "inactive" },
      ],
    },
  },
  {
    key: "actions",
    label: "Actions",
    filter: {
      type: "button",
      label: "Clear",
      onClick: "questions.clearFilters()",
    },
  },
];
---
<Layout>
  <main class="bg-slate-50 min-h-screen">
    <section class="py-4" x-data="{ questions: $store.questions }" x-init="questions.onInit()">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <h2 class="mt-3 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
              Questions
            </h2>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <Button
              type="button"
              size="sm"
              x-on:click="questions.openCreateModal()"
              x-bind:disabled="questions.loading || questions.mutating"
            >
              <i class="fas fa-plus text-sm"></i>
              Add question
            </Button>
            <Button
              type="button"
              variant="outline"
              size="sm"
              x-on:click="questions.loadQuestions()"
              x-bind:disabled="questions.loading || questions.mutating"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3.5 w-3.5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.181a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.181"
                />
              </svg>
              Refresh
            </Button>
          </div>
        </div>

        <Modal
          size="lg"
          x-show="questions.showModal"
          x-on:keydown.escape.window="questions.closeModal()"
          x-on:modal-close="questions.closeModal()"
        >
          <template slot="title">
            <div class="flex items-center justify-between gap-3">
              <h2 class="text-lg font-semibold text-slate-900" x-text="questions.isEditMode ? 'Update question' : 'Add a new question'"></h2>
              <template x-if="questions.isEditMode">
                <span
                  class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600"
                >
                  <span>ID</span>
                  <span class="text-slate-900" x-text="questions.editingId ?? ''"></span>
                </span>
              </template>
            </div>
          </template>
          <form id="question-form" class="grid gap-4" x-on:submit.prevent="questions.submitModal()">
            <div class="grid gap-4 sm:grid-cols-2">
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Platform ID</span>
                <input
                  type="text"
                  inputmode="numeric"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.platformId"
                  x-bind:disabled="questions.mutating"
                  required
                />
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Subject ID</span>
                <input
                  type="text"
                  inputmode="numeric"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.subjectId"
                  x-bind:disabled="questions.mutating"
                  required
                />
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Topic ID</span>
                <input
                  type="text"
                  inputmode="numeric"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.topicId"
                  x-bind:disabled="questions.mutating"
                  required
                />
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Roadmap ID (optional)</span>
                <input
                  type="text"
                  inputmode="numeric"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.roadmapId"
                  x-bind:disabled="questions.mutating"
                />
              </label>
            </div>

            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Question text</span>
              <textarea
                rows="4"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model.trim="questions.form.questionText"
                x-bind:disabled="questions.mutating"
                required
              ></textarea>
            </label>

            <div class="grid gap-4 sm:grid-cols-2">
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Options (one per line)</span>
                <textarea
                  rows="4"
                  class="h-full rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model="questions.form.options"
                  x-bind:disabled="questions.mutating"
                ></textarea>
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Explanation</span>
                <textarea
                  rows="4"
                  class="h-full rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model="questions.form.explanation"
                  x-bind:disabled="questions.mutating"
                ></textarea>
              </label>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Answer</span>
                <input
                  type="text"
                  placeholder="Correct answer"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.answer"
                  x-bind:disabled="questions.mutating"
                />
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Answer key</span>
                <input
                  type="text"
                  placeholder="Reference key"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.answerKey"
                  x-bind:disabled="questions.mutating"
                />
              </label>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Difficulty</span>
                <input
                  type="text"
                  placeholder="e.g. Beginner"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.difficulty"
                  x-bind:disabled="questions.mutating"
                />
              </label>
              <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
                <span>Question type</span>
                <input
                  type="text"
                  placeholder="e.g. Multiple choice"
                  class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                  x-model.trim="questions.form.questionType"
                  x-bind:disabled="questions.mutating"
                />
              </label>
            </div>

            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Tags (comma separated)</span>
              <input
                type="text"
                placeholder="e.g. anatomy, cardiology"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                x-model="questions.form.tags"
                x-bind:disabled="questions.mutating"
              />
            </label>

            <label class="flex flex-col gap-1 text-xs font-semibold text-slate-600">
              <span>Metadata (JSON object)</span>
              <textarea
                rows="4"
                class="rounded-lg border border-slate-200 px-3 py-2 text-sm font-normal text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 disabled:cursor-not-allowed disabled:bg-slate-100"
                placeholder='{"source": "quiz"}'
                x-model="questions.form.metadata"
                x-bind:disabled="questions.mutating"
              ></textarea>
            </label>

            <label class="flex items-center gap-2 text-xs font-semibold text-slate-600">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                x-model="questions.form.isActive"
                x-bind:disabled="questions.mutating"
              />
              <span>Active</span>
            </label>

            <div class="flex items-center justify-end gap-3">
              <Button
                type="button"
                variant="ghost"
                size="sm"
                x-on:click="questions.closeModal()"
                x-bind:disabled="questions.mutating"
              >
                Cancel
              </Button>
              <Button
                type="submit"
                size="sm"
                x-bind:disabled="questions.mutating"
              >
                <span x-text="questions.isEditMode ? 'Save changes' : 'Save question'"></span>
              </Button>
            </div>
          </form>
        </Modal>

        <div class="mt-8">
          <DataGrid
            id="questions-grid"
            columns={questionColumns}
            rowsVar="questions.questions"
            loadingVar="questions.loading"
            errorVar="questions.error"
            filtersVar="questions.filters"
            hasFiltersVar="questions.hasActiveFilters"
            sortStateVar="questions.sort"
            onSort="questions.setSort"
            onFilterChange="questions.onFilterChange"
            onPageSizeChange="questions.setPageSize"
            onPrevPage="questions.prevPage"
            onNextPage="questions.nextPage"
            onSetPage="questions.setPage"
            onFirstPage="questions.firstPage"
            onLastPage="questions.lastPage"
            pageSizeVar="questions.pageSize"
            pageSizeOptions={[10, 20, 30, 50]}
            pageVar="questions.page"
            pageNumbersVar="questions.pageNumbers"
            totalVar="questions.totalItems"
            totalPagesVar="questions.totalPages"
            emptyMessage="No questions available yet."
            filteredEmptyMessage="No questions match the current filters."
          >
            <Fragment slot="body">
              <template x-for="question in questions.questions" :key="question.id">
                <tr class="transition hover:bg-slate-50">
                  <td class="px-3 py-3">
                    <div
                      class="relative"
                      x-data="{ open: false }"
                      x-on:click.away="open = false"
                      x-on:keydown.escape.stop="open = false"
                    >
                      <Button
                        type="button"
                        variant="ghost"
                        size="sm"
                        x-on:click="open = !open"
                        x-bind:disabled="questions.loading || questions.mutating"
                        aria-label="Question actions"
                      >
                        <i class="fas fa-ellipsis-v text-sm"></i>
                      </Button>
                      <div
                        x-cloak
                        x-show="open"
                        x-transition
                        class="absolute left-full top-0 z-20 mt-0 ml-3 w-40 rounded-lg border border-slate-200 bg-white p-1 shadow-lg"
                      >
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          x-on:click="open = false; questions.openEditModal(question)"
                          x-bind:disabled="questions.loading || questions.mutating"
                        >
                          Edit
                        </Button>
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          block
                          class="text-rose-600 hover:bg-rose-50"
                          x-on:click="open = false; questions.deleteQuestion(question.id)"
                          x-bind:disabled="questions.loading || questions.mutating"
                        >
                          Delete
                        </Button>
                      </div>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col gap-2">
                      <div class="flex flex-col gap-1">
                        <span class="text-sm font-semibold text-slate-900" x-text="question.questionText"></span>
                        <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500">
                          <span x-text="`ID: ${question.id}`"></span>
                          <template x-if="question.answer">
                            <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-2 py-0.5 font-semibold text-emerald-600">
                              <i class="fas fa-check text-[10px]"></i>
                              <span x-text="question.answer"></span>
                            </span>
                          </template>
                          <template x-if="question.options?.length">
                            <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-0.5 font-semibold text-slate-600">
                              <i class="fas fa-list-ul text-[10px]"></i>
                              <span x-text="`${question.options.length} options`"></span>
                            </span>
                          </template>
                        </div>
                      </div>
                      <template x-if="question.tags?.length">
                        <div class="flex flex-wrap gap-2">
                          <template x-for="tag in question.tags" :key="`${question.id}-tag-${tag}`">
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-0.5 text-[11px] font-semibold text-indigo-600">
                              <span x-text="`#${tag}`"></span>
                            </span>
                          </template>
                        </div>
                      </template>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="question.topicName || 'Unknown topic'"></span>
                      <span class="text-xs text-slate-500" x-text="`Topic ID: ${question.topicId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="question.subjectName || 'Unknown subject'"></span>
                      <span class="text-xs text-slate-500" x-text="`Subject ID: ${question.subjectId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="question.platformName || 'Unassigned platform'"></span>
                      <span class="text-xs text-slate-500" x-text="`Platform ID: ${question.platformId}`"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <div class="flex flex-col">
                      <span class="font-medium text-slate-800" x-text="question.roadmapName || 'No roadmap'"></span>
                      <span class="text-xs text-slate-500" x-text="question.roadmapId ? `Roadmap ID: ${question.roadmapId}` : 'Optional'"></span>
                    </div>
                  </td>
                  <td class="px-3 py-3">
                    <span
                      class="inline-flex items-center gap-2 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-700"
                    >
                      <i class="fas fa-signal text-[10px]"></i>
                      <span x-text="question.difficulty || 'N/A'"></span>
                    </span>
                  </td>
                  <td class="px-3 py-3">
                    <span
                      class="inline-flex items-center gap-2 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-700"
                    >
                      <i class="fas fa-file-alt text-[10px]"></i>
                      <span x-text="question.questionType || 'N/A'"></span>
                    </span>
                  </td>
                  <td class="px-3 py-3 text-center">
                    <span
                      class="inline-flex h-7 w-7 items-center justify-center rounded-full border text-sm font-semibold"
                      :class="question.isActive ? 'border-emerald-200 bg-emerald-50 text-emerald-600' : 'border-rose-200 bg-rose-50 text-rose-600'"
                      x-text="question.isActive ? '✓' : '✕'"
                    ></span>
                  </td>
                </tr>
              </template>
            </Fragment>
          </DataGrid>
        </div>
      </div>
    </section>
  </main>
</Layout>
