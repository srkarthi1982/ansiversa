---
import SectionHeading from "../../../components/SectionHeading.astro";
import { futureEnhancements } from "../data/researchData";
---
<section class="bg-slate-950 py-16 text-white sm:py-20" aria-labelledby="research-roadmap-title">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Roadmap"
      title="Future enhancements expand research depth"
      description="Upcoming capabilities focus on collaboration, richer media handling, and smarter evidence discovery."
      id="research-roadmap-title"
      class="text-white"
    />
    <div class="grid gap-6 lg:grid-cols-2">
      {futureEnhancements.map((item) => (
        <article class="flex h-full flex-col gap-3 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur" key={item.title}>
          <header class="flex items-start justify-between gap-3">
            <h3 class="text-lg font-semibold text-white">{item.title}</h3>
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-500/20 px-3 py-1 text-xs font-semibold text-indigo-100">
              <i class="fas fa-forward text-[10px]"></i>
              Next
            </span>
          </header>
          <p class="text-sm text-slate-200">{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
