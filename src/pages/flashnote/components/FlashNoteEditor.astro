---
import FlashNoteAIControls from './FlashNoteAIControls.astro';
---
<section
  x-data="() => ({ flashnote: $store.flashnote, tagInput: '' })"
  @keydown.window.prevent="if ((event.metaKey || event.ctrlKey) && event.key === 'Enter') { flashnote.commit(); }"
  class="space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-lg"
>
  <header class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h2 class="text-xl font-semibold text-slate-900">Note editor</h2>
      <p class="text-sm text-slate-500">Title, tag, and refine your note content. Changes are saved manually.</p>
    </div>
    <div class="flex items-center gap-2 text-xs text-slate-500">
      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-medium">
        <span class="h-2 w-2 rounded-full" :class="flashnote.state.loading ? 'bg-amber-500' : 'bg-emerald-500'"></span>
        <span x-text="flashnote.state.loading ? 'Saving…' : 'Synced'"></span>
      </span>
      <button
        type="button"
        class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-3 py-1 font-semibold text-slate-600 hover:border-indigo-200 hover:text-indigo-600"
        @click="flashnote.toggleReview(true)"
      >
        <i class="fas fa-clone text-xs"></i>
        Review mode
      </button>
    </div>
  </header>

  <div class="space-y-4">
    <label class="block">
      <span class="sr-only">Title</span>
      <input
        type="text"
        class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-lg font-semibold text-slate-900 shadow-sm focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-200"
        placeholder="Note title"
        x-model="flashnote.state.draft.title"
      />
    </label>

    <div class="flex flex-wrap items-center gap-3">
      <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-600 focus-within:border-indigo-300 focus-within:bg-white">
        <i class="fas fa-hashtag text-xs"></i>
        <input
          type="text"
          class="w-28 border-none bg-transparent text-sm text-slate-700 placeholder:text-slate-400 focus:outline-none"
          placeholder="Add tag"
          x-model="tagInput"
          @keydown.enter.prevent="flashnote.addTag(tagInput); tagInput = ''"
          @blur="if (tagInput.trim().length) { flashnote.addTag(tagInput); tagInput = '' }"
        />
      </label>
      <template x-for="tag in flashnote.state.draft.tags" :key="`draft-tag-${tag}`">
        <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
          <span x-text="tag"></span>
          <button
            type="button"
            class="text-indigo-500 transition hover:text-indigo-700"
            @click="flashnote.removeTag(tag)"
          >
            <i class="fas fa-xmark text-xs"></i>
          </button>
        </span>
      </template>
    </div>

    <label class="block">
      <span class="sr-only">Content</span>
      <textarea
        rows="10"
        class="w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-700 shadow-sm focus:border-indigo-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-indigo-200"
        placeholder="Write your note in Markdown or plain text..."
        x-model="flashnote.state.draft.content"
      ></textarea>
    </label>
  </div>

  <FlashNoteAIControls />

  <div class="space-y-4">
    <div class="rounded-2xl border border-slate-200 bg-slate-50/70 p-4">
      <h3 class="text-xs font-semibold uppercase tracking-wide text-slate-500">Summary</h3>
      <p class="mt-2 whitespace-pre-line text-sm text-slate-700" x-text="flashnote.state.aiSummary || 'Summaries will appear here after running an AI action.'"></p>
    </div>

    <div class="flex flex-wrap items-center justify-between gap-3">
      <div class="flex items-center gap-3">
        <button
          type="button"
          class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm transition hover:border-rose-200 hover:text-rose-600"
          @click="flashnote.destroy()"
          :disabled="flashnote.state.loading || !flashnote.state.activeNoteId"
        >
          <i class="fas fa-trash text-xs"></i>
          Delete
        </button>
        <button
          type="button"
          class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm transition hover:border-emerald-200 hover:text-emerald-600"
          @click="flashnote.exportSelected([flashnote.state.activeNoteId].filter(Boolean), 'markdown')"
        >
          <i class="fas fa-download text-xs"></i>
          Export Markdown
        </button>
      </div>
      <div class="flex items-center gap-2 text-xs text-slate-500">
        <i class="fas fa-keyboard text-slate-400"></i>
        <span>Use ⌘/Ctrl + Enter to save</span>
      </div>
    </div>
  </div>

  <template x-if="flashnote.state.error">
    <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
      <div class="flex items-start gap-3">
        <i class="fas fa-circle-exclamation mt-1 text-rose-500"></i>
        <div class="space-y-2">
          <p x-text="flashnote.state.error"></p>
          <button
            type="button"
            class="text-xs font-semibold uppercase tracking-wide text-rose-600 hover:underline"
            @click="flashnote.clearError()"
          >
            Dismiss
          </button>
        </div>
      </div>
    </div>
  </template>
</section>
