---
import Layout from "../../layouts/Layout.astro";
import FlashNoteDashboard from "./components/FlashNoteDashboard.astro";
import FlashNoteEditor from "./components/FlashNoteEditor.astro";
import FlashNoteReview from "./components/FlashNoteReview.astro";
import FlashNoteTagFilter from "./components/FlashNoteTagFilter.astro";
import Loader from "./components/Loader.astro";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#flashnote-app"
  >
    Skip to FlashNote workspace
  </a>
  <main
    id="flashnote-app"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ flashnote: $store.flashnote })"
    x-init="flashnote.init()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-highlighter text-xs"></i>
              Lightning study workspace
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              FlashNote
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Capture quick study notes, distill them with AI, and rehearse with a focused flashcard deck in minutes.
            </p>
            <dl class="mt-6 grid gap-4 text-left sm:grid-cols-3">
              <div class="rounded-2xl border border-indigo-100 bg-white/80 p-4 shadow-sm">
                <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-600">Notes ready</dt>
                <dd class="mt-1 text-2xl font-bold text-slate-900" x-text="flashnote.state.notes.length"></dd>
              </div>
              <div class="rounded-2xl border border-indigo-100 bg-white/80 p-4 shadow-sm">
                <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-600">Active tag</dt>
                <dd class="mt-1 text-2xl font-bold text-slate-900" x-text="flashnote.state.filterTag ?? 'All'"></dd>
              </div>
              <div class="rounded-2xl border border-indigo-100 bg-white/80 p-4 shadow-sm">
                <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-600">AI status</dt>
                <dd class="mt-1 text-2xl font-bold text-slate-900" x-text="flashnote.state.aiMode === 'idle' ? 'Ready' : 'Working'"></dd>
              </div>
            </dl>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-40 blur-xl"></div>
            <div class="relative space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <div class="flex items-center justify-between">
                <span class="text-sm font-semibold text-slate-900">Rapid actions</span>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-500">
                  <i class="fas fa-clock text-[10px]"></i>
                  Under 5 minutes
                </span>
              </div>
              <ul class="space-y-2 text-sm text-slate-600">
                <li class="flex items-start gap-3">
                  <i class="fas fa-check text-emerald-500"></i>
                  Autoset sample decks for quick start
                </li>
                <li class="flex items-start gap-3">
                  <i class="fas fa-check text-emerald-500"></i>
                  AI transforms: summarise, simplify, explain, quiz
                </li>
                <li class="flex items-start gap-3">
                  <i class="fas fa-check text-emerald-500"></i>
                  Review mode with keyboard shortcuts
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="relative pb-20">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-[0.6fr_1.1fr_1fr]">
          <FlashNoteTagFilter />
          <FlashNoteDashboard />
          <FlashNoteEditor />
        </div>
      </div>
    </section>
    <FlashNoteReview />
    <Loader />
  </main>
</Layout>
