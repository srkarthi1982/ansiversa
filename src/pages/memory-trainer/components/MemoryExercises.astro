---
import Button from '../../../components/Button.astro';
import SectionHeading from '../../../components/SectionHeading.astro';
---
<section class="relative py-12 sm:py-16">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-10 lg:grid-cols-[0.85fr_1.15fr]">
      <div class="space-y-6">
        <SectionHeading
          eyebrow="Exercise cockpit"
          title="Adaptive drills &amp; quick controls"
          description="Fine-tune difficulty, capture trial outcomes, and queue micro-adjustments without leaving the dashboard."
        />
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <header class="flex items-start justify-between gap-4">
            <div>
              <p class="text-sm font-semibold text-slate-900">Reminder cadence</p>
              <p class="text-xs text-slate-500">Tap days to include them in the daily ping.</p>
            </div>
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
              <i class="fas fa-clock text-[10px]"></i>
              <span x-text="app.state.reminder.time"></span>
            </span>
          </header>
          <div class="mt-5 flex flex-wrap gap-2">
            <template x-for="day in ['Mon','Tue','Wed','Thu','Fri','Sat','Sun']" :key="day">
              <button
                type="button"
                class="rounded-full border px-3 py-1 text-xs font-semibold transition"
                :class="app.state.reminder.days.includes(day)
                  ? 'border-indigo-400 bg-indigo-50 text-indigo-700 shadow-sm'
                  : 'border-slate-200 bg-slate-50 text-slate-500'"
                @click.prevent="app.toggleReminder(day)"
              >
                <span x-text="day"></span>
              </button>
            </template>
          </div>
          <div class="mt-5 flex flex-wrap gap-3 text-xs text-slate-500">
            <div class="flex items-center gap-2">
              <i class="fas fa-globe text-indigo-500"></i>
              <span>Timezone</span>
              <input
                type="text"
                class="w-28 rounded-lg border border-slate-200 px-2 py-1 text-xs text-slate-700 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/40"
                :value="app.state.reminder.timezone"
                @change="app.updateTimezone($event.target.value)"
              />
            </div>
            <div class="flex items-center gap-2">
              <i class="fas fa-bell text-amber-500"></i>
              <span>Ping at</span>
              <input
                type="time"
                class="rounded-lg border border-slate-200 px-2 py-1 text-xs text-slate-700 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/40"
                :value="app.state.reminder.time"
                @change="app.setReminderTime($event.target.value)"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="space-y-5">
        <template x-for="exercise in app.state.exercises" :key="exercise.type">
          <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <div class="flex flex-wrap items-start justify-between gap-4">
              <div>
                <p class="text-sm font-semibold uppercase tracking-wide text-indigo-500" x-text="exercise.mode"></p>
                <h3 class="text-xl font-bold text-slate-900" x-text="exercise.title"></h3>
                <p class="mt-2 text-sm text-slate-600" x-text="exercise.description"></p>
              </div>
              <div class="text-right">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500" x-text="exercise.levelLabel"></p>
                <p class="text-3xl font-bold text-slate-900">
                  <span x-text="exercise.level"></span>
                </p>
                <p class="text-xs text-slate-500">Streak <span x-text="exercise.streak"></span> days</p>
              </div>
            </div>
            <div class="mt-4 grid gap-4 sm:grid-cols-4">
              <div class="rounded-2xl border border-slate-100 bg-slate-50/70 p-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Accuracy</p>
                <p class="mt-1 text-2xl font-bold text-slate-900">
                  <span x-text="Math.round(exercise.accuracy * 100)"></span>%
                </p>
                <p class="text-xs text-slate-500">Best <span x-text="Math.round(exercise.bestAccuracy * 100)"></span>%</p>
              </div>
              <div class="rounded-2xl border border-slate-100 bg-slate-50/70 p-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Response</p>
                <p class="mt-1 text-2xl font-bold text-slate-900">
                  <span x-text="exercise.averageResponseMs"></span>
                  <span class="text-sm text-slate-500">ms</span>
                </p>
                <p class="text-xs text-slate-500">Last <span x-text="exercise.lastReactionMs ?? '—'"></span></p>
              </div>
              <div class="rounded-2xl border border-slate-100 bg-slate-50/70 p-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Badges</p>
                <p class="mt-1 text-sm font-semibold text-indigo-600" x-text="exercise.badges.slice(0, 2).join(' • ') || 'No badges yet'"></p>
                <p class="text-xs text-slate-500">Next: <span x-text="exercise.recommendedNext"></span></p>
              </div>
              <div class="rounded-2xl border border-slate-100 bg-slate-50/70 p-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Actions</p>
                <div class="mt-2 flex flex-wrap gap-2">
                  <Button
                    type="button"
                    size="sm"
                    variant="light"
                    class="border border-slate-200"
                    @click.prevent="app.nudgeExerciseLevel(exercise.type, 1)"
                  >
                    <i class="fas fa-arrow-trend-up text-[10px]"></i>
                  </Button>
                  <Button
                    type="button"
                    size="sm"
                    variant="light"
                    class="border border-slate-200"
                    @click.prevent="app.nudgeExerciseLevel(exercise.type, -1)"
                  >
                    <i class="fas fa-arrow-trend-down text-[10px]"></i>
                  </Button>
                  <Button
                    type="button"
                    size="sm"
                    variant="outline"
                    class="border border-slate-200"
                    @click.prevent="app.recordTrialResult(exercise.type, true, 540)"
                  >
                    <i class="fas fa-circle-check text-[10px]"></i>
                  </Button>
                  <Button
                    type="button"
                    size="sm"
                    variant="outline"
                    class="border border-slate-200"
                    @click.prevent="app.recordTrialResult(exercise.type, false, 920)"
                  >
                    <i class="fas fa-arrows-rotate text-[10px]"></i>
                  </Button>
                </div>
              </div>
            </div>
          </article>
        </template>
      </div>
    </div>
  </div>
</section>
