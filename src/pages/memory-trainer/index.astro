---
import Layout from '../../layouts/Layout.astro';
import MemoryHero from './components/MemoryHero.astro';
import MemoryExercises from './components/MemoryExercises.astro';
import MemoryAnalytics from './components/MemoryAnalytics.astro';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#memory-trainer-app"
  >
    Skip to Memory Trainer workspace
  </a>
  <main
    id="memory-trainer-app"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ app: $store.memoryTrainer })"
    x-init="app.init()"
  >
    <MemoryHero />
    <MemoryExercises />
    <MemoryAnalytics />
  </main>
</Layout>
