---
import Layout from "../layouts/Layout.astro";
import { db, Platform as Platforms } from "astro:db";
const result = await db.select().from(Platforms);
---
<Layout>
  <section class="min-h-screen bg-gray-50 flex flex-col items-center py-16 px-4">
    <div class="w-full max-w-3xl bg-white shadow-lg rounded-2xl p-8">
      <h2 class="text-3xl font-bold text-center text-indigo-600 mb-6">
        Platform List
      </h2>

      <ol class="space-y-3">
        {
          result.map((x, i) => (
            <li
              class="flex items-center gap-3 bg-indigo-50 hover:bg-indigo-100 transition-colors duration-200 rounded-xl p-4"
            >
              <span class="font-medium text-black-800">{i + 1}.</span>
              <span class="font-semibold text-gray-800">{x.name}</span>
            </li>
          ))
        }
      </ol>
    </div>
  </section>
</Layout>