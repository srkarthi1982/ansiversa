---
import SectionHeading from '../../../components/SectionHeading.astro';
import FeatureCard from '../../../components/FeatureCard.astro';
---
<section class="bg-slate-50 py-16" x-data="() => ({ store: $store.triviaArena })">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Power-ups"
      title="Strategic boosts without breaking fairness"
      description="Four balanced power-ups keep gameplay dynamic across Solo, Daily, and Arena modes—each respecting plan limits and anti-cheat rules."
      align="center"
    />
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      <template x-for="power in store.state.powerUps" :key="power.key">
        <FeatureCard
          class="h-full"
          title={power.label}
          description={power.description}
          eyebrow={`Limit: ${power.limit}x`}
        >
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Available plans</p>
          <div class="mt-2 flex flex-wrap gap-2 text-xs">
            <template x-for="plan in power.availableFor" :key="plan">
              <span class="inline-flex items-center gap-1 rounded-full bg-indigo-100 px-3 py-1 font-semibold text-indigo-700">
                <i class="fas fa-crown text-[11px]"></i>
                <span x-text="plan"></span>
              </span>
            </template>
          </div>
          <template x-if="power.key === 'doublePoints'">
            <p class="mt-3 text-xs text-slate-500">
              Doubles post-bonus score and respects streak multipliers. Logged with server timestamp to prevent abuse.
            </p>
          </template>
          <template x-if="power.key === 'hint'">
            <p class="mt-3 text-xs text-slate-500">
              Pulls from explanation metadata and deducts 25 base points—toggled per question to discourage spam.
            </p>
          </template>
        </FeatureCard>
      </template>
    </div>
  </div>
</section>
