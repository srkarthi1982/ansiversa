<section class="bg-slate-100 py-16 text-slate-900" x-data="{ fortune: $store.fortuneOracle }">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Roadmap</h2>
      <p class="mt-3 text-base text-slate-600">
        We already ship the core readings — here’s what we’re polishing next for Fortune Teller across seasons.
      </p>
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-3">
      <template x-for="milestone in fortune.state.roadmap" :key="milestone.title">
        <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-soft">
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500" x-text="milestone.timeframe"></p>
          <h3 class="mt-2 text-lg font-semibold text-slate-900" x-text="milestone.title"></h3>
          <span
            class="mt-2 inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold"
            :class="milestone.status === 'available' ? 'bg-emerald-100 text-emerald-700' : milestone.status === 'in-progress' ? 'bg-amber-100 text-amber-700' : 'bg-slate-200 text-slate-700'"
          >
            <span x-text="milestone.status"></span>
          </span>
          <ul class="mt-4 list-disc space-y-1 pl-5 text-sm text-slate-600">
            <template x-for="item in milestone.items" :key="item">
              <li x-text="item"></li>
            </template>
          </ul>
        </article>
      </template>
    </div>
  </div>
</section>
