---
import Layout from '../../../layouts/Layout.astro';
import { db, Contract, eq } from 'astro:db';
import { ContractClausesSchema, ContractVariablesSchema } from '../../../lib/contract/schema';
import { applyVariablesToClauses } from '../../../lib/contract/utils';

const slug = Astro.params.slug;
const rows = await db.select().from(Contract).where(eq(Contract.slug, slug));
const record = rows[0];

if (!record || record.status !== 'published') {
  Astro.response.status = 404;
}

const variables = record ? ContractVariablesSchema.parse(record.variables ?? {}) : ContractVariablesSchema.parse({});
const clauses = record ? ContractClausesSchema.parse(record.clauses ?? {}) : ContractClausesSchema.parse({});
const preview = applyVariablesToClauses(clauses, variables);
const title = record?.title ?? 'Contract';
const lastUpdated = record?.lastSavedAt?.toISOString?.() ?? record?.createdAt?.toISOString?.() ?? null;
---
<Layout>
  <main class="bg-slate-100 py-16">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      {record && record.status === 'published' ? (
        <article class="rounded-3xl border border-slate-200 bg-white shadow-xl">
          <header class="rounded-t-3xl bg-slate-900 px-8 py-10 text-white">
            <p class="text-xs uppercase tracking-[0.2em] text-white/70">Agreement</p>
            <h1 class="mt-2 text-3xl font-bold">{title}</h1>
            <p class="mt-2 text-sm text-white/80">
              Between {variables.ProviderName ?? 'Provider'} and {variables.ClientName ?? 'Client'}
            </p>
            {lastUpdated ? (
              <p class="mt-2 text-xs text-white/60">Last updated {new Date(lastUpdated).toLocaleString()}</p>
            ) : null}
          </header>
          <div class="space-y-10 px-8 py-10 text-sm leading-relaxed text-slate-700">
            <section class="space-y-3">
              <h2 class="text-lg font-semibold text-slate-900">Preamble</h2>
              <p>{preview.preamble}</p>
            </section>
            <section class="space-y-3">
              <h2 class="text-lg font-semibold text-slate-900">Services</h2>
              <p>{preview.services}</p>
            </section>
            <section class="space-y-3">
              <h2 class="text-lg font-semibold text-slate-900">Deliverables</h2>
              <p>{preview.deliverables}</p>
            </section>
            <section class="space-y-3">
              <h2 class="text-lg font-semibold text-slate-900">Payment terms</h2>
              <p>
                Fee: <strong>{variables.Currency ?? ''} {variables.ServiceFee ?? ''}</strong>
                {' '}({variables.PaymentSchedule ?? 'Schedule to be agreed'})
              </p>
              <p>{preview.payment}</p>
              <p>{preview.expenses}</p>
            </section>
            <section class="grid gap-6 lg:grid-cols-2">
              <div class="space-y-3">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Intellectual property</h3>
                <p>{preview.intellectual_property}</p>
              </div>
              <div class="space-y-3">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Confidentiality</h3>
                <p>{preview.confidentiality}</p>
              </div>
            </section>
            <section class="grid gap-6 lg:grid-cols-2">
              <div class="space-y-3">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Liability</h3>
                <p>{preview.liability}</p>
              </div>
              <div class="space-y-3">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Termination</h3>
                <p>{preview.termination}</p>
              </div>
            </section>
            <section class="space-y-3">
              <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Dispute resolution</h3>
              <p>{preview.dispute_resolution}</p>
              <p>{preview.governing_law}</p>
            </section>
            <section class="space-y-3">
              <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Signatures</h3>
              <p>{preview.signatures}</p>
              <div class="grid gap-4 md:grid-cols-2">
                <div class="rounded-2xl border border-dashed border-slate-200 p-4">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Client</p>
                  <p class="mt-6 h-8 border-b border-slate-200"></p>
                  <p class="mt-2 text-xs text-slate-500">{variables.ClientName}</p>
                </div>
                <div class="rounded-2xl border border-dashed border-slate-200 p-4">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Provider</p>
                  <p class="mt-6 h-8 border-b border-slate-200"></p>
                  <p class="mt-2 text-xs text-slate-500">{variables.ProviderName}</p>
                </div>
              </div>
            </section>
            <footer class="rounded-2xl border border-amber-200 bg-amber-50 px-4 py-3 text-xs text-amber-700">
              Ansiversa is not a law firm. This document is provided for information only. Seek qualified legal counsel before signing.
            </footer>
          </div>
        </article>
      ) : (
        <div class="rounded-3xl border border-dashed border-slate-300 bg-white p-12 text-center text-slate-600">
          <i class="fas fa-circle-exclamation text-3xl text-slate-300"></i>
          <h2 class="mt-4 text-xl font-semibold text-slate-900">Contract not available</h2>
          <p class="mt-2 text-sm">This link is inactive or the contract is no longer published.</p>
        </div>
      )}
    </div>
  </main>
</Layout>
