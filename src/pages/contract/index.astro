---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#contract-dashboard"
  >
    Skip to contract workspace
  </a>
  <main
    id="contract-dashboard"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ contract: $store.contract })"
    x-init="contract.initDashboard()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-50 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-4 py-1.5 text-sm font-semibold text-emerald-700">
              <i class="fas fa-scale-balanced text-xs"></i>
              Contract workspace with AI drafting
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Generate agreements that clients can sign off with confidence
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Start from ready-made templates, capture variables with a guided wizard, and export polished agreements in minutes.
              Clause suggestions and AI assistants keep your documents sharp and consistent.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button type="button" @click.prevent="$store.contract.createDraft()">
                <i class="fas fa-plus text-xs"></i>
                New contract
              </Button>
              <Button href="/contract/wizard" variant="outline">
                <i class="fas fa-magic text-xs"></i>
                Guided wizard
              </Button>
              <Button href="/contract/templates" variant="ghost">
                <i class="fas fa-layer-group text-xs"></i>
                Templates
              </Button>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-emerald-200 opacity-40 blur-xl"></div>
            <div class="relative rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <header class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-slate-900">Snapshot</h2>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <i class="fas fa-circle-dot text-[10px]" :class="contract.builder.hasUnsavedChanges ? 'text-amber-500' : 'text-emerald-500'"></i>
                  <span x-text="contract.builder.hasUnsavedChanges ? 'Unsaved edits' : 'Workspace ready'"></span>
                </span>
              </header>
              <dl class="mt-6 grid gap-4 sm:grid-cols-2">
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Contracts</dt>
                  <dd class="mt-2 flex items-end gap-2 text-2xl font-semibold text-slate-900">
                    <span x-text="contract.state.contracts.length"></span>
                    <span class="text-xs font-medium text-slate-500">total</span>
                  </dd>
                </div>
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Published links</dt>
                  <dd class="mt-2 flex items-end gap-2 text-2xl font-semibold text-slate-900">
                    <span x-text="contract.state.contracts.filter(c => c.status === 'published').length"></span>
                    <span class="text-xs font-medium text-slate-500">live</span>
                  </dd>
                </div>
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4 sm:col-span-2">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Last autosave</dt>
                  <dd class="mt-2 text-sm font-semibold text-slate-900" x-text="contract.builder.lastSavedLabel ?? '—'"></dd>
                </div>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-8 px-4 sm:px-6 lg:px-8">
        <header class="flex flex-wrap items-center justify-between gap-4">
          <div class="space-y-1">
            <h2 class="text-2xl font-semibold text-slate-900">Your contracts</h2>
            <p class="text-sm text-slate-600">
              Duplicate previous work, publish shareable links, or export PDF/DOCX copies for signature.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter template</span>
              <i class="fas fa-filter text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="contract.state.filters.template"
                @change="contract.applyFilters()"
              >
                <option value="all">All templates</option>
                <template x-for="template in contract.templates" :key="template.key">
                  <option :value="template.key" x-text="template.label"></option>
                </template>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter status</span>
              <i class="fas fa-traffic-light text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="contract.state.filters.status"
                @change="contract.applyFilters()"
              >
                <option value="all">All statuses</option>
                <option value="draft">Draft</option>
                <option value="published">Published</option>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Search contracts</span>
              <i class="fas fa-search text-xs"></i>
              <input
                type="search"
                placeholder="Search party or title"
                class="w-40 bg-transparent text-sm focus:outline-none"
                x-model="contract.state.filters.search"
                @input.debounce.300ms="contract.applyFilters()"
              />
            </label>
          </div>
        </header>

        <div class="grid gap-6 lg:grid-cols-2">
          <template x-if="contract.state.loading">
            <div class="lg:col-span-2 grid gap-6 sm:grid-cols-2">
              <template x-for="placeholder in 4" :key="`contract-skeleton-${placeholder}`">
                <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                  <div class="space-y-3">
                    <div class="h-6 w-40 rounded bg-slate-200"></div>
                    <div class="h-4 w-32 rounded bg-slate-100"></div>
                    <div class="h-[72px] rounded bg-slate-50"></div>
                  </div>
                  <div class="mt-6 flex items-center justify-between">
                    <div class="h-6 w-24 rounded-full bg-slate-100"></div>
                    <div class="h-10 w-28 rounded-full bg-slate-200"></div>
                  </div>
                </article>
              </template>
            </div>
          </template>

          <template x-if="!contract.state.loading && contract.state.filtered.length === 0">
            <div class="lg:col-span-2 rounded-2xl border border-dashed border-slate-200 bg-white p-12 text-center">
              <i class="fas fa-file-contract text-3xl text-slate-300"></i>
              <h3 class="mt-4 text-lg font-semibold text-slate-900">No contracts yet</h3>
              <p class="mt-2 text-sm text-slate-600">
                Create your first contract to unlock versioning, exports, and shareable links.
              </p>
              <div class="mt-4 flex justify-center">
                <Button type="button" @click.prevent="$store.contract.createDraft()">
                  <i class="fas fa-plus text-xs"></i>
                  Create contract
                </Button>
              </div>
            </div>
          </template>

          <template x-for="contractItem in contract.state.filtered" :key="contractItem.id">
            <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-slate-900" x-text="contractItem.title"></h3>
                  <span
                    class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold"
                    :class="contractItem.status === 'published' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600'"
                  >
                    <i class="fas" :class="contractItem.status === 'published' ? 'fa-earth-asia' : 'fa-pen-to-square'"></i>
                    <span x-text="contractItem.status === 'published' ? 'Published' : 'Draft'"></span>
                  </span>
                </div>
                <p class="text-sm text-slate-600" x-text="$store.contract.describe(contractItem)"></p>
                <div class="rounded-2xl bg-slate-50 px-4 py-3 text-xs text-slate-500">
                  <span class="font-semibold">Template:</span>
                  <span x-text="$store.contract.templateLabel(contractItem.templateKey)"></span>
                </div>
              </div>
              <div class="mt-6 flex flex-wrap items-center justify-between gap-3">
                <div class="text-xs text-slate-500">
                  <span class="font-semibold">Updated</span>
                  <span x-text="contractItem.lastSavedAt ? contract.formatRelative(contractItem.lastSavedAt) : '—'"></span>
                </div>
                <div class="flex flex-wrap items-center gap-2">
                  <Button
                    type="button"
                    variant="ghost"
                    class="min-w-[104px]"
                    @click.prevent="window.location.assign(`/contract/builder?id=${contractItem.id}`)"
                  >
                    <i class="fas fa-folder-open text-xs"></i>
                    Open
                  </Button>
                  <Button
                    type="button"
                    variant="ghost"
                    class="min-w-[120px]"
                    @click.prevent="$store.contract.duplicate(contractItem.id)"
                  >
                    <i class="fas fa-copy text-xs"></i>
                    Duplicate
                  </Button>
                  <Button
                    type="button"
                    variant="ghost"
                    class="min-w-[110px] text-red-600 hover:text-red-500"
                    @click.prevent="$store.contract.delete(contractItem.id)"
                  >
                    <i class="fas fa-trash text-xs"></i>
                    Delete
                  </Button>
                </div>
              </div>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
