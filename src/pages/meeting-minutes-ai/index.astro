---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';

const featureHighlights = [
  {
    icon: 'fas fa-waveform-lines',
    title: 'Audio & transcript capture',
    description:
      'Upload MP3, WAV, or M4A recordings and auto-generate diarized transcripts with speaker labels you can edit inline.',
  },
  {
    icon: 'fas fa-wand-magic-sparkles',
    title: 'Structured AI summaries',
    description:
      'One click pulls agenda, key points, decisions, risks, parking lot items, and action items with owners and due dates.',
  },
  {
    icon: 'fas fa-list-check',
    title: 'Action tracker board',
    description:
      'Aggregate tasks across every meeting with filters for status, assignee, meeting, and text search — perfect for follow-ups.',
  },
  {
    icon: 'fas fa-layer-group',
    title: 'Meeting templates',
    description:
      'Start with curated prompts for stand-ups, sprint reviews, client calls, and sales discovery so AI knows what to emphasise.',
  },
  {
    icon: 'fas fa-file-export',
    title: 'Export & share effortlessly',
    description:
      'Publish a polished public recap or export to PDF, DOCX, Markdown, or CSV for delivery to execs, clients, or project tools.',
  },
  {
    icon: 'fas fa-shield-halved',
    title: 'Privacy-first controls',
    description:
      'Keep minutes private by default, enable ephemeral transcripts, and redact sensitive details from public views automatically.',
  },
];

const workflowSteps = [
  {
    name: 'Capture the conversation',
    description:
      'Log the meeting context, attendees, and agenda while you upload audio or jot quick notes.',
  },
  {
    name: 'Transcribe and tidy',
    description:
      'Generate timestamps and speakers automatically, then tweak wording or assign names as needed.',
  },
  {
    name: 'Summarise with AI',
    description:
      'Condense the transcript into highlights, decisions, risks, and accountable action items in a single click.',
  },
  {
    name: 'Share & follow through',
    description:
      'Export branded recaps, publish a read-only link, or monitor tasks inside the global action tracker.',
  },
];

const planComparison = [
  {
    feature: 'Active minutes workspaces',
    free: '5 drafts',
    pro: 'Unlimited',
  },
  {
    feature: 'Audio uploads',
    free: '3 / month · ≤ 30 min each',
    pro: 'Unlimited · ≤ 120 min',
  },
  {
    feature: 'Templates',
    free: 'Daily Stand-up',
    pro: 'Stand-up, Sprint Review, Client Call, Sales Discovery',
  },
  {
    feature: 'Exports',
    free: 'PDF & Markdown (watermark)',
    pro: 'PDF, DOCX, Markdown, CSV (no watermark)',
  },
  {
    feature: 'Public share link',
    free: 'Included',
    pro: 'Included',
  },
  {
    feature: 'Action tracker',
    free: 'Unlimited items',
    pro: 'Unlimited items + CSV export',
  },
];

const apiRoutes = [
  { method: 'POST', path: '/minutes/api/create', description: 'Create a draft workspace and seed template content.' },
  { method: 'POST', path: '/minutes/api/transcribe', description: 'Process audio uploads, diarize speakers, and log duration.' },
  { method: 'POST', path: '/minutes/api/summarize', description: 'Generate structured summaries from transcripts and templates.' },
  { method: 'POST', path: '/minutes/api/save', description: 'Persist edits, attendees, privacy updates, and autosave patches.' },
  { method: 'POST', path: '/minutes/api/export', description: 'Return signed export URLs while enforcing plan limits.' },
  { method: 'POST', path: '/minutes/api/publish', description: 'Validate requirements and mint a shareable public slug.' },
  { method: 'POST', path: '/minutes/api/delete', description: 'Remove minutes, related media, and synced action items.' },
  { method: 'GET', path: '/minutes/api/templates', description: 'Fetch built-in meeting templates for quick onboarding.' },
];

const privacyPoints = [
  {
    title: 'Private by default',
    description: 'Minutes stay in draft until you publish. Even published recaps hide the transcript unless you choose otherwise.',
  },
  {
    title: 'Ephemeral mode',
    description: 'Toggle “Do not retain after summarisation” to purge transcripts once AI output is generated.',
  },
  {
    title: 'Sanitised public view',
    description: 'The `/minutes/view/<slug>` page focuses on summary highlights, tasks, and attendees without exposing raw audio.',
  },
  {
    title: 'Analytics events',
    description: 'Workspace events (create, transcribe, summarise, save, export, publish, delete) are tracked for insight-friendly reporting.',
  },
];
---
<Layout>
  <main class="min-h-screen bg-slate-50">
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-microphone-lines text-xs"></i>
              Career workspace spotlight
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Meeting Minutes AI workspace
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              From upload to polished recap in minutes. Transcribe meetings, generate AI summaries, manage action items, and share read-only links your stakeholders can trust.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button href="/minutes">
                <i class="fas fa-gauge-high text-xs"></i>
                Open workspace
              </Button>
              <Button href="/minutes/builder" variant="outline">
                <i class="fas fa-pen-to-square text-xs"></i>
                Launch builder
              </Button>
              <Button href="/minutes/view/sprint-review-sync-demo" variant="ghost">
                <i class="fas fa-eye text-xs"></i>
                View sample recap
              </Button>
            </div>
            <p class="text-xs text-slate-500">
              Privacy-first by design — enable ephemeral transcripts, redact sensitive data, and publish only when you are ready.
            </p>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-40 blur-xl"></div>
            <div class="relative space-y-5 rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <header class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-semibold text-slate-900">Workspace at a glance</p>
                  <p class="text-xs text-slate-500">Track summaries, attendees, audio uploads, and exports in one hub.</p>
                </div>
                <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                  <i class="fas fa-circle-check text-[10px]"></i>
                  Ready to ship
                </span>
              </header>
              <ul class="space-y-3 text-sm text-slate-600">
                <li class="flex items-start gap-3">
                  <i class="fas fa-waveform-lines mt-1 text-indigo-500"></i>
                  Audio uploads respect plan limits (30 or 120 minutes) and auto-log duration.
                </li>
                <li class="flex items-start gap-3">
                  <i class="fas fa-wand-magic-sparkles mt-1 text-indigo-500"></i>
                  AI pulls agenda, key points, decisions, and tasks you can tweak before sharing.
                </li>
                <li class="flex items-start gap-3">
                  <i class="fas fa-list-check mt-1 text-indigo-500"></i>
                  Global action tracker keeps owners accountable across every recap.
                </li>
                <li class="flex items-start gap-3">
                  <i class="fas fa-file-export mt-1 text-indigo-500"></i>
                  Export branded PDFs, DOCX handoffs, Markdown notes, or CSV task lists instantly.
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="border-y border-slate-200 bg-white py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <header class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900">Why teams rely on Meeting Minutes AI</h2>
          <p class="mt-3 text-base text-slate-600">
            Built with product teams, agencies, and consultants in mind — everything you need to document meetings and keep momentum.
          </p>
        </header>
        <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {featureHighlights.map((feature) => (
            <article class="flex h-full flex-col gap-3 rounded-3xl border border-slate-200 bg-slate-50 p-6 shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:shadow-lg" key={feature.title}>
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
                <i class={feature.icon}></i>
              </div>
              <h3 class="text-lg font-semibold text-slate-900">{feature.title}</h3>
              <p class="text-sm text-slate-600">{feature.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[0.9fr_1.1fr] lg:items-center">
          <div class="space-y-4">
            <span class="inline-flex items-center gap-2 rounded-full bg-slate-200 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600">
              <i class="fas fa-diagram-project text-[10px]"></i>
              End-to-end flow
            </span>
            <h2 class="text-3xl font-bold tracking-tight text-slate-900">A streamlined workflow for every meeting</h2>
            <p class="text-sm text-slate-600">
              No switching tabs or copying data between tools. Meeting Minutes AI guides you from capture to export while autosaving every step.
            </p>
            <Button href="/minutes/actions" variant="outline">
              <i class="fas fa-list-check text-xs"></i>
              Open action tracker
            </Button>
          </div>
          <div class="grid gap-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            {workflowSteps.map((step, index) => (
              <div class="flex gap-4" key={step.name}>
                <span class="mt-1 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-indigo-600 text-sm font-semibold text-white">
                  {index + 1}
                </span>
                <div>
                  <h3 class="text-base font-semibold text-slate-900">{step.name}</h3>
                  <p class="text-sm text-slate-600">{step.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="border-t border-slate-200 bg-white py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-[1.05fr_0.95fr]">
          <div>
            <h2 class="text-3xl font-bold tracking-tight text-slate-900">Plan comparison</h2>
            <p class="mt-3 text-sm text-slate-600">
              Start free with core AI summaries. Upgrade to Pro when you need longer uploads, more templates, and watermark-free exports.
            </p>
            <div class="mt-8 overflow-hidden rounded-3xl border border-slate-200">
              <table class="min-w-full divide-y divide-slate-200 text-left text-sm">
                <thead class="bg-slate-100 text-xs uppercase tracking-wide text-slate-600">
                  <tr>
                    <th scope="col" class="px-4 py-3">Feature</th>
                    <th scope="col" class="px-4 py-3">Free</th>
                    <th scope="col" class="px-4 py-3">Pro</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                  {planComparison.map((row) => (
                    <tr key={row.feature}>
                      <th scope="row" class="px-4 py-4 text-sm font-semibold text-slate-900">{row.feature}</th>
                      <td class="px-4 py-4 text-sm text-slate-600">{row.free}</td>
                      <td class="px-4 py-4 text-sm text-slate-600">{row.pro}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
          <div class="space-y-6">
            <div class="rounded-3xl border border-indigo-200 bg-indigo-50 p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-slate-900">Exports & deliverables</h3>
              <ul class="mt-3 space-y-2 text-sm text-slate-600">
                <li class="flex items-start gap-2">
                  <i class="fas fa-file-pdf text-[13px] text-indigo-500"></i>
                  PDF recaps with brand styling and page numbers.
                </li>
                <li class="flex items-start gap-2">
                  <i class="fas fa-file-word text-[13px] text-indigo-500"></i>
                  DOCX documents ready for stakeholder comments.
                </li>
                <li class="flex items-start gap-2">
                  <i class="fas fa-file-lines text-[13px] text-indigo-500"></i>
                  Markdown notes for wikis or developer handoffs.
                </li>
                <li class="flex items-start gap-2">
                  <i class="fas fa-table text-[13px] text-indigo-500"></i>
                  CSV exports of action items for Jira, Asana, or Sheets.
                </li>
              </ul>
            </div>
            <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-slate-900">API surface</h3>
              <p class="text-xs text-slate-500">All routes are powered by Astro server actions with consistent JSON responses.</p>
              <ul class="mt-4 space-y-3 text-sm text-slate-600">
                {apiRoutes.map((route) => (
                  <li class="rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3" key={`${route.method}-${route.path}`}>
                    <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600">{route.method} {route.path}</p>
                    <p class="mt-1 text-sm text-slate-600">{route.description}</p>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-slate-100 py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-8 lg:grid-cols-[1fr_1fr]">
          <div>
            <h2 class="text-3xl font-bold tracking-tight text-slate-900">Security & privacy commitments</h2>
            <p class="mt-3 text-sm text-slate-600">
              Meeting data belongs to your team. Configure retention the way you need and keep transcripts confidential unless you opt in to sharing.
            </p>
          </div>
          <div class="grid gap-4">
            {privacyPoints.map((item) => (
              <article class="rounded-3xl border border-slate-200 bg-white p-5 shadow-sm" key={item.title}>
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-600">{item.title}</h3>
                <p class="mt-2 text-sm text-slate-600">{item.description}</p>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="mx-auto max-w-4xl rounded-[34px] border border-indigo-200 bg-gradient-to-br from-indigo-500/20 via-sky-500/10 to-purple-500/20 px-6 py-12 text-center shadow-xl backdrop-blur sm:px-12">
        <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Ready when you are</p>
        <h2 class="mt-4 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          Capture every decision and action item with confidence
        </h2>
        <p class="mt-4 text-sm text-slate-600">
          Spin up Meeting Minutes AI today to keep projects aligned, clients informed, and teams accountable.
        </p>
        <div class="mt-6 flex flex-wrap justify-center gap-3">
          <Button href="/minutes">
            <i class="fas fa-rocket text-xs"></i>
            Open workspace
          </Button>
          <Button href="/minutes/templates" variant="outline">
            <i class="fas fa-layer-group text-xs"></i>
            Browse templates
          </Button>
        </div>
      </div>
    </section>
  </main>
</Layout>
