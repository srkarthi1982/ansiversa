---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
---
<Layout>
  <main
    class="min-h-screen bg-slate-50"
    x-data="() => ({ minutes: $store.minutes })"
    x-init="minutes.onInit($el.ownerDocument?.defaultView?.location)"
  >
    <section class="relative overflow-hidden py-16">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
          <div class="space-y-4">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-microphone-lines text-xs"></i>
              Meeting minutes workspace
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Capture meetings, surface decisions, and share polished recaps
            </h1>
            <p class="max-w-2xl text-base text-slate-600 sm:text-lg">
              Upload audio, generate AI summaries, and keep action items organized across every standup, sprint review, and client call.
              Privacy-first mode ensures transcripts are discarded after summarization.
            </p>
            <div class="flex flex-wrap gap-3">
              <Button type="button" @click.prevent="minutes.createDraft()">
                <i class="fas fa-plus text-xs"></i>
                New minutes
              </Button>
              <Button href="/meeting-minutes-ai/builder" variant="outline">
                <i class="fas fa-pen-to-square text-xs"></i>
                Open builder
              </Button>
              <Button href="/meeting-minutes-ai/actions" variant="ghost">
                <i class="fas fa-list-check text-xs"></i>
                Action tracker
              </Button>
            </div>
          </div>
          <aside class="w-full max-w-sm rounded-3xl border border-indigo-100 bg-white/80 p-6 shadow-lg backdrop-blur">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-indigo-600">Workspace snapshot</h2>
            <dl class="mt-4 grid gap-4">
              <div class="rounded-2xl bg-indigo-50 px-4 py-3">
                <dt class="text-xs font-medium text-indigo-700">Meetings captured</dt>
                <dd class="mt-2 text-3xl font-semibold text-indigo-900" x-text="minutes.state.metrics.total"></dd>
              </div>
              <div class="rounded-2xl bg-slate-100 px-4 py-3">
                <dt class="text-xs font-medium text-slate-600">Published recaps</dt>
                <dd class="mt-2 flex items-baseline gap-2 text-2xl font-semibold text-slate-900">
                  <span x-text="minutes.state.metrics.published"></span>
                  <span class="text-xs font-medium text-slate-500">live</span>
                </dd>
              </div>
              <div class="rounded-2xl bg-white px-4 py-3 shadow-inner">
                <dt class="text-xs font-medium text-slate-600">Open action items</dt>
                <dd class="mt-2 text-2xl font-semibold text-amber-600" x-text="minutes.state.metrics.openActions"></dd>
              </div>
            </dl>
            <p class="mt-4 text-xs text-slate-500">
              Plan: <span class="font-semibold text-slate-700" x-text="minutes.state.plan === 'pro' ? 'Pro' : 'Free'"></span>. Free plan includes 5 meetings and 30-minute uploads.
            </p>
          </aside>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-8 px-4 sm:px-6 lg:px-8">
        <header class="flex flex-wrap items-center justify-between gap-4">
          <div class="space-y-1">
            <h2 class="text-2xl font-semibold text-slate-900">Your minutes</h2>
            <p class="text-sm text-slate-600">Filter by template, track open action items, and jump back into editing.</p>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter status</span>
              <i class="fas fa-traffic-light text-xs"></i>
              <select
                class="bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="minutes.state.filters.status"
                @change="minutes.applyFilters()"
              >
                <option value="all">All statuses</option>
                <option value="draft">Draft</option>
                <option value="published">Published</option>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter template</span>
              <i class="fas fa-layer-group text-xs"></i>
              <select
                class="bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="minutes.state.filters.template"
                @change="minutes.applyFilters()"
              >
                <option value="all">All templates</option>
                <template x-for="template in minutes.templates" :key="template.key">
                  <option :value="template.key" x-text="template.label"></option>
                </template>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Search minutes</span>
              <i class="fas fa-search text-xs"></i>
              <input
                type="search"
                placeholder="Search title or notes"
                class="w-44 bg-transparent text-sm focus:outline-none"
                x-model="minutes.state.filters.search"
                @input.debounce.300ms="minutes.applyFilters()"
              />
            </label>
          </div>
        </header>

        <template x-if="minutes.state.loading">
          <div class="grid gap-6 sm:grid-cols-2">
            <template x-for="i in 4" :key="`minutes-skeleton-${i}`">
              <article class="h-full rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                <div class="h-6 w-40 rounded bg-slate-200"></div>
                <div class="mt-4 h-4 w-52 rounded bg-slate-100"></div>
                <div class="mt-6 h-20 rounded-2xl bg-slate-50"></div>
              </article>
            </template>
          </div>
        </template>

        <template x-if="!minutes.state.loading && minutes.state.filtered.length === 0">
          <div class="rounded-3xl border border-dashed border-slate-300 bg-white p-12 text-center">
            <i class="fas fa-circle-plus text-3xl text-slate-300"></i>
            <h3 class="mt-4 text-lg font-semibold text-slate-900">No minutes yet</h3>
            <p class="mt-2 text-sm text-slate-600">Create your first meeting summary or import audio to get started.</p>
            <div class="mt-4 flex justify-center">
              <Button type="button" @click.prevent="minutes.createDraft()">
                <i class="fas fa-plus text-xs"></i>
                New minutes
              </Button>
            </div>
          </div>
        </template>

        <div class="grid gap-6 lg:grid-cols-2" x-show="minutes.state.filtered.length" x-cloak>
          <template x-for="item in minutes.state.filtered" :key="item.id">
            <article class="flex h-full flex-col justify-between rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
              <div class="space-y-4">
                <header class="flex items-start justify-between gap-4">
                  <div>
                    <h3 class="text-lg font-semibold text-slate-900" x-text="item.title"></h3>
                    <p class="text-xs text-slate-500">
                      <i class="fas fa-calendar-day mr-1 text-[10px]"></i>
                      <span x-text="minutes.formatMeetingDate(item.meetingDate)"></span>
                    </p>
                  </div>
                  <span
                    class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold"
                    :class="item.status === 'published' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600'"
                  >
                    <i class="fas" :class="item.status === 'published' ? 'fa-earth-americas' : 'fa-pen-to-square'"></i>
                    <span x-text="item.status === 'published' ? 'Published' : 'Draft'"></span>
                  </span>
                </header>
                <div class="rounded-2xl bg-slate-50 px-4 py-3 text-sm text-slate-600">
                  <p class="font-medium text-slate-800" x-text="minutes.getTemplateLabel(item.templateKey)"></p>
                  <p class="mt-1 text-xs text-slate-500" x-text="item.agendaLabel"></p>
                </div>
                <p class="text-sm text-slate-600" x-text="item.summaryDescription"></p>
              </div>
              <footer class="mt-6 flex flex-wrap items-center justify-between gap-3 text-xs text-slate-500">
                <div class="flex items-center gap-3">
                  <span>
                    <i class="fas fa-clock mr-1 text-[10px]"></i>
                    <span x-text="minutes.formatDuration(item.durationSec)"></span>
                  </span>
                  <span>
                    <i class="fas fa-circle-check mr-1 text-[10px]"></i>
                    <span x-text="`${item.openActions} open actions`"></span>
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <Button
                    variant="ghost"
                    class="text-xs"
                    @click.prevent="window.location.assign(`/meeting-minutes-ai/builder?id=${item.id}`)"
                  >
                    <i class="fas fa-pen text-[10px]"></i>
                    Edit
                  </Button>
                  <Button
                    variant="ghost"
                    class="text-xs"
                    @click.prevent="minutes.delete(item.id)"
                  >
                    <i class="fas fa-trash text-[10px]"></i>
                    Delete
                  </Button>
                  <Button
                    variant="outline"
                    class="text-xs"
                    @click.prevent="window.location.assign(`/meeting-minutes-ai/actions?meeting=${item.id}`)"
                  >
                    <i class="fas fa-list-check text-[10px]"></i>
                    Actions
                  </Button>
                </div>
              </footer>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
