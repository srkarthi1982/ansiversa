---
import Layout from "../layouts/Layout.astro";
import { actions } from 'astro:actions';
import { getSessionWithUser } from '../utils/session';
import Textbox from "../components/Textbox.astro";
import Password from "../components/Password.astro";
import Button from "../components/Button.astro";

const sessionData = await getSessionWithUser(Astro.cookies);
if (!sessionData) {
  return Astro.redirect('/login');
}

const changePasswordAction = actions.auth.changePassword;
const result = await Astro.getActionResult(changePasswordAction);
const errorMsg =
  result?.error?.message ||
  (result?.error && 'Unable to change password. Please check your details.');
const success = result?.data?.ok;
---

<Layout>
  <section class="mx-auto max-w-md px-4 py-16">
    <h1 class="text-2xl font-bold">Change password</h1>
    <p class="mt-2 text-slate-600">Update your password to keep your account secure.</p>

    {errorMsg && (
      <div class="mt-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        {errorMsg}
      </div>
    )}

    {success && (
      <div class="mt-6 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
        Password changed successfully.
      </div>
    )}

    <form class="mt-6 space-y-4" method="POST" action={changePasswordAction}>
      <Textbox
        id="identifier"
        name="identifier"
        label="Username or email"
        placeholder="you@example.com"
        required
        autocomplete="username"
      />

      <Password
        id="oldPassword"
        name="oldPassword"
        label="Current password"
        placeholder="••••••••"
        minlength={6}
        required
        autocomplete="current-password"
        toggleLabel="current password"
      />

      <Password
        id="newPassword"
        name="newPassword"
        label="New password"
        placeholder="••••••••"
        minlength={6}
        required
        autocomplete="new-password"
        toggleLabel="new password"
      />

      <Password
        id="confirm"
        name="confirm"
        label="Confirm new password"
        placeholder="••••••••"
        minlength={6}
        required
        autocomplete="new-password"
        toggleLabel="password confirmation"
      />

      <Button type="submit" block>
        Update password
      </Button>
    </form>
  </section>
</Layout>
