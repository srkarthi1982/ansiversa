---
import Layout from "../layouts/Layout.astro";
import { actions } from 'astro:actions';
import { getSessionWithUser } from '../utils/session';

const sessionData = await getSessionWithUser(Astro.cookies);
if (!sessionData) {
  return Astro.redirect('/login');
}

const changePasswordAction = actions.auth.changePassword;
const result = await Astro.getActionResult(changePasswordAction);
const errorMsg =
  result?.error?.message ||
  (result?.error && 'Unable to change password. Please check your details.');
const success = result?.data?.ok;
---

<Layout>
  <section class="mx-auto max-w-md px-4 py-16">
    <h1 class="text-2xl font-bold">Change password</h1>
    <p class="mt-2 text-slate-600">Update your password to keep your account secure.</p>

    {errorMsg && (
      <div class="mt-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        {errorMsg}
      </div>
    )}

    {success && (
      <div class="mt-6 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
        Password changed successfully.
      </div>
    )}

    <form class="mt-6 space-y-4" method="POST" action={changePasswordAction}>
      <div>
        <label for="identifier" class="block text-sm font-medium text-slate-700">Username or email</label>
        <input
          id="identifier"
          name="identifier"
          required
          class="mt-1 w-full rounded-lg border px-3 py-2 outline-none focus:ring-2 focus:ring-indigo-500"
          placeholder="you@example.com"
        />
      </div>

      <div x-data="{ show: false }">
        <label for="oldPassword" class="block text-sm font-medium text-slate-700">Current password</label>
        <div class="relative mt-1">
          <input
            id="oldPassword"
            name="oldPassword"
            :type="show ? 'text' : 'password'"
            minlength="6"
            required
            class="w-full rounded-lg border px-3 py-2 pr-10 outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="••••••••"
          />
          <button
            type="button"
            x-on:click="show = !show"
            :aria-label="show ? 'Hide current password' : 'Show current password'"
            class="absolute inset-y-0 right-0 flex items-center px-3 text-slate-400 hover:text-slate-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
          >
            <svg
              x-show="!show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              <circle cx="12" cy="12" r="3" stroke-width="1.5" />
            </svg>
            <svg
              x-show="show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.477 0-8.268-2.943-9.542-7a9.979 9.979 0 0 1 3.113-4.568m2.873-1.705A9.956 9.956 0 0 1 12 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 0 1-1.249 2.592M15 12a3 3 0 0 1-3 3m0-6a3 3 0 0 1 3 3m-3 3L4.5 4.5m7.5 4.5a3 3 0 0 0-3 3m3 3 7.5 7.5" />
            </svg>
          </button>
        </div>
      </div>

      <div x-data="{ show: false }">
        <label for="newPassword" class="block text-sm font-medium text-slate-700">New password</label>
        <div class="relative mt-1">
          <input
            id="newPassword"
            name="newPassword"
            :type="show ? 'text' : 'password'"
            minlength="6"
            required
            class="w-full rounded-lg border px-3 py-2 pr-10 outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="••••••••"
          />
          <button
            type="button"
            x-on:click="show = !show"
            :aria-label="show ? 'Hide new password' : 'Show new password'"
            class="absolute inset-y-0 right-0 flex items-center px-3 text-slate-400 hover:text-slate-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
          >
            <svg
              x-show="!show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              <circle cx="12" cy="12" r="3" stroke-width="1.5" />
            </svg>
            <svg
              x-show="show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.477 0-8.268-2.943-9.542-7a9.979 9.979 0 0 1 3.113-4.568m2.873-1.705A9.956 9.956 0 0 1 12 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 0 1-1.249 2.592M15 12a3 3 0 0 1-3 3m0-6a3 3 0 0 1 3 3m-3 3L4.5 4.5m7.5 4.5a3 3 0 0 0-3 3m3 3 7.5 7.5" />
            </svg>
          </button>
        </div>
      </div>

      <div x-data="{ show: false }">
        <label for="confirm" class="block text-sm font-medium text-slate-700">Confirm new password</label>
        <div class="relative mt-1">
          <input
            id="confirm"
            name="confirm"
            :type="show ? 'text' : 'password'"
            minlength="6"
            required
            class="w-full rounded-lg border px-3 py-2 pr-10 outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="••••••••"
          />
          <button
            type="button"
            x-on:click="show = !show"
            :aria-label="show ? 'Hide password confirmation' : 'Show password confirmation'"
            class="absolute inset-y-0 right-0 flex items-center px-3 text-slate-400 hover:text-slate-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
          >
            <svg
              x-show="!show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              <circle cx="12" cy="12" r="3" stroke-width="1.5" />
            </svg>
            <svg
              x-show="show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.477 0-8.268-2.943-9.542-7a9.979 9.979 0 0 1 3.113-4.568m2.873-1.705A9.956 9.956 0 0 1 12 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 0 1-1.249 2.592M15 12a3 3 0 0 1-3 3m0-6a3 3 0 0 1 3 3m-3 3L4.5 4.5m7.5 4.5a3 3 0 0 0-3 3m3 3 7.5 7.5" />
            </svg>
          </button>
        </div>
      </div>

      <button
        type="submit"
        class="w-full rounded-lg bg-indigo-600 px-4 py-2 font-semibold text-white hover:bg-indigo-500"
      >
        Update password
      </button>
    </form>
  </section>
</Layout>
