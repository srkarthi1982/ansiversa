---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
---

<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#email-editor"
  >
    Skip to email editor
  </a>
  <main
    id="email-editor"
    class="bg-slate-50 min-h-screen"
    x-data="() => ({ email: $store.email })"
    x-init="email.initEditor($el.ownerDocument?.defaultView?.location)"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent opacity-90"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-envelope-open-text text-xs"></i>
              Advanced editing workspace
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Craft every email with precision
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Focus mode for long-form writing, template management, and signature controls. Autosave protects your latest edits
              and you can finalize drafts when you are ready to send.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button variant="outline" href="/email-polisher">
                <i class="fas fa-arrow-left text-xs"></i>
                Back to quick polish
              </Button>
              <Button type="button" @click.prevent="email.saveDraft('final')">
                <i class="fas fa-lock text-xs"></i>
                Mark as final
              </Button>
            </div>
            <p class="text-xs text-slate-500">Saving applies instantly and keeps versions available across Ansiversa.</p>
          </div>
          <aside class="rounded-3xl border border-indigo-100 bg-white/80 p-6 shadow-xl backdrop-blur">
            <h2 class="text-sm font-semibold text-slate-900">Current draft</h2>
            <dl class="mt-4 space-y-2 text-xs text-slate-600">
              <div class="flex justify-between">
                <dt class="font-medium text-slate-500">Title</dt>
                <dd class="font-semibold text-slate-800" x-text="email.quick.title"></dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-slate-500">Tone</dt>
                <dd class="font-semibold text-slate-800" x-text="email.toneOptions.find((option) => option.value === email.quick.tone)?.label"></dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-slate-500">Formality</dt>
                <dd class="font-semibold text-slate-800" x-text="email.formalityOptions.find((option) => option.value === email.quick.formality)?.label"></dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-slate-500">Last action</dt>
                <dd class="font-semibold text-slate-800" x-text="email.quick.lastAction ?? 'â€”'"></dd>
              </div>
            </dl>
          </aside>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
        <div class="grid gap-8 lg:grid-cols-[1.1fr_0.9fr]">
          <article class="space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <header class="flex flex-wrap items-center justify-between gap-4">
              <div class="space-y-1">
                <h2 class="text-2xl font-semibold text-slate-900">Compose</h2>
                <p class="text-sm text-slate-600">Subject, body, and output diff in one workspace.</p>
              </div>
              <div class="flex flex-wrap gap-2 text-xs">
                <Button variant="outline" type="button" class="text-xs" @click.prevent="email.saveDraft()">
                  <i class="fas fa-floppy-disk text-[10px]"></i>
                  Save draft
                </Button>
                <Button variant="ghost" type="button" class="text-xs" @click.prevent="email.copyOutput()">
                  <i class="fas fa-copy text-[10px]"></i>
                  Copy polished
                </Button>
              </div>
            </header>
            <div class="grid gap-6 lg:grid-cols-2">
              <section class="space-y-4">
                <div class="space-y-2">
                  <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Title</label>
                  <input
                    type="text"
                    class="w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-800 focus:border-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    placeholder="Internal title"
                    x-model="email.quick.title"
                  />
                </div>
                <div class="space-y-2">
                  <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Subject</label>
                  <input
                    type="text"
                    class="w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-800 focus:border-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    placeholder="Subject line"
                    x-model="email.quick.subject"
                  />
                </div>
                <div class="space-y-2">
                  <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Input</label>
                  <textarea
                    class="min-h-[260px] w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-800 focus:border-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    placeholder="Write or paste your email..."
                    x-model="email.quick.input"
                  ></textarea>
                </div>
                <div class="space-y-2">
                  <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Polished output</label>
                  <textarea
                    class="min-h-[260px] w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 focus:border-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    placeholder="Polished text appears here"
                    x-model="email.quick.output"
                  ></textarea>
                </div>
              </section>
              <section class="space-y-4">
                <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-4 text-sm text-slate-700">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Signature preview</p>
                  <pre class="mt-2 whitespace-pre-wrap font-sans" x-text="email.signature.display || 'No signature saved yet.'"></pre>
                  <label class="mt-3 inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-600">
                    <input type="checkbox" class="h-3.5 w-3.5 rounded border-slate-300 text-indigo-600" x-model="email.quick.signatureEnabled" />
                    Append signature to output
                  </label>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-white px-4 py-4 text-sm text-slate-700">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Variables</p>
                  <ul class="mt-2 space-y-1 text-xs text-slate-600">
                    <template x-for="(value, key) in email.quick.variables" :key="key">
                      <li>
                        <span class="font-semibold text-slate-800" x-text="key"></span>
                        <span class="text-slate-500"> - </span>
                        <span x-text="value"></span>
                      </li>
                    </template>
                  </ul>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-white px-4 py-4 text-sm text-slate-700">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Metadata</p>
                  <dl class="mt-2 space-y-1 text-xs text-slate-500">
                    <div class="flex justify-between">
                      <dt>Tone</dt>
                      <dd class="font-semibold text-slate-800" x-text="email.toneOptions.find((option) => option.value === email.quick.tone)?.label"></dd>
                    </div>
                    <div class="flex justify-between">
                      <dt>Formality</dt>
                      <dd class="font-semibold text-slate-800" x-text="email.formalityOptions.find((option) => option.value === email.quick.formality)?.label"></dd>
                    </div>
                    <div class="flex justify-between">
                      <dt>Language</dt>
                      <dd class="font-semibold text-slate-800" x-text="email.languageOptions.find((option) => option.value === email.quick.language)?.label"></dd>
                    </div>
                    <div class="flex justify-between">
                      <dt>Ephemeral</dt>
                      <dd class="font-semibold text-slate-800" x-text="email.quick.ephemeral ? 'Enabled' : 'Disabled'"></dd>
                    </div>
                  </dl>
                </div>
              </section>
            </div>
          </article>

          <aside class="space-y-6">
            <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <header class="flex items-start justify-between gap-4">
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Drafts</h3>
                  <p class="text-xs text-slate-500">Switch between drafts, duplicate, or delete.</p>
                </div>
                <Button variant="ghost" type="button" class="text-xs" @click.prevent="email.saveDraft()">
                  <i class="fas fa-save text-[10px]"></i>
                  Save
                </Button>
              </header>
              <div class="mt-4 space-y-3">
                <template x-for="draft in email.drafts.items" :key="draft.id">
                  <button
                    type="button"
                    class="w-full rounded-2xl border px-4 py-3 text-left text-sm transition"
                    :class="email.drafts.activeId === draft.id ? 'border-indigo-300 bg-indigo-50 text-indigo-900' : 'border-slate-200 bg-white text-slate-700 hover:border-indigo-200 hover:bg-indigo-50 hover:text-indigo-700'"
                    @click="email.selectDraft(draft.id)"
                  >
                    <div class="flex items-center justify-between gap-3">
                      <p class="font-semibold" x-text="draft.title"></p>
                      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-0.5 text-[11px] font-semibold text-slate-500">
                        <i class="fas fa-globe text-[9px]"></i>
                        <span x-text="draft.language"></span>
                      </span>
                    </div>
                    <p class="mt-1 text-xs text-slate-500" x-text="draft.subject || 'No subject yet'"></p>
                  </button>
                </template>
              </div>
              <div class="mt-4 flex flex-wrap gap-2 text-xs">
                <Button variant="outline" type="button" class="text-xs" @click.prevent="email.duplicateDraft(email.drafts.activeId)" :disabled="!email.drafts.activeId">
                  <i class="fas fa-copy text-[10px]"></i>
                  Duplicate
                </Button>
                <Button
                  variant="ghost"
                  type="button"
                  class="text-xs text-rose-600 hover:text-rose-700"
                  @click.prevent="email.deleteDraft(email.drafts.activeId)"
                  :disabled="!email.drafts.activeId"
                >
                  <i class="fas fa-trash text-[10px]"></i>
                  Delete
                </Button>
              </div>
            </article>

            <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <header class="flex items-start justify-between">
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Templates</h3>
                  <p class="text-xs text-slate-500">Apply or duplicate to customize.</p>
                </div>
                <Button variant="ghost" href="/email-polisher/templates" class="text-xs">
                  Manage
                </Button>
              </header>
              <div class="mt-3 flex flex-wrap gap-2 text-xs">
                <template x-for="category in email.templateCategories" :key="category">
                  <button
                    type="button"
                    class="rounded-full px-3 py-1.5 font-semibold transition"
                    :class="email.templates.category === category ? 'bg-indigo-100 text-indigo-700' : 'bg-slate-100 text-slate-600 hover:bg-indigo-50 hover:text-indigo-600'"
                    @click="email.setCategory(category)"
                  >
                    <span x-text="category"></span>
                  </button>
                </template>
              </div>
              <div class="mt-4 space-y-3">
                <template x-for="template in email.filteredTemplates" :key="template.id">
                  <article class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
                    <header class="flex items-start justify-between gap-3">
                      <div>
                        <h4 class="text-sm font-semibold text-slate-900" x-text="template.name"></h4>
                        <p class="text-xs text-slate-500" x-text="template.subject ?? 'No subject preset'"></p>
                      </div>
                      <Button variant="ghost" type="button" class="text-xs" @click.prevent="email.useTemplate(template)">
                        Use
                      </Button>
                    </header>
                    <p class="mt-3 line-clamp-3 text-xs text-slate-600" x-text="template.body"></p>
                  </article>
                </template>
              </div>
            </article>
          </aside>
        </div>

        <template x-if="email.toast">
          <div class="rounded-3xl border border-slate-200 bg-white p-4 text-sm text-slate-800 shadow-lg">
            <div class="flex items-center justify-between">
              <p x-text="email.toast?.message"></p>
              <button type="button" class="text-slate-400 transition hover:text-slate-600" @click="email.dismissToast()">
                <i class="fas fa-xmark"></i>
                <span class="sr-only">Dismiss toast</span>
              </button>
            </div>
          </div>
        </template>
      </div>
    </section>
  </main>
</Layout>
