---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";

const highlights = [
  {
    icon: 'fas fa-sparkles',
    title: 'Smart polish & rewrite',
    description:
      'Instantly refine tone, formality, and clarity while preserving intent. Shorten, expand, or make polite with one click.',
  },
  {
    icon: 'fas fa-reply-all',
    title: 'Reply assistants',
    description:
      'Paste an inbound email and generate three context-aware responses with tone and urgency controls.',
  },
  {
    icon: 'fas fa-diagram-project',
    title: 'Thread summaries',
    description:
      'Summarize long threads with action items and open questions. Auto-suggest a refreshed subject line for the next reply.',
  },
  {
    icon: 'fas fa-language',
    title: 'Translation & localization',
    description:
      'Translate polished copy into Arabic, Tamil, Hindi, Spanish, and more while preserving your selected tone.',
  },
  {
    icon: 'fas fa-layer-group',
    title: 'Reusable templates',
    description:
      'Build branded outreach, follow-up, and status templates using variables like {FirstName} or {Company}.',
  },
  {
    icon: 'fas fa-shield-halved',
    title: 'Privacy-first controls',
    description:
      'Toggle ephemeral mode to avoid storing drafts, redact variables automatically, and track consent before exporting.',
  },
];

const workflow = [
  {
    step: '1',
    title: 'Drop in your draft',
    blurb: 'Paste a raw email or start with a system template. Set tone, formality, and required subject.',
  },
  {
    step: '2',
    title: 'Polish & enrich',
    blurb:
      'Run polish, rewrite, or translation commands. Generate replies or thread summaries when context is complex.',
  },
  {
    step: '3',
    title: 'Personalize variables',
    blurb: 'Fill placeholders like {FirstName} or {MyTitle} once and apply across every template.',
  },
  {
    step: '4',
    title: 'Save, export, or share',
    blurb:
      'Save drafts, mark finals, copy to clipboard, or trigger mailto links. Watermark is removed for Pro users.',
  },
];

const plans = [
  {
    name: 'Free',
    price: '$0',
    bullets: [
      '30 polishes per month',
      '5 personal templates',
      'Reply suggestions & rewrite tools',
      'Watermark on export',
    ],
    cta: 'Use with Free plan',
    href: '/signup',
  },
  {
    name: 'Pro',
    price: '$12 / month',
    bullets: [
      'Unlimited polishes & templates',
      'Thread summaries & translation',
      'Signature management & analytics',
      'No watermark on export',
    ],
    featured: true,
    cta: 'Upgrade to Pro',
    href: '/pricing',
  },
];

const apiRoutes = [
  { method: 'POST', path: '/email/api/polish', description: 'Polish a draft with tone, formality, and subject suggestions.' },
  { method: 'POST', path: '/email/api/reply', description: 'Generate multi-variant replies for an inbound email.' },
  { method: 'POST', path: '/email/api/summarize', description: 'Summarize a thread into highlights, action items, and questions.' },
  { method: 'POST', path: '/email/api/rewrite', description: 'Shorten, expand, clarify, or make polite while preserving tone.' },
  { method: 'POST', path: '/email/api/translate', description: 'Translate polished output to supported languages with tone preservation.' },
  { method: 'POST', path: '/email/api/render-template', description: 'Merge variables with a template and optional signature.' },
  { method: 'POST', path: '/email/api/save', description: 'Persist drafts with metadata, tone, and variables.' },
  { method: 'POST', path: '/email/api/delete', description: 'Remove drafts permanently (ephemeral mode skips saving).' },
  { method: 'POST', path: '/email/api/duplicate', description: 'Clone a draft for rapid A/B testing.' },
];
---

<Layout>
  <main class="bg-slate-50 text-slate-900">
    <section class="relative isolate overflow-hidden">
      <div class="absolute inset-0 -z-10 bg-gradient-to-br from-indigo-500/20 via-sky-400/10 to-purple-500/20 blur-3xl opacity-70"></div>
      <div class="relative mx-auto max-w-6xl px-4 pb-16 pt-20 sm:px-6 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
          <div class="space-y-6">
            <p class="inline-flex items-center gap-2 rounded-full border border-white/40 bg-white/10 px-4 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-white/90">
              Ansiversa workspace
            </p>
            <h1 class="text-4xl font-black leading-tight text-white sm:text-5xl lg:text-6xl">
              Email Polisher — elegant emails in a few keystrokes
            </h1>
            <p class="text-base text-white/80 sm:text-lg">
              Craft professional, friendly, or assertive emails with AI-assisted rewrites, tone controls, translation, and
              reusable templates. Stay in flow with keyboard shortcuts and privacy-first toggles.
            </p>
            <div class="flex flex-wrap gap-4">
              <Button href="/email">
                <i class="fas fa-gauge-high text-xs"></i>
                Launch workspace
              </Button>
              <Button href="/email/templates" variant="outline">
                <i class="fas fa-layer-group text-xs"></i>
                Explore templates
              </Button>
              <Button href="/pricing" variant="ghost">
                <i class="fas fa-star text-xs"></i>
                Upgrade to Pro
              </Button>
            </div>
            <p class="text-xs text-white/70">Ephemeral mode available for sensitive content. No inbox connection required.</p>
          </div>
          <aside class="rounded-[34px] border border-white/20 bg-white/10 p-8 text-white shadow-2xl shadow-indigo-900/40 backdrop-blur">
            <h2 class="text-sm font-semibold uppercase tracking-[0.35em] text-white/70">Workspace snapshot</h2>
            <dl class="mt-6 space-y-4 text-sm">
              <div class="flex items-center justify-between">
                <dt class="text-white/70">Polishes this month</dt>
                <dd class="text-2xl font-semibold text-white">30</dd>
              </div>
              <div class="flex items-center justify-between">
                <dt class="text-white/70">Templates ready</dt>
                <dd class="text-2xl font-semibold text-white">45</dd>
              </div>
              <div class="flex items-center justify-between">
                <dt class="text-white/70">Languages supported</dt>
                <dd class="text-2xl font-semibold text-white">7</dd>
              </div>
            </dl>
            <p class="mt-4 text-xs text-white/70">
              Watermark removed on Pro plan. Summaries & translation unlocked with upgrade.
            </p>
          </aside>
        </div>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 text-center sm:grid-cols-3">
          {highlights.map((item) => (
            <article class="space-y-3 rounded-3xl border border-slate-200 p-6 shadow-soft">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-100 text-indigo-700">
                <i class={item.icon}></i>
              </span>
              <h3 class="text-lg font-semibold text-slate-900">{item.title}</h3>
              <p class="text-sm text-slate-600">{item.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="bg-slate-100 py-16">
      <div class="mx-auto max-w-5xl space-y-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Workflow in four steps</h2>
          <p class="mt-3 text-base text-slate-600">From raw draft to polished send-ready email in under two minutes.</p>
        </div>
        <ol class="grid gap-6 sm:grid-cols-2">
          {workflow.map((item) => (
            <li class="flex flex-col gap-3 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-100 text-sm font-semibold text-indigo-700">
                {item.step}
              </span>
              <h3 class="text-lg font-semibold text-slate-900">{item.title}</h3>
              <p class="text-sm text-slate-600">{item.blurb}</p>
            </li>
          ))}
        </ol>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-6xl space-y-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Plans that scale with your communications</h2>
          <p class="mt-3 text-base text-slate-600">Choose the right plan for your email cadence and collaboration needs.</p>
        </div>
        <div class="grid gap-6 md:grid-cols-2">
          {plans.map((plan) => (
            <article
              class={`relative rounded-[32px] border ${
                plan.featured
                  ? 'border-indigo-200 bg-indigo-50 shadow-xl shadow-indigo-200'
                  : 'border-slate-200 bg-white shadow-soft'
              } p-8`}
            >
              {plan.featured && (
                <span class="absolute -top-4 right-8 inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-1 text-xs font-semibold uppercase tracking-wide text-white">
                  <i class="fas fa-star text-[10px]"></i>
                  Popular
                </span>
              )}
              <h3 class="text-2xl font-semibold text-slate-900">{plan.name}</h3>
              <p class="mt-2 text-3xl font-bold text-slate-900">{plan.price}</p>
              <ul class="mt-4 space-y-2 text-sm text-slate-600">
                {plan.bullets.map((bullet) => (
                  <li class="flex items-start gap-2">
                    <i class="fas fa-circle-check mt-1 text-xs text-indigo-500"></i>
                    <span>{bullet}</span>
                  </li>
                ))}
              </ul>
              <Button href={plan.href} class="mt-6 w-full justify-center" variant={plan.featured ? undefined : 'outline'}>
                {plan.cta}
              </Button>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="bg-slate-900 py-16 text-white">
      <div class="mx-auto max-w-6xl space-y-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Developer-friendly API surface</h2>
          <p class="mt-3 text-base text-white/70">
            Integrate Email Polisher into your internal tools or workflow automations with Astro SSR endpoints.
          </p>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
          {apiRoutes.map((route) => (
            <article class="rounded-3xl border border-white/10 bg-white/5 p-4 shadow-lg shadow-black/20">
              <header class="flex items-center justify-between text-sm font-semibold text-white">
                <span class="rounded-full bg-indigo-500/20 px-3 py-1 text-xs uppercase tracking-wide text-indigo-100">{route.method}</span>
                <code class="text-xs text-indigo-100">{route.path}</code>
              </header>
              <p class="mt-3 text-sm text-white/80">{route.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-5xl space-y-10 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Privacy & accessibility commitments</h2>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          <article class="rounded-3xl border border-slate-200 bg-slate-50 p-6">
            <h3 class="text-lg font-semibold text-slate-900">Ephemeral by choice</h3>
            <p class="mt-2 text-sm text-slate-600">
              Toggle “Do not retain” to process content without saving. Autosave respects your preference and reminds you before
              navigating away.
            </p>
          </article>
          <article class="rounded-3xl border border-slate-200 bg-slate-50 p-6">
            <h3 class="text-lg font-semibold text-slate-900">Accessible interactions</h3>
            <p class="mt-2 text-sm text-slate-600">
              Keyboard shortcuts, focus outlines, ARIA labels, and RTL support ensure everyone can operate the workspace.
            </p>
          </article>
          <article class="rounded-3xl border border-slate-200 bg-slate-50 p-6">
            <h3 class="text-lg font-semibold text-slate-900">Analytics with respect</h3>
            <p class="mt-2 text-sm text-slate-600">
              Track polish, reply, translate, and save events without storing raw email content. Metrics focus on usage insights,
              not personal data.
            </p>
          </article>
        </div>
      </div>
    </section>

    <section class="border-t border-slate-200 bg-slate-100 py-16">
      <div class="mx-auto max-w-4xl space-y-6 px-4 text-center sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Ready to send better emails?</h2>
        <p class="text-base text-slate-600">
          Whether you are preparing executive updates, nurturing leads, or coordinating with partners, Email Polisher keeps every
          message consistent and on-brand.
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          <Button href="/email">
            <i class="fas fa-bolt text-xs"></i>
            Start polishing
          </Button>
          <Button href="/pricing" variant="outline">
            <i class="fas fa-chart-line text-xs"></i>
            Compare plans
          </Button>
        </div>
      </div>
    </section>
  </main>
</Layout>
