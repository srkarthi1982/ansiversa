<section class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-2">
    <h3 class="text-sm font-semibold text-slate-900">Versions</h3>
    <p class="text-xs text-slate-500">Restore a saved snapshot to compare changes or undo edits.</p>
  </header>
  <div class="mt-4 space-y-3">
    <template x-if="$store.contract.builder.versions.length === 0">
      <p class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-xs text-slate-500">
        No versions saved yet. Use “Save version” in the toolbar after major edits.
      </p>
    </template>
    <template x-for="version in $store.contract.builder.versions" :key="version.id">
      <div class="flex items-center justify-between gap-3 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
        <div>
          <p class="text-sm font-semibold text-slate-900" x-text="version.label"></p>
          <p class="text-xs text-slate-500" x-text="$store.contract.templateLabel($store.contract.builder.templateKey) + ' · ' + new Date(version.createdAt).toLocaleString()"></p>
        </div>
        <button
          type="button"
          class="rounded-full border border-slate-200 bg-white px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-500 hover:text-indigo-600"
          @click.prevent="$store.contract.restoreVersion(version.id)"
        >
          Restore
        </button>
      </div>
    </template>
  </div>
</section>
