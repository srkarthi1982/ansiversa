<section class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-2">
    <h2 class="text-lg font-semibold text-slate-900">Clause library</h2>
    <p class="text-sm text-slate-600">Browse vetted snippets and insert them into any clause.</p>
  </header>
  <div class="mt-4 flex items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-600">
    <i class="fas fa-search text-xs"></i>
    <input
      type="search"
      placeholder="Search clauses"
      class="w-full bg-transparent text-sm focus:outline-none"
      x-model="$store.contract.builder.clauseSearch"
    />
  </div>
  <div class="mt-4 space-y-4" x-data="{ targetClause: 'services' }">
    <label class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide text-slate-500">
      Insert into
      <select
        class="rounded-lg border border-slate-200 bg-white px-2 py-1 text-[13px] font-semibold text-slate-700 focus:outline-none"
        x-model="targetClause"
      >
        <option value="services">Services</option>
        <option value="deliverables">Deliverables</option>
        <option value="payment">Payment</option>
        <option value="intellectual_property">IP</option>
        <option value="confidentiality">Confidentiality</option>
        <option value="liability">Liability</option>
        <option value="termination">Termination</option>
        <option value="dispute_resolution">Dispute resolution</option>
        <option value="governing_law">Governing law</option>
        <option value="signatures">Signatures</option>
      </select>
    </label>
    <template x-if="$store.contract.clauseLibrary.loading">
      <div class="space-y-3">
        <template x-for="index in 4" :key="`clause-skeleton-${index}`">
          <div class="animate-pulse rounded-2xl border border-slate-200 bg-slate-50 p-4">
            <div class="h-4 w-40 rounded bg-slate-200"></div>
            <div class="mt-3 h-3 w-full rounded bg-slate-100"></div>
            <div class="mt-2 h-3 w-2/3 rounded bg-slate-100"></div>
          </div>
        </template>
      </div>
    </template>
    <template x-if="!$store.contract.clauseLibrary.loading && $store.contract.filteredClauseLibrary.length === 0">
      <p class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        No clauses match your search.
      </p>
    </template>
    <template x-for="entry in $store.contract.filteredClauseLibrary" :key="entry.id">
      <article class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
        <div class="flex items-center justify-between gap-3">
          <h3 class="text-sm font-semibold text-slate-900" x-text="entry.title"></h3>
          <button
            type="button"
            class="rounded-full border border-slate-200 bg-white px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-500 hover:text-indigo-600"
            @click.prevent="$store.contract.insertClause(entry, targetClause)"
          >
            <i class="fas fa-plus text-[10px]"></i>
            Insert
          </button>
        </div>
        <p class="mt-2 text-sm leading-relaxed text-slate-600" x-text="entry.body"></p>
      </article>
    </template>
  </div>
</section>
