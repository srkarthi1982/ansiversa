---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

export const prerender = false;
---
<Layout>
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-indigo-900 to-indigo-700">
    <div class="absolute inset-0">
      <div class="absolute top-10 left-1/2 h-72 w-72 -translate-x-1/2 rounded-full bg-white/10 blur-3xl"></div>
      <div class="absolute bottom-0 right-0 h-64 w-64 rounded-full bg-indigo-500/30 blur-3xl"></div>
      <div class="absolute top-1/3 left-1/4 h-40 w-40 rounded-full bg-blue-500/20 blur-2xl"></div>
    </div>

    <div class="relative mx-auto flex min-h-[540px] w-full max-w-4xl flex-col items-center justify-center px-6 py-24 text-center text-white">
      <span class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-white/80">
        Access restricted
      </span>
      <h1 class="mt-8 text-4xl font-semibold leading-tight sm:text-5xl">
        You do not have permission to view this area
      </h1>
      <p class="mt-6 max-w-2xl text-base text-white/80 sm:text-lg">
        This section is reserved for administrators. If you believe you should have access,
        please reach out to the workspace owner or your team lead so they can update your role.
      </p>

      <div class="mt-10 flex flex-col items-center gap-3 sm:flex-row sm:gap-4">
        <Button href="/" variant="light" size="lg">
          Return home
        </Button>
        <Button href="/contact" variant="outline" size="lg" class="border-white/40 text-white hover:bg-white/10">
          Contact support
        </Button>
      </div>
    </div>
  </section>
</Layout>
