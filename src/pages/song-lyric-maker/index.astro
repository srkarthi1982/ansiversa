---
import Layout from "../../layouts/Layout.astro";
import SongHero from "../../components/song/SongHero.astro";
import SongLibrary from "../../components/song/SongLibrary.astro";
import SongWorkspace from "../../components/song/SongWorkspace.astro";
import "./stores";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-violet-500"
    href="#song-workspace"
  >
    Skip to Song Lyric Maker workspace
  </a>
  <main class="min-h-screen bg-slate-950 text-white">
    <SongHero />
    <SongLibrary />
    <SongWorkspace />
  </main>
</Layout>
