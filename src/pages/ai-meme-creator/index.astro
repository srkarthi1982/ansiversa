---
import Layout from '../../layouts/Layout.astro';
import Loader from '../../components/Loader.astro';
import AiMemeHero from './components/AiMemeHero.astro';
import AiMemeTemplateLibrary from './components/AiMemeTemplateLibrary.astro';
import AiMemePromptFlow from './components/AiMemePromptFlow.astro';
import AiMemeWorkspace from './components/AiMemeWorkspace.astro';
import AiMemeBatchExports from './components/AiMemeBatchExports.astro';
import AiMemeSafety from './components/AiMemeSafety.astro';
import AiMemeIntegrations from './components/AiMemeIntegrations.astro';
import AiMemePlans from './components/AiMemePlans.astro';
import AiMemeApi from './components/AiMemeApi.astro';
import './stores';
---
<Layout title="AI Meme Creator">
  <Loader />
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#ai-meme-workspace"
  >
    Skip to AI Meme Creator workspace
  </a>
  <main>
    <AiMemeHero />
    <AiMemeTemplateLibrary />
    <AiMemePromptFlow />
    <AiMemeWorkspace />
    <AiMemeBatchExports />
    <AiMemeSafety />
    <AiMemeIntegrations />
    <AiMemePlans />
    <AiMemeApi />
  </main>
</Layout>
