---
import Button from '../../../components/Button.astro';
---
<section
  class="relative overflow-hidden bg-gradient-to-br from-indigo-700 via-sky-600 to-purple-700 py-16 text-white"
  x-data="() => ({ meme: $store.aiMemeCreator })"
  x-init="meme.initLanding()"
>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.15),_rgba(79,70,229,0.15))]"></div>
  <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-[1.15fr_0.85fr] lg:items-center">
      <div class="space-y-8">
        <span
          class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em]"
        >
          <i class="fas fa-face-grin-sparks text-[10px]"></i>
          AI Meme Creator
        </span>
        <h1 class="text-4xl font-black tracking-tight sm:text-5xl lg:text-6xl">
          Launch on-trend memes with AI layout, tone guardrails, and batch exports
        </h1>
        <p class="max-w-2xl text-base text-white/80 sm:text-lg">
          From classic formats like two-panel reactions to multi-panel comic explainers, craft campaign-ready memes with
          smart caption intelligence, safe defaults, and one-click exports to every channel.
        </p>
        <div class="flex flex-wrap gap-3">
          <Button type="button" class="shadow-md" x-on:click="meme.cycleTemplate('forward')">
            <i class="fas fa-wand-magic-sparkles text-xs"></i>
            Suggest a meme
          </Button>
          <Button href="#ai-meme-library" variant="outline">
            <i class="fas fa-image text-xs"></i>
            Explore templates
          </Button>
          <Button href="#ai-meme-safety" variant="ghost">
            <i class="fas fa-shield-heart text-xs"></i>
            Review safety
          </Button>
        </div>
        <dl class="grid gap-4 sm:grid-cols-3">
          <template x-for="stat in meme.state.heroStats" :key="stat.label">
            <div class="rounded-3xl border border-white/20 bg-white/10 p-5 backdrop-blur">
              <dt class="text-xs font-semibold uppercase tracking-wide text-white/60" x-text="stat.label"></dt>
              <dd class="mt-2 text-3xl font-bold" x-text="stat.value"></dd>
              <p class="mt-1 text-xs text-white/70" x-text="stat.context"></p>
            </div>
          </template>
        </dl>
        <div class="grid gap-4 md:grid-cols-3">
          <template x-for="highlight in meme.state.heroHighlights" :key="highlight.title">
            <article class="rounded-3xl border border-white/15 bg-white/10 p-5 text-sm shadow-soft backdrop-blur">
              <div class="flex items-center gap-2 text-white/80">
                <i :class="highlight.icon" class="text-white/70"></i>
                <h3 class="font-semibold" x-text="highlight.title"></h3>
              </div>
              <p class="mt-3 text-white/70" x-text="highlight.description"></p>
            </article>
          </template>
        </div>
      </div>
      <div class="space-y-5">
        <div class="relative overflow-hidden rounded-3xl border border-white/20 bg-white/10 p-6 shadow-xl backdrop-blur">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Active template</p>
              <h2 class="mt-1 text-2xl font-bold" x-text="meme.selectedTemplate?.name ?? 'Pick a template'"></h2>
            </div>
            <span class="inline-flex items-center gap-2 rounded-full bg-white/20 px-3 py-1 text-xs font-semibold">
              <i class="fas fa-layer-group text-[10px]"></i>
              <span x-text="`${meme.selectedTemplate?.panels ?? 0} panels`"></span>
            </span>
          </div>
          <div class="mt-4 grid gap-3 text-sm text-white/80">
            <div class="flex items-center justify-between">
              <span class="text-white/70">Aspect</span>
              <span class="font-semibold" x-text="meme.selectedTemplate?.ratio ?? '—'"></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-white/70">Animated</span>
              <span class="font-semibold" x-text="meme.selectedTemplate?.animated ? 'Yes' : 'No'"></span>
            </div>
            <div class="flex items-center gap-2 text-white/70">
              <i class="fas fa-tags text-[10px]"></i>
              <p class="flex-1" x-text="meme.selectedTemplate?.tags.join(' · ') ?? ''"></p>
            </div>
            <p class="rounded-2xl border border-white/10 bg-white/10 p-3 text-xs text-white/70">
              <span class="font-semibold text-white">Use it for: </span>
              <span x-text="meme.selectedTemplate?.recommendedUse ?? 'Select a format to preview suggestions.'"></span>
            </p>
          </div>
          <div class="mt-4 rounded-2xl border border-white/15 bg-white/10 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/60">Prompt pairing</p>
            <template x-if="meme.selectedPrompt">
              <div class="mt-2 space-y-2 text-sm text-white/80">
                <p class="font-semibold" x-text="meme.selectedPrompt?.label"></p>
                <p class="text-white/70" x-text="meme.selectedPrompt?.scenario"></p>
              </div>
            </template>
            <template x-if="!meme.selectedPrompt">
              <p class="mt-2 text-sm text-white/70">Pick a prompt preset to see pairing suggestions.</p>
            </template>
          </div>
        </div>
        <div class="rounded-3xl border border-white/10 bg-white/10 p-5 text-xs text-white/70">
          <p class="font-semibold uppercase tracking-wide text-white/60">Tone slider</p>
          <div class="mt-3 h-2 w-full rounded-full bg-white/15">
            <div
              class="h-2 rounded-full bg-white/80 transition-all"
              :style="{ width: meme.tonePosition() + '%' }"
            ></div>
          </div>
          <p class="mt-2">Selected tone: <span class="font-semibold text-white" x-text="meme.state.selectedToneId"></span></p>
        </div>
      </div>
    </div>
  </div>
</section>
