---
---
<section class="relative overflow-hidden bg-gradient-to-br from-sky-50 via-white to-emerald-50 py-16 sm:py-20">
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute left-1/2 top-10 h-48 w-48 -translate-x-1/2 rounded-full bg-emerald-100 blur-3xl"></div>
    <div class="absolute bottom-0 right-10 h-32 w-32 rounded-full bg-sky-100 blur-3xl"></div>
  </div>
  <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
      <div class="space-y-6">
        <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-4 py-1.5 text-sm font-semibold text-emerald-700">
          <i class="fas fa-lightbulb text-xs"></i>
          Concept Explainer Studio
        </span>
        <div class="space-y-4">
          <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
            <span x-text="$store.concept.state.snapshot.concept"></span>
          </h1>
          <p class="text-base text-slate-600 sm:text-lg" x-text="$store.concept.state.snapshot.tagline"></p>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
          <dl class="rounded-3xl border border-emerald-100 bg-white/90 p-5 shadow-sm">
            <dt class="text-xs font-semibold uppercase tracking-wide text-emerald-600">Definition</dt>
            <dd class="mt-2 text-sm text-slate-700" x-text="$store.concept.state.snapshot.definition"></dd>
          </dl>
          <dl class="rounded-3xl border border-sky-100 bg-white/90 p-5 shadow-sm">
            <dt class="text-xs font-semibold uppercase tracking-wide text-sky-600">Outcomes</dt>
            <dd class="mt-2 space-y-1 text-sm text-slate-700">
              <template x-for="outcome in $store.concept.state.snapshot.keyOutcomes" :key="outcome">
                <div class="flex items-start gap-2">
                  <i class="fas fa-check text-emerald-500"></i>
                  <span x-text="outcome"></span>
                </div>
              </template>
            </dd>
          </dl>
        </div>
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-2 rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white">
            <i class="fas fa-stopwatch text-xs"></i>
            <span x-text="`${$store.concept.state.snapshot.effortMinutes} min session`"></span>
          </div>
          <div class="flex items-center gap-2 rounded-full bg-white/80 px-4 py-2 text-sm font-medium text-slate-700 shadow-sm">
            <i class="fas fa-chart-line text-emerald-500"></i>
            <span x-text="$store.concept.state.snapshot.difficulty"></span>
          </div>
          <div class="flex flex-wrap items-center gap-2 text-sm text-slate-500">
            <span class="font-semibold text-slate-700">Prerequisites:</span>
            <template x-for="item in $store.concept.state.snapshot.prerequisites" :key="item">
              <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-medium text-slate-600 shadow-sm">
                <i class="fas fa-seedling text-[10px] text-emerald-500"></i>
                <span x-text="item"></span>
              </span>
            </template>
          </div>
        </div>
      </div>
      <div class="relative">
        <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-emerald-200 opacity-40 blur-xl"></div>
        <div class="relative space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
          <div class="flex items-center justify-between">
            <h2 class="text-base font-semibold text-slate-900">Workspace context</h2>
            <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
              <i class="fas fa-sync-alt text-[10px]"></i>
              Live
            </span>
          </div>
          <div class="grid gap-3">
            <button
              type="button"
              class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-left transition hover:border-emerald-300 hover:bg-white"
              @click="$store.concept.cycleLevel('up')"
            >
              <div>
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Audience</p>
                <p class="mt-1 text-sm font-semibold text-slate-900" x-text="$store.concept.state.options.level"></p>
              </div>
              <i class="fas fa-users text-emerald-500"></i>
            </button>
            <button
              type="button"
              class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-left transition hover:border-emerald-300 hover:bg-white"
              @click="$store.concept.cycleStyle()"
            >
              <div>
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Style</p>
                <p class="mt-1 text-sm font-semibold text-slate-900" x-text="$store.concept.state.options.style"></p>
              </div>
              <i class="fas fa-pen-nib text-sky-500"></i>
            </button>
            <div class="grid grid-cols-2 gap-3">
              <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Language</p>
                <p class="mt-1 text-sm font-semibold text-slate-900" x-text="$store.concept.state.options.language"></p>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Region</p>
                <p class="mt-1 text-sm font-semibold text-slate-900" x-text="$store.concept.state.options.region"></p>
              </div>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Subject focus</p>
              <p class="mt-1 text-sm font-semibold text-slate-900" x-text="$store.concept.state.options.subject"></p>
              <p class="mt-2 text-xs text-slate-500">
                <span class="font-semibold text-emerald-600">Exam:</span>
                <span x-text="$store.concept.state.options.examTag ?? 'General mastery'"></span>
              </p>
            </div>
          </div>
          <div class="flex items-center justify-between rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
            <div class="flex items-center gap-2">
              <i class="fas fa-bolt text-xs"></i>
              <span x-text="$store.concept.state.lastAction ?? 'Ready'"></span>
            </div>
            <button
              type="button"
              class="inline-flex items-center gap-2 rounded-full bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow hover:bg-emerald-700"
              @click="$store.concept.regenerate()"
            >
              <i class="fas fa-wand-magic-sparkles text-xs"></i>
              <span x-text="$store.concept.state.options.mode === 'generate' ? 'Generate explanation' : 'Revise explanation'"></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
