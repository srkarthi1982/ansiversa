---
import Layout from '../../layouts/Layout.astro';
import Loader from '../../components/Loader.astro';
import LanguageFlashcardsHero from './components/LanguageFlashcardsHero.astro';
import LanguageFlashcardsDashboard from './components/LanguageFlashcardsDashboard.astro';
import LanguageFlashcardsReviewModes from './components/LanguageFlashcardsReviewModes.astro';
import LanguageFlashcardsCardTypes from './components/LanguageFlashcardsCardTypes.astro';
import LanguageFlashcardsGenerator from './components/LanguageFlashcardsGenerator.astro';
import LanguageFlashcardsAnalytics from './components/LanguageFlashcardsAnalytics.astro';
import LanguageFlashcardsPlans from './components/LanguageFlashcardsPlans.astro';
import LanguageFlashcardsIntegrations from './components/LanguageFlashcardsIntegrations.astro';
---
<Layout title="Language Flashcards">
  <Loader />
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#langcards-dashboard"
  >
    Skip to Language Flashcards workspace
  </a>
  <main
    id="langcards-workspace"
    class="bg-white"
    x-data="() => ({ app: Alpine.store('languageFlashcards') })"
    x-init="app.init()"
  >
    <LanguageFlashcardsHero />
    <LanguageFlashcardsDashboard />
    <LanguageFlashcardsReviewModes />
    <LanguageFlashcardsCardTypes />
    <LanguageFlashcardsGenerator />
    <LanguageFlashcardsAnalytics />
    <LanguageFlashcardsPlans />
    <LanguageFlashcardsIntegrations />
  </main>
</Layout>
