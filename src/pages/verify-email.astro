---
import Layout from "../layouts/Layout.astro";
import { consumeEmailVerificationToken } from '../actions/auth/helpers';

const token = Astro.url.searchParams.get('token');

let status: 'missing' | 'invalid' | 'expired' | 'used' | 'user_missing' | 'success' = 'missing';

if (token) {
  const result = await consumeEmailVerificationToken(token);
  if (result.ok) {
    status = 'success';
  } else {
    status = result.reason;
  }
}
---

<Layout>
  <section class="mx-auto max-w-md px-4 py-20 text-center">
    {status === 'missing' && (
      <>
        <h1 class="text-2xl font-bold">Verification token required</h1>
        <p class="mt-3 text-slate-600">The verification link is missing or incomplete. Please use the link from your email.</p>
      </>
    )}

    {status === 'invalid' && (
      <>
        <h1 class="text-2xl font-bold">Invalid verification link</h1>
        <p class="mt-3 text-slate-600">We couldn't find a matching verification request. Request a new email from your account settings.</p>
      </>
    )}

    {status === 'expired' && (
      <>
        <h1 class="text-2xl font-bold">Verification link expired</h1>
        <p class="mt-3 text-slate-600">This link has expired. Request a new verification email from your account settings.</p>
      </>
    )}

    {status === 'used' && (
      <>
        <h1 class="text-2xl font-bold">Link already used</h1>
        <p class="mt-3 text-slate-600">This verification link has already been used. You can log in to continue.</p>
      </>
    )}

    {status === 'user_missing' && (
      <>
        <h1 class="text-2xl font-bold">Account not found</h1>
        <p class="mt-3 text-slate-600">We couldn't locate the account associated with this verification link.</p>
      </>
    )}

    {status === 'success' && (
      <>
        <h1 class="text-2xl font-bold text-emerald-600">Email verified!</h1>
        <p class="mt-3 text-slate-600">Thank you for confirming your email. You can now access all Ansiversa features.</p>
      </>
    )}

    <div class="mt-6 flex justify-center gap-3">
      <a href="/" class="rounded-lg border px-4 py-2 text-sm font-medium hover:bg-slate-100">Back home</a>
      <a href="/login" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">Log in</a>
    </div>
  </section>
</Layout>
