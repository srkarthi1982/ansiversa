---
import SectionHeading from "../../../components/SectionHeading.astro";

const searchFeatures = [
  {
    title: "Symbol-smart search",
    description:
      "Index LaTeX, aliases, and board tags so queries like 'Δx', 'distance', or 'CBSE 11 motion' surface the right card instantly.",
    icon: "fas fa-magnifying-glass-chart",
  },
  {
    title: "Topic & syllabus filters",
    description:
      "Slice results by subject, topic, board, and class with combination chips so learners jump to the exact syllabus requirement.",
    icon: "fas fa-filter-circle-xmark",
  },
  {
    title: "Relevance ranking",
    description:
      "Prioritize direct symbol matches, boost topic matches, and offer 'Did you mean…' nudges for near misses and alternate names.",
    icon: "fas fa-arrow-trend-up",
  },
];

const quickFilters = [
  { label: "Subject", value: "Physics" },
  { label: "Topic", value: "Kinematics" },
  { label: "Board", value: "CBSE" },
  { label: "Class", value: "11" },
  { label: "Difficulty", value: "Medium" },
];

const resultSnippets = [
  {
    code: "kin_v1",
    name: "Average velocity",
    latex: "v = \\frac{\\Delta x}{\\Delta t}",
    summary: "Velocity equals displacement over elapsed time for uniform segments.",
  },
  {
    code: "kin_suvat_2",
    name: "SUVAT displacement",
    latex: "s = ut + \\tfrac{1}{2} a t^2",
    summary: "Predict displacement with initial velocity and constant acceleration.",
  },
  {
    code: "math_quad",
    name: "Quadratic roots",
    latex: "x = \\frac{-b \\pm \\sqrt{b^2 - 4ac}}{2a}",
    summary: "Solve second-degree equations with discriminant insight baked in.",
  },
];
---
<section id="library" class="bg-slate-50 py-20 sm:py-24">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Explore the library"
      title="A structured catalog tailored for classrooms"
      description="Formula Finder keeps every entry richly described — from board alignment to assumptions — while staying lightning fast to browse."
      align="center"
      containerClass="max-w-3xl"
    />
    <div class="mt-16 grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-start">
      <div class="space-y-8">
        {searchFeatures.map((feature) => (
          <article class="flex gap-4 rounded-3xl border border-slate-200 bg-white/80 p-6 shadow-sm">
            <div class="mt-1 inline-flex h-10 w-10 flex-none items-center justify-center rounded-2xl bg-indigo-100 text-indigo-600">
              <i class={`${feature.icon} text-lg`} aria-hidden="true"></i>
            </div>
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-slate-900">{feature.title}</h3>
              <p class="text-sm leading-6 text-slate-600">{feature.description}</p>
            </div>
          </article>
        ))}
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <h3 class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-500">
            Filter combinations
          </h3>
          <p class="mt-3 text-sm text-slate-600">
            Learners stack filters freely while Formula Finder keeps counts visible and updates in real time.
          </p>
          <div class="mt-4 flex flex-wrap gap-3">
            {quickFilters.map((filter) => (
              <span class="inline-flex items-center gap-2 rounded-full border border-indigo-100 bg-indigo-50 px-3 py-1.5 text-xs font-semibold text-indigo-700">
                <i class="fas fa-circle-dot text-[10px]" aria-hidden="true"></i>
                <span class="uppercase tracking-[0.25em] text-indigo-400">{filter.label}</span>
                <span class="text-indigo-700">{filter.value}</span>
              </span>
            ))}
          </div>
        </div>
      </div>
      <div class="space-y-6">
        <div class="rounded-3xl border border-indigo-100 bg-white p-6 shadow-lg shadow-indigo-100">
          <header class="flex items-center justify-between gap-4 text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
            <span>Results</span>
            <span>Ranked by relevance</span>
          </header>
          <ul class="mt-4 space-y-4">
            {resultSnippets.map((result) => (
              <li class="rounded-2xl border border-slate-200 bg-slate-50/70 p-4">
                <div class="flex flex-wrap items-center justify-between gap-2 text-[11px] font-semibold uppercase tracking-[0.35em] text-indigo-500">
                  <span>{result.code}</span>
                  <span>High confidence</span>
                </div>
                <div class="mt-3 space-y-2">
                  <p class="text-sm font-semibold text-slate-900">{result.name}</p>
                  <p class="font-mono text-base text-slate-700">{result.latex}</p>
                  <p class="text-xs text-slate-600">{result.summary}</p>
                </div>
              </li>
            ))}
          </ul>
          <p class="mt-5 rounded-2xl border border-slate-200 bg-white px-4 py-3 text-xs text-slate-500">
            <i class="fas fa-lightbulb text-[11px] text-indigo-500" aria-hidden="true"></i>
            <span class="ml-2">Not finding it? Try synonyms like "speed" or filter by board for targeted syllabi.</span>
          </p>
        </div>
        <div class="rounded-3xl border border-indigo-100 bg-gradient-to-br from-indigo-50 via-white to-slate-50 p-6 shadow-inner">
          <h3 class="text-sm font-semibold uppercase tracking-[0.35em] text-indigo-500">Collections preview</h3>
          <p class="mt-2 text-sm text-slate-600">
            Exam-ready packs bundle formulas, rearrangements, and examples for quick revision.
          </p>
          <dl class="mt-4 grid gap-3 text-xs text-slate-500 sm:grid-cols-2">
            <div class="rounded-2xl border border-slate-200 bg-white/70 p-3">
              <dt class="text-[11px] font-semibold uppercase tracking-[0.35em] text-indigo-400">CBSE Class 10 Physics</dt>
              <dd class="mt-1 text-sm font-semibold text-slate-900">24 formulas • 8 worked examples</dd>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white/70 p-3">
              <dt class="text-[11px] font-semibold uppercase tracking-[0.35em] text-indigo-400">IIT-JEE Mechanics Basics</dt>
              <dd class="mt-1 text-sm font-semibold text-slate-900">31 formulas • 12 practice tasks</dd>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white/70 p-3">
              <dt class="text-[11px] font-semibold uppercase tracking-[0.35em] text-indigo-400">Maths: Algebra Core</dt>
              <dd class="mt-1 text-sm font-semibold text-slate-900">18 formulas • 6 derivations</dd>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white/70 p-3">
              <dt class="text-[11px] font-semibold uppercase tracking-[0.35em] text-indigo-400">Chemistry: Gas Laws</dt>
              <dd class="mt-1 text-sm font-semibold text-slate-900">12 formulas • 5 lab examples</dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
