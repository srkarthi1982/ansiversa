---
import SectionHeading from "../../../components/SectionHeading.astro";
import { dataModelEntities } from "../data/scriptFormatterData";
---
<section id="script-formatter-data-model" class="bg-slate-950 py-16 text-white" aria-labelledby="script-formatter-data-model-title">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="DATA MODEL"
      title="Objects tracked across Script Formatter"
      description="Entities cover projects, scenes, elements, characters, locations, revisions, jobs, and cached reports so analytics stay in sync."
      titleClass="mt-3 text-3xl font-bold tracking-tight sm:text-4xl text-white"
      descriptionClass="mt-4 text-base text-slate-300"
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-2">
      {dataModelEntities.map((entity) => (
        <article
          class="flex flex-col gap-4 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur"
          key={entity.name}
        >
          <div>
            <h3 class="text-xl font-semibold text-white">{entity.name}</h3>
            <p class="mt-1 text-sm text-slate-200">{entity.description}</p>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-200">Fields</p>
            <ul class="mt-3 grid grid-cols-2 gap-2 text-sm text-slate-200">
              {entity.fields.map((field) => (
                <li class="flex items-center gap-2" key={field}>
                  <i class="fas fa-circle text-[6px] text-indigo-300"></i>
                  <span>{field}</span>
                </li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
