---
import SectionHeading from "../../../components/SectionHeading.astro";
import { apiEndpoints } from "../data/scriptFormatterData";
---
<section id="script-formatter-api" class="bg-white py-16" aria-labelledby="script-formatter-api-title">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="API SURFACE"
      title="SSR routes supporting the Script Formatter suite"
      description="Endpoints power project CRUD, imports, exports, validation, rewrite passes, beats sync, and revision history."
    />
    <div class="mt-10 grid gap-6 lg:grid-cols-2">
      {apiEndpoints.map((group) => (
        <article
          class="flex flex-col gap-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm shadow-slate-200/40"
          key={group.group}
        >
          <h3 class="text-lg font-semibold text-slate-900">{group.group}</h3>
          <ul class="space-y-2 text-sm text-slate-600">
            {group.endpoints.map((endpoint) => (
              <li class="flex items-start gap-2" key={endpoint}>
                <i class="fas fa-terminal text-xs text-indigo-500"></i>
                <code class="rounded bg-slate-100 px-2 py-1 text-[12px] font-semibold text-slate-700">{endpoint}</code>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
