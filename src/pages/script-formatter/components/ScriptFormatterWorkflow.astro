---
import SectionHeading from "../../../components/SectionHeading.astro";
import { workflowStages } from "../data/scriptFormatterData";
---
<section id="script-formatter-workflow" class="bg-slate-950 py-16 text-white" aria-labelledby="script-formatter-workflow-title">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="WORKFLOW"
      title="A dual-pane editor with production-aware tooling"
      description="From template selection to export sign-off, Script Formatter keeps writers, showrunners, and producers aligned in one flow."
      titleClass="mt-3 text-3xl font-bold tracking-tight sm:text-4xl text-white"
      descriptionClass="mt-4 text-base text-slate-300"
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-2">
      {workflowStages.map((stage, index) => (
        <article
          class="flex flex-col gap-4 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur"
          key={stage.name}
        >
          <div class="flex items-start gap-4">
            <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-indigo-500/30 text-lg font-semibold text-white">
              {index + 1}
            </span>
            <div>
              <h3 class="text-xl font-semibold text-white">{stage.name}</h3>
              <p class="text-sm text-slate-200">{stage.description}</p>
            </div>
          </div>
          <ul class="space-y-2 text-sm text-slate-200">
            {stage.actions.map((action) => (
              <li class="flex items-start gap-2" key={action}>
                <i class="fas fa-arrow-right text-xs text-indigo-300"></i>
                <span>{action}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
