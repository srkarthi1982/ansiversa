---
import SectionHeading from "../../../components/SectionHeading.astro";
import { formatPresets } from "../data/scriptFormatterData";
---
<section id="script-formatter-formats" class="bg-white py-16" aria-labelledby="script-formatter-formats-title">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="FORMAT PRESETS"
      title="Every format tuned to industry standards"
      description="Screen, stage, studio, and creator templates capture the exact margins, fonts, and element behaviors your production team expects."
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-2">
      {formatPresets.map((preset) => (
        <article
          id={`script-formatter-${preset.id}`}
          class="flex flex-col gap-4 rounded-3xl border border-slate-200 bg-white/80 p-6 shadow-sm shadow-slate-200/50"
        >
          <div class="flex items-start justify-between gap-4">
            <div class="flex items-center gap-3">
              <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-indigo-100 text-indigo-600">
                <i class={`${preset.icon} text-lg`}></i>
              </span>
              <div>
                <h3 class="text-xl font-semibold text-slate-900">{preset.name}</h3>
                <p class="text-sm text-slate-600">{preset.description}</p>
              </div>
            </div>
            <span class="rounded-full bg-indigo-500/10 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-500">
              Preset
            </span>
          </div>
          <ul class="space-y-2 text-sm text-slate-600">
            {preset.specs.map((spec) => (
              <li class="flex items-start gap-2" key={spec}>
                <i class="fas fa-check text-xs text-indigo-500"></i>
                <span>{spec}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
