---
import FeatureCard from '../../../components/FeatureCard.astro';
import SectionHeading from '../../../components/SectionHeading.astro';
---
<section class="bg-white py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Pillars & guardrails"
      title="Everything required for disciplined, flexible study"
      description="Study Planner aligns time-blocking, reviews, and wellbeing guardrails so CBSE and international learners sustain momentum."
      align="center"
    />
    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <template x-for="pillar in planner.highlights.pillars" :key="pillar.title">
        <FeatureCard
          :title="pillar.title"
          :description="pillar.description"
          class="h-full"
          titleClass="text-lg font-semibold text-slate-900"
          descriptionClass="text-sm text-slate-600"
        >
          <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide text-indigo-500">
            <i :class="pillar.icon"></i>
            Core capability
          </div>
          <ul class="mt-4 space-y-2 text-xs text-slate-500">
            <template x-for="chip in pillar.chips" :key="chip">
              <li class="flex items-center gap-2">
                <span class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600">
                  <i class="fas fa-check"></i>
                </span>
                <span x-text="chip"></span>
              </li>
            </template>
          </ul>
        </FeatureCard>
      </template>
    </div>
    <div class="mt-16 grid gap-6 md:grid-cols-3">
      <template x-for="guardrail in planner.highlights.guardrails" :key="guardrail.title">
        <FeatureCard
          :title="guardrail.title"
          :description="guardrail.description"
          class="h-full"
          iconWrapperClass="flex h-10 w-10 items-center justify-center rounded-xl bg-emerald-500/10 text-emerald-600"
          :icon="guardrail.icon"
          titleClass="text-lg font-semibold text-slate-900"
          descriptionClass="text-sm text-slate-600"
        />
      </template>
    </div>
  </div>
</section>
