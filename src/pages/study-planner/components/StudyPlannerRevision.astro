---
import Button from '../../../components/Button.astro';
import SectionHeading from '../../../components/SectionHeading.astro';
---
<section class="bg-slate-900 py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-white/10 bg-white/5 p-8 shadow-[0_40px_120px_rgba(15,23,42,0.6)]">
      <SectionHeading
        eyebrow="Spaced repetition"
        title="FlashNote decks stay in lockstep with your plan"
        description="Link decks from FlashNote, Quiz Institute, and Homework Helper to receive SM-2 review queues with confidence nudges."
        align="center"
        titleClass="mt-3 text-3xl font-bold tracking-tight text-white"
        descriptionClass="mt-4 text-base text-indigo-100"
        eyebrowClass="text-xs font-semibold uppercase tracking-[0.35em] text-emerald-200"
      />
      <div class="mt-10 grid gap-8 lg:grid-cols-[1.1fr_0.9fr]">
        <div class="space-y-5">
          <template x-for="deck in planner.revision.decks" :key="deck.id">
            <div class="rounded-2xl border border-white/10 bg-white/10 p-5 text-indigo-100">
              <div class="flex flex-wrap items-start justify-between gap-4">
                <div>
                  <p class="text-base font-semibold text-white" x-text="deck.name"></p>
                  <p class="mt-1 text-xs text-indigo-200" x-text="deck.source"></p>
                  <p class="mt-2 flex flex-wrap items-center gap-2 text-xs">
                    <span class="inline-flex items-center gap-1 rounded-full bg-white/10 px-2 py-0.5">
                      <i class="fas fa-clone text-[10px]"></i>
                      <span x-text="deck.interval"></span>
                    </span>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5"
                      :class="deck.confidence === 'High'
                        ? 'bg-emerald-400/20 text-emerald-100'
                        : deck.confidence === 'Medium'
                          ? 'bg-indigo-400/20 text-indigo-100'
                          : 'bg-amber-400/20 text-amber-100'">
                      <i class="fas fa-sparkles text-[10px]"></i>
                      <span x-text="`${deck.confidence} confidence`"></span>
                    </span>
                    <span class="inline-flex items-center gap-1 rounded-full bg-white/10 px-2 py-0.5">
                      <i class="fas fa-calendar-day text-[10px]"></i>
                      <span x-text="deck.nextReview"></span>
                    </span>
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-xs font-semibold uppercase tracking-wide text-indigo-200">Due cards</p>
                  <p class="mt-1 text-2xl font-bold text-white" x-text="deck.dueCards"></p>
                  <p class="text-xs text-indigo-200" x-text="deck.dueLabel"></p>
                  <Button type="button" size="sm" variant="ghost" class="mt-3 text-indigo-100 hover:bg-white/10" @click.prevent="planner.scheduleReview(deck.id)">
                    <i class="fas fa-bell-on text-xs"></i>
                    Queue tonight
                  </Button>
                </div>
              </div>
              <p class="mt-3 text-xs text-indigo-200" x-text="deck.lastScore"></p>
            </div>
          </template>
        </div>
        <div class="space-y-5">
          <div class="rounded-2xl border border-white/10 bg-white/10 p-5">
            <h3 class="text-base font-semibold text-white">Review timeline</h3>
            <ul class="mt-4 space-y-3 text-sm text-indigo-100">
              <template x-for="item in planner.revision.queue" :key="item.id">
                <li class="rounded-xl border border-white/10 bg-white/5 p-4">
                  <p class="text-sm font-semibold text-white" x-text="item.label"></p>
                  <p class="mt-1 flex flex-wrap items-center gap-2 text-xs text-indigo-100">
                    <span class="inline-flex items-center gap-1 rounded-full bg-white/10 px-2 py-0.5">
                      <i class="fas fa-clock text-[10px]"></i>
                      <span x-text="item.due"></span>
                    </span>
                    <span class="inline-flex items-center gap-1 rounded-full bg-emerald-400/10 px-2 py-0.5 text-emerald-100">
                      <i class="fas fa-layer-group text-[10px]"></i>
                      <span x-text="item.workload"></span>
                    </span>
                  </p>
                  <p class="mt-2 text-xs text-indigo-200" x-text="item.focus"></p>
                </li>
              </template>
            </ul>
          </div>
          <div class="rounded-2xl border border-white/10 bg-white/10 p-5 text-indigo-100">
            <h3 class="text-base font-semibold text-white">Habits &amp; streaks</h3>
            <ul class="mt-4 space-y-3 text-sm">
              <template x-for="stat in planner.revision.stats" :key="stat.label">
                <li class="flex items-start gap-3 rounded-xl border border-white/10 bg-white/5 p-4">
                  <div class="mt-1 flex h-9 w-9 items-center justify-center rounded-full bg-indigo-500/20 text-indigo-100">
                    <i :class="stat.icon"></i>
                  </div>
                  <div>
                    <p class="text-sm font-semibold text-white" x-text="stat.value"></p>
                    <p class="text-xs uppercase tracking-wide text-indigo-200" x-text="stat.label"></p>
                    <p class="mt-1 text-xs text-indigo-200" x-text="stat.description"></p>
                  </div>
                </li>
              </template>
            </ul>
          </div>
          <div class="rounded-2xl border border-emerald-300/30 bg-emerald-400/10 p-5 text-emerald-50">
            <p class="text-sm font-semibold">Tip</p>
            <p class="mt-1 text-xs">
              Link up to two decks on the Free plan. Upgrade to Pro for unlimited deck automations and CSV retention exports.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
