---
import SectionHeading from '../../../components/SectionHeading.astro';
import Button from '../../../components/Button.astro';
---
<section class="bg-slate-900 py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-white/10 bg-white/5 p-8 shadow-[0_35px_120px_rgba(15,23,42,0.5)]">
      <SectionHeading
        eyebrow="Plan gating"
        title="Free keeps momentum, Pro unlocks the full control room"
        description="Ansiversa Free protects the essentials: time-blocking, Pomodoro, and two linked decks. Pro removes caps and unlocks exports."
        align="center"
        titleClass="mt-3 text-3xl font-bold tracking-tight text-white sm:text-4xl"
        descriptionClass="mt-4 text-base text-indigo-100"
        eyebrowClass="text-xs font-semibold uppercase tracking-[0.35em] text-emerald-200"
      />
      <div class="mt-10 overflow-hidden rounded-2xl border border-white/10 bg-slate-900/60">
        <table class="min-w-full divide-y divide-white/5 text-left text-sm text-indigo-100">
          <thead class="bg-white/5 text-xs uppercase tracking-wide text-indigo-200">
            <tr>
              <th scope="col" class="px-6 py-3 font-semibold">Capability</th>
              <th scope="col" class="px-6 py-3 font-semibold">Free</th>
              <th scope="col" class="px-6 py-3 font-semibold">Pro</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5">
            <template x-for="row in planner.planComparison" :key="row.capability">
              <tr>
                <td class="px-6 py-4 font-semibold text-white" x-text="row.capability"></td>
                <td class="px-6 py-4" x-text="row.free"></td>
                <td class="px-6 py-4 text-emerald-300" x-text="row.pro"></td>
              </tr>
            </template>
          </tbody>
        </table>
      </div>
      <div class="mt-8 flex flex-wrap items-center justify-between gap-4 text-xs text-indigo-100">
        <p>
          <span class="font-semibold">Status:</span>
          <span x-text="planner.plan.statusMessage"></span>
        </p>
        <div class="flex flex-wrap items-center gap-3">
          <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-semibold text-indigo-100">
            <i class="fas fa-list-check text-[10px]"></i>
            <span x-text="`${planner.plan.tasksCreated} / ${planner.plan.taskLimit} tasks used`"></span>
          </span>
          <Button type="button" class="bg-emerald-500 text-white hover:bg-emerald-600" @click.prevent="planner.upgradePlan()">
            <i class="fas fa-rocket text-xs"></i>
            Unlock Pro features
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
