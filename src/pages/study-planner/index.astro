---
import Layout from '../../layouts/Layout.astro';
import Loader from '../../components/Loader.astro';
import StudyPlannerHero from './components/StudyPlannerHero.astro';
import StudyPlannerHighlights from './components/StudyPlannerHighlights.astro';
import StudyPlannerWorkspace from './components/StudyPlannerWorkspace.astro';
import StudyPlannerRevision from './components/StudyPlannerRevision.astro';
import StudyPlannerAnalytics from './components/StudyPlannerAnalytics.astro';
import StudyPlannerPlans from './components/StudyPlannerPlans.astro';
import StudyPlannerIntegrations from './components/StudyPlannerIntegrations.astro';
---
<Layout title="Study Planner">
  <Loader />
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#study-planner-workspace"
  >
    Skip to Study Planner workspace
  </a>
  <main
    id="study-planner-workspace"
    class="bg-white"
    x-data="() => ({ planner: Alpine.store('studyPlanner') })"
    x-init="planner.init()"
  >
    <StudyPlannerHero />
    <StudyPlannerHighlights />
    <StudyPlannerWorkspace />
    <StudyPlannerRevision />
    <StudyPlannerAnalytics />
    <StudyPlannerPlans />
    <StudyPlannerIntegrations />
  </main>
</Layout>
