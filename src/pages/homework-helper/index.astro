---
import Layout from '../../layouts/Layout.astro';
import Loader from '../../components/Loader.astro';
import HomeworkHero from './components/HomeworkHero.astro';
import HomeworkHighlights from './components/HomeworkHighlights.astro';
import HomeworkWorkspace from './components/HomeworkWorkspace.astro';
import HomeworkPlans from './components/HomeworkPlans.astro';
import HomeworkIntegrations from './components/HomeworkIntegrations.astro';
import HomeworkAPIs from './components/HomeworkAPIs.astro';
---
<Layout title="Homework Helper">
  <Loader />
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#homework-workspace"
  >
    Skip to Homework Helper workspace
  </a>
  <main class="bg-white" x-data="() => ({ homework: Alpine.store('homework') })" x-init="homework.init()">
    <HomeworkHero />
    <HomeworkHighlights />
    <HomeworkWorkspace />
    <HomeworkPlans />
    <HomeworkIntegrations />
    <HomeworkAPIs />
  </main>
</Layout>
