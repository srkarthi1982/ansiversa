---
import SectionHeading from "../../../components/SectionHeading.astro";
import { ingestionOptions } from "../data/notesSummarizerData";
---
<section class="bg-white py-16 sm:py-20" aria-labelledby="notes-summarizer-ingestion">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Capture every signal"
      title="Flexible ingestion tuned for transcripts, notes, and PDFs"
      description="Paste text, upload lecture decks, or pull synced transcripts. Metadata, speaker labels, and tags stay intact so every summary starts clean."
      id="notes-summarizer-ingestion"
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-4">
      {ingestionOptions.map((option) => (
        <article
          key={option.title}
          class="flex flex-col gap-3 rounded-3xl border border-slate-200 bg-slate-50 p-6 text-slate-700 shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:bg-white hover:shadow-lg"
        >
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-500/10 text-indigo-600">
            <i class={`${option.icon} text-sm`}></i>
          </span>
          <h3 class="text-base font-semibold text-slate-900">{option.title}</h3>
          <p class="text-sm text-slate-600">{option.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
