---
import SectionHeading from "../../../components/SectionHeading.astro";
import { uxHighlights } from "../data/notesSummarizerData";
---
<section class="bg-white py-16 sm:py-20" aria-labelledby="notes-summarizer-ux">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Experience highlights"
      title="Built for students, teams, and researchers"
      description="Autosave, diff view, and multilingual output help every user rely on the summarizer across contexts."
      id="notes-summarizer-ux"
    />
    <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {uxHighlights.map((highlight) => (
        <article
          key={highlight.title}
          class="rounded-3xl border border-slate-200 bg-slate-50 p-6 text-slate-700 shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:bg-white hover:shadow-lg"
        >
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-500/10 text-indigo-600">
            <i class={`${highlight.icon} text-sm`}></i>
          </span>
          <h3 class="mt-3 text-base font-semibold text-slate-900">{highlight.title}</h3>
          <p class="mt-2 text-sm text-slate-600">{highlight.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
