---
import SectionHeading from "../../../components/SectionHeading.astro";
import { dataModel } from "../data/notesSummarizerData";
---
<section class="bg-slate-900 py-16 text-white sm:py-20" aria-labelledby="notes-summarizer-data-model">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Data design"
      title="Lean relational schema for summaries"
      description="Astro DB tables track users, notes, summaries, tags, and history with plan-aware retention rules."
      id="notes-summarizer-data-model"
      variant="light"
    />
    <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-5">
      {dataModel.map((table) => (
        <article
          key={table.name}
          class="rounded-3xl border border-white/10 bg-white/5 p-6 text-slate-200 shadow-lg backdrop-blur"
        >
          <h3 class="text-base font-semibold text-white">{table.name}</h3>
          <ul class="mt-3 space-y-2 text-xs text-slate-300">
            {table.fields.map((field) => (
              <li key={field} class="flex items-center gap-2">
                <span class="h-1.5 w-1.5 rounded-full bg-indigo-400"></span>
                <span>{field}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
