---
import Layout from "../../layouts/Layout.astro";
import DuelHero from "./components/DuelHero.astro";
import DuelModes from "./components/DuelModes.astro";
import DuelMatchFlow from "./components/DuelMatchFlow.astro";
import DuelScoring from "./components/DuelScoring.astro";
import DuelLeaderboards from "./components/DuelLeaderboards.astro";
import DuelAntiCheat from "./components/DuelAntiCheat.astro";
import DuelRewards from "./components/DuelRewards.astro";
import DuelPlanGating from "./components/DuelPlanGating.astro";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#knowledge-duel"
  >
    Skip to Knowledge Duel content
  </a>
  <main id="knowledge-duel" class="min-h-screen bg-slate-50">
    <DuelHero />
    <DuelModes />
    <DuelMatchFlow />
    <DuelScoring />
    <DuelLeaderboards />
    <DuelAntiCheat />
    <DuelRewards />
    <DuelPlanGating />
  </main>
</Layout>
