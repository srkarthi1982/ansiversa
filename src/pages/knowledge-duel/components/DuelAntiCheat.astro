---
import SectionHeading from "../../../components/SectionHeading.astro";
import { duelAntiCheat } from "../../../data/knowledgeDuel";
---
<section class="bg-slate-900 py-16 text-white">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Fair play & security"
      title="Anti-cheat woven into every request"
      description="Server-controlled timers, hashed payloads, and anomaly review workflows keep Knowledge Duel competitive without overwhelming moderators."
      align="center"
      containerClass="max-w-3xl"
      eyebrowClass="text-xs font-semibold uppercase tracking-[0.35em] text-sky-400"
      titleClass="mt-3 text-3xl font-bold tracking-tight sm:text-4xl text-white"
      descriptionClass="mt-4 text-base text-slate-200"
    />
    <div class="mt-12 grid gap-6 lg:grid-cols-4">
      {duelAntiCheat.map((measure) => (
        <article class="flex h-full flex-col gap-3 rounded-3xl border border-white/10 bg-white/5 p-6">
          <span class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-sky-300/20 text-sky-200">
            <i class={`${measure.icon} text-lg`} aria-hidden="true"></i>
          </span>
          <h3 class="text-lg font-semibold text-white">{measure.title}</h3>
          <p class="text-sm text-slate-200">{measure.description}</p>
        </article>
      ))}
    </div>
    <div class="mt-10 rounded-3xl border border-white/10 bg-white/5 p-6 text-sm text-slate-200">
      <p class="font-semibold text-white">Reporting workflow</p>
      <p class="mt-2">
        Players can submit reports via <code class="rounded bg-white/10 px-2 py-1 text-xs">POST /knowledge-duel/api/report</code>. Staff see flagged matches, device fingerprints, and playback inside the moderation console for swift resolutions.
      </p>
    </div>
  </div>
</section>
