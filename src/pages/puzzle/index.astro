---
import Layout from '../../layouts/Layout.astro';
import PuzzleHero from './components/PuzzleHero.astro';
import PuzzleTypes from './components/PuzzleTypes.astro';
import PuzzleModes from './components/PuzzleModes.astro';
import PuzzlePacks from './components/PuzzlePacks.astro';
import PuzzleStats from './components/PuzzleStats.astro';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-purple-500"
    href="#puzzle-zone-app"
  >
    Skip to Puzzle Zone content
  </a>
  <main
    id="puzzle-zone-app"
    class="min-h-screen bg-white"
    x-data="() => ({ puzzle: $store.puzzleZone })"
    x-init="puzzle.init()"
  >
    <PuzzleHero />
    <PuzzleTypes />
    <PuzzleModes />
    <PuzzlePacks />
    <PuzzleStats />
  </main>
</Layout>
