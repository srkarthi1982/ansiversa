---
import Button from '../../../components/Button.astro';
import { getHeroHighlights, getHeroStats } from '../data/creativeTitleMakerData';

const heroHighlights = getHeroHighlights();
const heroStats = getHeroStats();
---
<section
  class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-indigo-950 to-slate-900 py-20 text-white"
  aria-labelledby="creative-title-hero"
  x-data="() => ({ maker: $store.creativeTitleMaker })"
>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(99,102,241,0.24),_transparent_55%)]"></div>
  <div class="relative mx-auto grid max-w-6xl gap-16 px-4 sm:px-6 lg:grid-cols-[1.1fr_0.9fr] lg:px-8 lg:items-center">
    <div class="space-y-10">
      <span class="inline-flex items-center gap-2 rounded-full bg-indigo-500/15 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em] text-indigo-200">
        Title intelligence suite
      </span>
      <header class="space-y-4">
        <h1 id="creative-title-hero" class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
          Creative Title Maker
        </h1>
        <p class="text-base text-slate-200 sm:text-lg">
          Generate on-brand, SEO-ready titles for launches, videos, podcasts, and landing pages with built-in scoring,
          localization, and A/B pack orchestration. Ship confident headlines that match your audience, tone, and channel in
          one place.
        </p>
      </header>
      <div class="flex flex-wrap gap-4">
        <Button href="#creative-title-workspace" class="shadow-lg shadow-indigo-500/30">
          <i class="fas fa-wand-magic-sparkles text-xs"></i>
          Launch workspace preview
        </Button>
        <Button href="#creative-title-apis" variant="outline" class="border-indigo-300 text-indigo-200 hover:bg-indigo-500/10">
          <i class="fas fa-code text-xs"></i>
          View API endpoints
        </Button>
        <Button href="/titles/new" variant="ghost" class="text-slate-200 hover:bg-white/10">
          <i class="fas fa-circle-plus text-xs"></i>
          Start new brief
        </Button>
      </div>
      <div class="grid gap-4 sm:grid-cols-2">
        {heroHighlights.map((item) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-5 shadow-lg backdrop-blur" key={item.title}>
            <div class="flex items-center gap-3 text-sm font-semibold text-white">
              <i class={`${item.icon} text-indigo-300 text-xs`}></i>
              {item.title}
            </div>
            <p class="mt-2 text-sm text-slate-200/90">{item.description}</p>
          </div>
        ))}
      </div>
      <dl class="grid gap-4 sm:grid-cols-3">
        {heroStats.map((stat) => (
          <div key={stat.label} class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-lg backdrop-blur">
            <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-200">{stat.label}</dt>
            <dd class="mt-2 text-3xl font-semibold">{stat.value}</dd>
            <dd class="text-xs text-slate-200/80">{stat.trend}</dd>
          </div>
        ))}
      </dl>
    </div>

    <div class="relative">
      <div class="absolute inset-0 translate-x-8 translate-y-8 rounded-3xl bg-indigo-500/40 blur-3xl"></div>
      <div class="relative space-y-6 rounded-3xl border border-white/10 bg-slate-950/80 p-6 shadow-2xl backdrop-blur">
        <header class="flex flex-wrap items-center justify-between gap-3">
          <div>
            <p class="text-sm font-semibold text-white">Active variant preview</p>
            <p class="text-xs text-slate-300">Bundle <span x-text="maker.activeBundle?.label"></span></p>
          </div>
          <span class="inline-flex items-center gap-2 rounded-full bg-emerald-500/15 px-3 py-1 text-[11px] font-semibold text-emerald-200">
            <i class="fas fa-circle-check text-[10px]"></i>
            SEO ready
          </span>
        </header>
        <blockquote class="rounded-2xl border border-white/10 bg-white/5 p-5 text-left text-lg font-semibold text-white">
          <p x-text="maker.activeVariant?.text ?? 'Select a variant to preview the headline.'"></p>
        </blockquote>
        <div class="grid gap-3 text-xs text-slate-200">
          <div class="flex flex-wrap items-center gap-3">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-500/20 px-3 py-1 text-[11px] font-semibold text-indigo-100">
              <i class="fas fa-bullseye text-[10px]"></i>
              <span x-text="maker.activeVariant?.bucket"></span> bucket
            </span>
            <span class="inline-flex items-center gap-2 rounded-full bg-slate-800/80 px-3 py-1 text-[11px] font-semibold text-slate-200">
              <i class="fas fa-language text-[10px]"></i>
              <span x-text="maker.activeVariant?.locale"></span>
            </span>
            <span class="inline-flex items-center gap-2 rounded-full bg-slate-800/80 px-3 py-1 text-[11px] font-semibold text-slate-200">
              <i class="fas fa-hourglass-start text-[10px]"></i>
              <span x-text="maker.seoGuardrailSummary"></span>
            </span>
          </div>
          <p class="text-slate-300" x-text="maker.activeVariant?.serpPreview"></p>
          <div class="flex flex-wrap gap-2">
            <template x-for="device in maker.activeVariant?.devices ?? []" :key="device">
              <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-[11px] font-medium text-slate-100">
                <i class="fas fa-sparkles text-[10px]"></i>
                <span x-text="device"></span>
              </span>
            </template>
          </div>
        </div>
        <div class="rounded-2xl border border-white/10 bg-slate-900/70 p-4">
          <h3 class="text-xs font-semibold uppercase tracking-wide text-indigo-200">Score snapshot</h3>
          <dl class="mt-3 grid gap-3 sm:grid-cols-2">
            <template x-for="score in maker.state.scoreExplainers" :key="score.metric">
              <div class="flex items-center justify-between gap-3 rounded-xl bg-white/5 px-3 py-2 text-sm font-semibold text-white">
                <span x-text="score.label"></span>
                <span class="flex items-center gap-1 text-indigo-200">
                  <i class="fas fa-gauge text-[10px]"></i>
                  <span x-text="Math.round(score.score * 100)"></span>
                </span>
              </div>
            </template>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
