<section class="rounded-3xl border border-slate-200 bg-white shadow-xl">
  <header
    class="relative overflow-hidden rounded-t-3xl px-8 py-10 text-white"
    :style="`background: linear-gradient(135deg, ${$store.proposal.builder.data.branding.accentColor}, #312e81)`"
  >
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.2em] text-white/70">Proposal for</p>
        <h1 class="text-3xl font-bold" x-text="$store.proposal.builder.data.client.company || 'Client company'"></h1>
        <p class="text-sm text-white/80" x-text="$store.proposal.builder.data.client.contact"></p>
      </div>
      <div class="flex flex-col items-end text-right text-sm text-white/70">
        <span class="font-semibold text-white" x-text="$store.proposal.builder.title"></span>
        <span x-text="`Prepared by Ansiversa · ${new Date().toLocaleDateString()}`"></span>
        <span x-show="$store.proposal.builder.data.branding.footerNote" class="mt-1 rounded-full bg-white/10 px-3 py-1 text-xs text-white/80" x-text="$store.proposal.builder.data.branding.footerNote"></span>
      </div>
    </div>
  </header>

  <div class="space-y-10 px-8 py-10">
    <section class="space-y-3">
      <h2 class="text-lg font-semibold text-slate-900">Executive summary</h2>
      <p class="text-sm leading-relaxed text-slate-600" x-text="$store.proposal.builder.data.overview"></p>
    </section>

    <section class="grid gap-6 lg:grid-cols-2">
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Goals</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-700">
          <template x-for="(goal, index) in $store.proposal.builder.data.goals" :key="`preview-goal-${index}`">
            <li class="flex items-start gap-3">
              <i class="fas fa-check text-emerald-500 text-xs mt-1"></i>
              <span x-text="goal"></span>
            </li>
          </template>
        </ul>
      </div>
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Key deliverables</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-700">
          <template x-for="(deliverable, index) in $store.proposal.builder.data.deliverables" :key="`preview-deliverable-${index}`">
            <li class="flex items-start gap-3">
              <i class="fas fa-box text-indigo-500 text-xs mt-1"></i>
              <span x-text="deliverable"></span>
            </li>
          </template>
        </ul>
      </div>
    </section>

    <section class="space-y-4">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Timeline</h3>
      <ol class="space-y-3">
        <template x-for="(item, index) in $store.proposal.builder.data.timeline" :key="`preview-timeline-${index}`">
          <li class="flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm">
            <div>
              <h4 class="font-semibold text-slate-900" x-text="item.milestone"></h4>
              <p class="text-xs text-slate-500" x-text="item.description"></p>
            </div>
            <div class="text-xs font-semibold uppercase tracking-wide text-slate-600">
              <span x-text="item.start"></span>
              <span class="mx-1">→</span>
              <span x-text="item.end"></span>
            </div>
          </li>
        </template>
      </ol>
    </section>

    <section class="space-y-4">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Investment</h3>
      <div class="overflow-hidden rounded-2xl border border-slate-200">
        <table class="w-full text-sm">
          <thead class="bg-slate-100 text-xs font-semibold uppercase tracking-wide text-slate-600">
            <tr>
              <th class="px-4 py-3 text-left">Item</th>
              <th class="px-4 py-3 text-right">Qty</th>
              <th class="px-4 py-3 text-right">Unit</th>
              <th class="px-4 py-3 text-right">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <template x-for="(item, index) in $store.proposal.builder.data.budget.items" :key="`preview-budget-${index}`">
              <tr class="text-slate-700">
                <td class="px-4 py-3" x-text="item.label"></td>
                <td class="px-4 py-3 text-right" x-text="item.qty"></td>
                <td class="px-4 py-3 text-right" x-text="$store.proposal.formatCurrency(item.unitPrice, $store.proposal.builder.currency)"></td>
                <td class="px-4 py-3 text-right font-semibold" x-text="$store.proposal.formatCurrency(item.total, $store.proposal.builder.currency)"></td>
              </tr>
            </template>
          </tbody>
          <tfoot class="bg-slate-50 text-sm font-semibold text-slate-900">
            <tr>
              <td class="px-4 py-3" colspan="3">Total investment</td>
              <td class="px-4 py-3 text-right" x-text="$store.proposal.formatCurrency($store.proposal.builder.data.budget.total, $store.proposal.builder.currency)"></td>
            </tr>
          </tfoot>
        </table>
      </div>
      <p class="text-xs text-slate-500" x-text="$store.proposal.builder.data.budget.notes"></p>
    </section>

    <section class="grid gap-6 lg:grid-cols-2">
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Team</h3>
        <ul class="mt-3 space-y-3 text-sm text-slate-700">
          <template x-for="(member, index) in $store.proposal.builder.data.team" :key="`preview-team-${index}`">
            <li class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
              <p class="font-semibold text-slate-900" x-text="member.name"></p>
              <p class="text-xs uppercase tracking-wide text-slate-500" x-text="member.role"></p>
              <p class="mt-2 text-sm text-slate-600" x-text="member.bio"></p>
            </li>
          </template>
        </ul>
      </div>
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Case studies</h3>
        <ul class="mt-3 space-y-3 text-sm text-slate-700">
          <template x-for="(study, index) in $store.proposal.builder.data.caseStudies" :key="`preview-case-${index}`">
            <li class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
              <p class="font-semibold text-slate-900" x-text="study.title"></p>
              <p class="mt-1 text-sm text-slate-600" x-text="study.summary"></p>
              <a
                class="mt-2 inline-flex items-center gap-2 text-xs font-semibold text-indigo-600 hover:text-indigo-500"
                :href="study.url"
                target="_blank"
                rel="noopener noreferrer"
              >
                View project
                <i class="fas fa-arrow-up-right-from-square text-[10px]"></i>
              </a>
            </li>
          </template>
        </ul>
      </div>
    </section>

    <section class="grid gap-6 lg:grid-cols-2">
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Risks</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-700">
          <template x-for="(risk, index) in $store.proposal.builder.data.risks" :key="`preview-risk-${index}`">
            <li class="flex items-start gap-3">
              <i class="fas fa-triangle-exclamation text-amber-500 text-xs mt-1"></i>
              <span x-text="risk"></span>
            </li>
          </template>
        </ul>
      </div>
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Terms</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-700">
          <template x-for="(term, index) in $store.proposal.builder.data.terms" :key="`preview-term-${index}`">
            <li class="flex items-start gap-3">
              <i class="fas fa-scale-balanced text-indigo-500 text-xs mt-1"></i>
              <span x-text="term"></span>
            </li>
          </template>
        </ul>
      </div>
    </section>
  </div>
</section>
