---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#proposal-dashboard"
  >
    Skip to proposal workspace
  </a>
  <main
    id="proposal-dashboard"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ proposal: $store.proposal })"
    x-init="proposal.initDashboard()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-pen-fancy text-xs"></i>
              Smart proposals, faster sign-offs
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Proposal workspace for modern service teams
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Structure winning proposals with reusable templates, AI-assisted drafting, and effortless exports. Publish a polished web view in minutes.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button
                type="button"
                @click.prevent="proposal.createDraft()"
              >
                <i class="fas fa-plus text-xs"></i>
                New proposal
              </Button>
              <Button
                href="/proposal-writer/templates"
                variant="outline"
              >
                <i class="fas fa-layer-group text-xs"></i>
                Explore templates
              </Button>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-50 blur-xl"></div>
            <div class="relative rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <header class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-slate-900">Snapshot</h2>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <i class="fas fa-circle-dot text-[10px]" :class="proposal.builder.hasUnsavedChanges ? 'text-amber-500' : 'text-emerald-500'"></i>
                  <span x-text="proposal.builder.hasUnsavedChanges ? 'Unsaved edits' : 'Workspace ready'"></span>
                </span>
              </header>
              <dl class="mt-6 grid gap-4 sm:grid-cols-2">
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Proposals</dt>
                  <dd class="mt-2 flex items-end gap-2 text-2xl font-semibold text-slate-900">
                    <span x-text="proposal.state.proposals.length"></span>
                    <span class="text-xs font-medium text-slate-500">total</span>
                  </dd>
                </div>
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Last saved</dt>
                  <dd class="mt-2 text-sm font-semibold text-slate-900" x-text="proposal.builder.lastSavedLabel ?? 'â€”'"></dd>
                </div>
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4 sm:col-span-2">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Published links</dt>
                  <dd class="mt-2 flex items-end gap-2 text-2xl font-semibold text-slate-900">
                    <span x-text="proposal.state.proposals.filter(p => p.status === 'published').length"></span>
                    <span class="text-xs font-medium text-slate-500">live</span>
                  </dd>
                </div>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-8 px-4 sm:px-6 lg:px-8">
        <header class="flex flex-wrap items-center justify-between gap-4">
          <div class="space-y-1">
            <h2 class="text-2xl font-semibold text-slate-900">Your proposals</h2>
            <p class="text-sm text-slate-600">
              Draft, duplicate, publish, and export proposals tailored for every client.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter template</span>
              <i class="fas fa-filter text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="proposal.state.filters.template"
                @change="proposal.applyFilters()"
              >
                <option value="all">All templates</option>
                <template x-for="template in proposal.templates" :key="template.key">
                  <option :value="template.key" x-text="template.label"></option>
                </template>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Filter status</span>
              <i class="fas fa-traffic-light text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="proposal.state.filters.status"
                @change="proposal.applyFilters()"
              >
                <option value="all">All statuses</option>
                <option value="draft">Draft</option>
                <option value="published">Published</option>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Search proposals</span>
              <i class="fas fa-search text-xs"></i>
              <input
                type="search"
                placeholder="Search client or title"
                class="w-40 bg-transparent text-sm focus:outline-none"
                x-model="proposal.state.filters.search"
                @input.debounce.300ms="proposal.applyFilters()"
              />
            </label>
          </div>
        </header>

        <div class="grid gap-6 lg:grid-cols-2">
          <template x-if="proposal.state.loading">
            <div class="lg:col-span-2 grid gap-6 sm:grid-cols-2">
              <template x-for="placeholder in 4" :key="`proposal-skeleton-${placeholder}`">
                <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                  <div class="space-y-3">
                    <div class="h-6 w-40 rounded bg-slate-200"></div>
                    <div class="h-4 w-32 rounded bg-slate-100"></div>
                    <div class="h-[72px] rounded bg-slate-50"></div>
                  </div>
                  <div class="mt-6 flex items-center justify-between">
                    <div class="h-6 w-24 rounded-full bg-slate-100"></div>
                    <div class="h-10 w-28 rounded-full bg-slate-200"></div>
                  </div>
                </article>
              </template>
            </div>
          </template>

          <template x-if="!proposal.state.loading && proposal.state.filtered.length === 0">
            <div class="lg:col-span-2 rounded-2xl border border-dashed border-slate-200 bg-white p-12 text-center">
              <i class="fas fa-file-circle-plus text-3xl text-slate-300"></i>
              <h3 class="mt-4 text-lg font-semibold text-slate-900">No proposals yet</h3>
              <p class="mt-2 text-sm text-slate-600">
                Start with a blank canvas or jump into the template gallery to bootstrap your next pitch.
              </p>
              <Button
                type="button"
                @click.prevent="proposal.createDraft()"
              >
                <i class="fas fa-plus text-xs"></i>
                Create proposal
              </Button>
            </div>
          </template>

          <template x-for="item in proposal.state.filtered" :key="item.id">
            <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:shadow-md">
              <div class="space-y-4">
                <div class="flex items-center justify-between gap-3">
                  <h3 class="text-xl font-semibold text-slate-900" x-text="item.title || 'Untitled proposal'"></h3>
                  <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                    <i class="fas fa-layer-group text-[11px]"></i>
                    <span class="capitalize" x-text="item.templateKey"></span>
                  </span>
                </div>
                <p class="text-sm text-slate-600" x-text="proposal.describe(item)"></p>
                <dl class="grid grid-cols-2 gap-3 text-sm text-slate-500">
                  <div>
                    <dt class="font-medium text-slate-500">Client</dt>
                    <dd class="text-slate-700" x-text="item.data?.client?.name || 'â€”'"></dd>
                  </div>
                  <div>
                    <dt class="font-medium text-slate-500">Status</dt>
                    <dd>
                      <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold" :class="item.status === 'published' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600'">
                        <i class="fas" :class="item.status === 'published' ? 'fa-earth-americas' : 'fa-pen'"></i>
                        <span class="capitalize" x-text="item.status"></span>
                      </span>
                    </dd>
                  </div>
                  <div>
                    <dt class="font-medium text-slate-500">Last saved</dt>
                    <dd class="text-slate-700" x-text="proposal.formatRelative(item.lastSavedAt ?? item.createdAt)"></dd>
                  </div>
                  <div>
                    <dt class="font-medium text-slate-500">Budget total</dt>
                    <dd class="text-slate-700" x-text="proposal.formatCurrency(item.data?.budget?.total ?? 0, item.currency)"></dd>
                  </div>
                </dl>
              </div>
              <footer class="mt-6 flex flex-wrap items-center justify-between gap-3">
                <div class="flex flex-wrap gap-2">
                  <Button
                    href=""
                    variant="ghost"
                    @click.prevent="window.location.assign(`/proposal-writer/builder?id=${item.id}`)"
                  >
                    <i class="fas fa-arrow-right text-xs"></i>
                    Open
                  </Button>
                  <Button
                    type="button"
                    variant="ghost"
                    @click.prevent="proposal.duplicate(item.id)"
                  >
                    <i class="fas fa-copy text-xs"></i>
                    Duplicate
                  </Button>
                  <Button
                    type="button"
                    variant="ghost"
                    @click.prevent="proposal.delete(item.id)"
                  >
                    <i class="fas fa-trash text-xs"></i>
                    Delete
                  </Button>
                </div>
                <div class="flex items-center gap-2">
                  <template x-if="item.slug">
                    <a
                      class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700 hover:bg-emerald-200"
                      :href="`/proposal-writer/view/${item.slug}`"
                    >
                      <i class="fas fa-share-nodes text-[11px]"></i>
                      View link
                    </a>
                  </template>
                  <template x-if="!item.slug">
                    <button
                      type="button"
                      class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-3 py-1 text-xs font-semibold text-white shadow-sm hover:bg-indigo-500"
                      @click.prevent="proposal.publishFromList(item.id)"
                    >
                      <i class="fas fa-earth-americas text-[11px]"></i>
                      Publish
                    </button>
                  </template>
                </div>
              </footer>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
