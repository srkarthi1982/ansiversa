---
import Layout from '../../layouts/Layout.astro';
---
<Layout>
  <main class="bg-slate-50 min-h-screen" x-data="() => $store['cover-letter-writer']" x-init="ensureList()">
    <section class="border-b border-slate-200 bg-white/80">
      <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
        <a href="/cover-letter-writer" class="inline-flex items-center gap-2 text-sm font-semibold text-slate-600 transition hover:text-slate-900">
          <i class="fas fa-arrow-left text-xs"></i>
          Back to letters
        </a>
        <div class="mt-6 space-y-4">
          <h1 class="text-3xl font-bold tracking-tight text-slate-900">Choose a template</h1>
          <p class="text-slate-600">
            Templates control layout and styling for exports. Switch anytimeâ€”your content stays intact.
          </p>
        </div>
      </div>
    </section>

    <section class="py-12">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 sm:grid-cols-2">
          <template x-for="template in templates" :key="template.key">
            <article class="flex h-full flex-col justify-between rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-indigo-200">
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <h2 class="text-xl font-semibold text-slate-900" x-text="template.label"></h2>
                  <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold" :class="template.plan === 'pro' ? 'bg-amber-50 text-amber-600' : 'bg-emerald-50 text-emerald-600'">
                    <i :class="template.icon" class="text-[11px]"></i>
                    <span x-text="template.plan === 'pro' ? 'Pro' : 'Free'"></span>
                  </span>
                </div>
                <p class="text-sm text-slate-600" x-text="template.description"></p>
                <div class="rounded-2xl border border-slate-100 bg-slate-50/70 p-4 text-xs text-slate-500">
                  <p x-text="`Preview coming soon. Expect a layout optimised for ${template.label} tone.`"></p>
                </div>
              </div>
              <div class="mt-6 flex flex-wrap items-center gap-3">
                <button
                  type="button"
                  class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500"
                  :disabled="!canUseTemplate(template.key)"
                  @click="selectTemplateFromGallery(template.key)"
                >
                  <i class="fas fa-check text-xs"></i>
                  Use template
                </button>
                <button
                  type="button"
                  class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 transition hover:border-indigo-300 hover:text-indigo-600"
                  @click="previewTemplate(template.key)"
                >
                  <i class="fas fa-eye text-xs"></i>
                  Preview sample
                </button>
                <p class="text-xs font-semibold text-rose-500" x-show="isFreePlan && template.plan === 'pro'">
                  Upgrade required to unlock this template.
                </p>
              </div>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
