---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
import FeatureCard from "../../components/FeatureCard.astro";
import SectionHeading from "../../components/SectionHeading.astro";

const historyHighlights = [
  {
    title: "Prompt library",
    description:
      "Search prompts by subject, board, class, persona, or tags. Pin favourites and duplicate into new drafts instantly.",
    icon: "fas fa-book",
  },
  {
    title: "Version timelines",
    description:
      "Compare revisions with diff views, roll back to prior versions, and annotate changes for collaborators.",
    icon: "fas fa-code-branch",
  },
  {
    title: "Run archive",
    description:
      "Filter outputs by persona, rubric score, guardrail status, or dataset. Export audit trails with one click.",
    icon: "fas fa-box-archive",
  },
];

const promptColumns = [
  { label: "Prompt", key: "title" },
  { label: "Subject", key: "subject" },
  { label: "Persona", key: "persona" },
  { label: "Updated", key: "updated" },
  { label: "Score", key: "score" },
];

const promptRows = [
  {
    title: "Thermodynamics lesson plan",
    subject: "Physics · CBSE 11",
    persona: "Teacher",
    updated: "12 Aug 2024",
    score: "Avg 4.6",
  },
  {
    title: "Poetry analysis rubric",
    subject: "English · CBSE 10",
    persona: "Examiner",
    updated: "09 Aug 2024",
    score: "Avg 4.8",
  },
  {
    title: "Cell biology quiz",
    subject: "Biology · CBSE 12",
    persona: "Tutor",
    updated: "07 Aug 2024",
    score: "Avg 4.4",
  },
];

const auditEvents = [
  {
    time: "Today, 10:24",
    title: "Prompt version restored",
    detail: "Ms. Patel restored revision 3 for Thermodynamics lesson plan.",
    icon: "fas fa-rotate-left",
  },
  {
    time: "Today, 09:02",
    title: "Dataset export",
    detail: "Quiz variants batch exported to Lesson Builder & FlashNote.",
    icon: "fas fa-file-export",
  },
  {
    time: "Yesterday, 17:16",
    title: "Guardrail flag cleared",
    detail: "Similarity alert dismissed after manual review by Mr. Rao.",
    icon: "fas fa-shield-check",
  },
];

const retentionHighlights = [
  {
    title: "Snapshot retention",
    description:
      "Keep the last 50 revisions per prompt on free plans, unlimited on pro. Snapshots include builder sections and preview text.",
    icon: "fas fa-camera",
  },
  {
    title: "Audit exports",
    description:
      "Download CSV or JSON containing prompt metadata, runs, eval scores, guardrail results, and exports.",
    icon: "fas fa-file-csv",
  },
  {
    title: "Integrations",
    description:
      "Send best-performing outputs to Lesson Builder, Quiz Institute, FlashNote, Presentation Designer, and Study Planner.",
    icon: "fas fa-link",
  },
];
---
<Layout title="EduPrompt History">
  <main class="bg-slate-50">
    <section class="relative overflow-hidden py-16 sm:py-24">
      <div class="absolute inset-0 -z-10 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-clock-rotate-left text-xs" aria-hidden="true"></i>
              Prompt history
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Audit every prompt and run
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              The history workspace keeps prompts, runs, datasets, and exports organised with filters, audit logs, and retention policies tailored for educators.
            </p>
            <div class="flex flex-wrap items-center justify-center gap-3 lg:justify-start">
              <Button href="/eduprompt">
                <i class="fas fa-arrow-left text-xs" aria-hidden="true"></i>
                Back to EduPrompt
              </Button>
              <Button href="/eduprompt/builder" variant="outline">
                <i class="fas fa-sliders text-xs" aria-hidden="true"></i>
                Open builder
              </Button>
              <Button href="/eduprompt/datasets" variant="ghost">
                <i class="fas fa-database text-xs" aria-hidden="true"></i>
                View datasets
              </Button>
            </div>
          </div>
          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-soft">
            <h2 class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-500">Highlights</h2>
            <div class="mt-5 grid gap-4 sm:grid-cols-3">
              {historyHighlights.map((item) => (
                <div class="rounded-2xl border border-slate-100 bg-slate-50/80 p-4 text-left">
                  <div class="flex items-center gap-2 text-indigo-600">
                    <i class={`${item.icon} text-sm`} aria-hidden="true"></i>
                    <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">{item.title}</span>
                  </div>
                  <p class="mt-3 text-xs text-slate-600">{item.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 space-y-12">
        <SectionHeading
          align="center"
          eyebrow="PROMPT LIBRARY"
          title="Find the right prompt fast"
          description="Filter by metadata, persona, and evaluation score."
        />
        <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-soft">
          <table class="min-w-full divide-y divide-slate-200 text-left text-sm text-slate-600">
            <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
              <tr>
                {promptColumns.map((column) => (
                  <th scope="col" class="px-4 py-3">{column.label}</th>
                ))}
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              {promptRows.map((row) => (
                <tr>
                  <td class="px-4 py-3 font-semibold text-slate-900">{row.title}</td>
                  <td class="px-4 py-3 text-slate-600">{row.subject}</td>
                  <td class="px-4 py-3 text-slate-600">{row.persona}</td>
                  <td class="px-4 py-3 text-slate-600">{row.updated}</td>
                  <td class="px-4 py-3 text-slate-600">{row.score}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 space-y-12">
        <SectionHeading
          align="center"
          eyebrow="AUDIT LOG"
          title="Know who changed what"
          description="A chronological feed tracks prompt edits, runs, exports, and guardrail decisions."
        />
        <div class="grid gap-6 lg:grid-cols-[1fr_1.1fr] lg:items-start">
          <div class="space-y-6">
            {auditEvents.map((event) => (
              <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-soft">
                <div class="flex items-center gap-3 text-xs font-semibold uppercase tracking-wide text-slate-500">
                  <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
                    <i class={`${event.icon} text-xs`} aria-hidden="true"></i>
                  </span>
                  <span>{event.time}</span>
                </div>
                <h3 class="mt-3 text-lg font-semibold text-slate-900">{event.title}</h3>
                <p class="mt-2 text-sm text-slate-600">{event.detail}</p>
              </div>
            ))}
          </div>
          <div class="rounded-3xl border border-indigo-100 bg-indigo-50/60 p-8 text-sm text-slate-600">
            <h3 class="text-xl font-semibold text-slate-900">Retention policies</h3>
            <ul class="mt-4 space-y-3">
              <li class="flex gap-2">
                <i class="fas fa-layer-group text-xs text-indigo-500 mt-1"></i>
                <span>Free plan keeps 30 days of runs and the latest 10 outputs per prompt.</span>
              </li>
              <li class="flex gap-2">
                <i class="fas fa-gem text-xs text-indigo-500 mt-1"></i>
                <span>Pro plan stores unlimited history with exportable audit trails.</span>
              </li>
              <li class="flex gap-2">
                <i class="fas fa-bell text-xs text-indigo-500 mt-1"></i>
                <span>Notifications alert educators when retention limits are approaching.</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 space-y-12">
        <SectionHeading
          align="center"
          eyebrow="RETENTION & EXPORT"
          title="Keep data useful beyond EduPrompt"
          description="Backups, exports, and integrations ensure prompt work lives where you need it."
        />
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {retentionHighlights.map((item) => (
            <FeatureCard {...item} />
          ))}
        </div>
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="rounded-3xl border border-indigo-100 bg-indigo-50/60 p-8">
          <div class="grid gap-6 lg:grid-cols-[1fr_1fr] lg:items-center">
            <div class="space-y-4">
              <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-500">Next steps</p>
              <h3 class="text-2xl font-semibold text-slate-900">Share your best prompts</h3>
              <p class="text-sm text-slate-600">
                Move from history to action by exporting top-performing outputs to Lesson Builder, Quiz Institute, FlashNote, and Study Planner.
              </p>
            </div>
            <div class="flex flex-wrap gap-3">
              <Button href="/eduprompt/run/sample" class="shadow-sm">
                <i class="fas fa-terminal text-xs" aria-hidden="true"></i>
                View run console
              </Button>
              <Button href="/eduprompt/datasets" variant="outline">
                <i class="fas fa-database text-xs" aria-hidden="true"></i>
                Manage datasets
              </Button>
              <Button href="/eduprompt/settings" variant="ghost">
                <i class="fas fa-gear text-xs" aria-hidden="true"></i>
                Adjust defaults
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
