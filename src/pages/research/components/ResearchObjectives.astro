---
import SectionHeading from "../../../components/SectionHeading.astro";
import { objectiveHighlights, nonGoals } from "../data/researchData";
---
<section class="bg-white py-16 sm:py-20" aria-labelledby="research-objectives">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="North star"
      title="Objectives anchored in trustworthy synthesis"
      description="Each capability in Research Assistant is tuned for evidence-backed writing, from structured projects to end-to-end drafting."
      id="research-objectives"
    />
    <div class="grid gap-6 lg:grid-cols-2">
      {objectiveHighlights.map((item) => (
        <article class="relative overflow-hidden rounded-3xl border border-slate-200 bg-slate-50/60 p-6 shadow-sm" key={item.title}>
          <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-indigo-500 via-sky-500 to-purple-500"></div>
          <h3 class="text-lg font-semibold text-slate-900">{item.title}</h3>
          <p class="mt-3 text-sm text-slate-600">{item.description}</p>
          <dl class="mt-6 flex items-center justify-between rounded-2xl border border-indigo-100 bg-white/90 px-4 py-3 text-sm text-slate-700">
            <div>
              <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-500">{item.metricLabel}</dt>
              <dd class="mt-1 font-semibold text-slate-900">{item.metricValue}</dd>
            </div>
            <i class="fas fa-arrow-trend-up text-indigo-400"></i>
          </dl>
        </article>
      ))}
    </div>
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Not in scope for v1</h3>
      <ul class="mt-3 grid gap-3 sm:grid-cols-2">
        {nonGoals.map((item) => (
          <li class="flex items-start gap-3 rounded-2xl border border-slate-100 bg-slate-50/70 p-3 text-sm text-slate-600" key={item}>
            <span class="mt-1 text-indigo-500">
              <i class="fas fa-circle-minus text-xs"></i>
            </span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
