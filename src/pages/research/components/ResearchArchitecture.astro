---
import SectionHeading from "../../../components/SectionHeading.astro";
import { apiSurface, dataModel } from "../data/researchData";
---
<section class="bg-slate-900 py-16 text-white sm:py-20" aria-labelledby="research-architecture">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Architecture"
      title="Information architecture and service contracts"
      description="Routes, API contracts, and data models align Reader, Synthesis, and Writer workflows without losing provenance."
      id="research-architecture"
      class="text-white"
    />
    <div class="grid gap-6 lg:grid-cols-[0.9fr_1.1fr]">
      <article class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-indigo-200">Client routes</h3>
        <ul class="mt-4 space-y-3 text-sm text-slate-100">
          {apiSurface.routes.map((route) => (
            <li class="flex items-center gap-3 rounded-2xl border border-white/10 bg-white/5 px-4 py-2" key={route}>
              <i class="fas fa-route text-[11px] text-indigo-200"></i>
              <span>{route}</span>
            </li>
          ))}
        </ul>
      </article>
      <article class="space-y-6 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-indigo-200">SSR endpoints</h3>
        <div class="grid gap-4 sm:grid-cols-2">
          {apiSurface.endpoints.map((group) => (
            <section class="rounded-2xl border border-white/10 bg-slate-950/60 p-4" key={group.category}>
              <header class="flex items-center justify-between gap-2">
                <p class="text-sm font-semibold text-white">{group.category}</p>
                <span class="rounded-full bg-indigo-500/20 px-3 py-1 text-[11px] font-semibold text-indigo-100">{group.paths.length} endpoints</span>
              </header>
              <ul class="mt-3 space-y-2 text-xs text-slate-200">
                {group.paths.map((path) => (
                  <li class="flex items-start gap-2" key={path}>
                    <i class="fas fa-circle text-[6px] text-indigo-300 mt-1"></i>
                    <span>{path}</span>
                  </li>
                ))}
              </ul>
            </section>
          ))}
        </div>
      </article>
    </div>
    <div class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-indigo-200">Astro DB entities</h3>
      <div class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {dataModel.map((entity) => (
          <section class="rounded-2xl border border-white/10 bg-slate-950/60 p-4" key={entity.entity}>
            <h4 class="text-sm font-semibold text-white">{entity.entity}</h4>
            <ul class="mt-3 space-y-1 text-xs text-slate-200">
              {entity.fields.map((field) => (
                <li class="flex items-start gap-2" key={field}>
                  <i class="fas fa-square text-[7px] text-indigo-300 mt-1"></i>
                  <span>{field}</span>
                </li>
              ))}
            </ul>
          </section>
        ))}
      </div>
    </div>
  </div>
</section>
