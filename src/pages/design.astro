---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Design System — Ansiversa">
    <section class="container my-10 space-y-10">
        <header class="text-center space-y-4">
            <h1 class="scroll-m-20 text-4xl font-bold tracking-tight">
                Ansiversa UI System
            </h1>
            <p class="max-w-2xl mx-auto text-slate-600 dark:text-slate-400">
                This page lists global tokens and production-ready UI
                components. Copy what you need and keep visual consistency
                across all apps.
            </p>
            <div class="flex items-center justify-center gap-3">
                <button class="btn btn-primary">Primary</button>
                <button class="btn btn-secondary">Secondary</button>
                <button class="btn btn-ghost">Ghost</button>
            </div>
        </header>

        <!-- Tokens -->
        <section id="tokens" class="space-y-4">
            <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">
                Design Tokens
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="card">
                    <h3 class="mb-3 text-xl font-semibold">Colors</h3>
                    <div class="grid grid-cols-5 gap-3">
                        <div class="h-12 rounded-xl bg-indigo-500"></div>
                        <div class="h-12 rounded-xl bg-indigo-600"></div>
                        <div class="h-12 rounded-xl bg-cyan-500"></div>
                        <div class="h-12 rounded-xl bg-emerald-500"></div>
                        <div class="h-12 rounded-xl bg-rose-500"></div>
                    </div>
                    <p class="mt-3 text-sm text-slate-500">
                        Primary, Accent, Success, Danger samples
                    </p>
                </div>
                <div class="card">
                    <h3 class="mb-3 text-xl font-semibold">Radius & Shadows</h3>
                    <div class="flex items-end gap-6">
                        <div
                            class="h-16 w-24 rounded-xl bg-white shadow-soft dark:bg-slate-800"
                        >
                        </div>
                        <div
                            class="h-16 w-24 rounded-2xl bg-white shadow-glass dark:bg-slate-800"
                        >
                        </div>
                    </div>
                    <p class="mt-3 text-sm text-slate-500">
                        `.rounded-xl`, `.rounded-2xl`, `shadow-soft`
                    </p>
                </div>
                <div class="card">
                    <h3 class="mb-3 text-xl font-semibold">Typography</h3>
                    <div class="space-y-1">
                        <div class="text-3xl font-bold">Heading H1</div>
                        <div class="text-2xl font-semibold">Heading H2</div>
                        <div class="text-xl font-semibold">Heading H3</div>
                        <p>Body text — 16px/24px</p>
                        <small>Small / helper</small>
                    </div>
                </div>
            </div>
        </section>
        <!-- Buttons -->
        <button class="btn btn-primary">MD</button>
        <button class="btn btn-primary px-5 py-3 text-base">LG</button>
    </section>
</Layout>

<!-- Forms -->
<section id="forms" class="space-y-4">
    <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">Forms</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <form class="card space-y-4" onsubmit="event.preventDefault()">
            <div>
                <label class="label" for="email">Email</label>
                <input
                    id="email"
                    type="email"
                    placeholder="you@ansiversa.com"
                    class="input"
                />
            </div>
            <div x-data="{ show: false }">
                <label class="label" for="password">Password</label>
                <div class="relative mt-1">
                    <input
                        id="password"
                        :type="show ? 'text' : 'password'"
                        class="input pr-10"
                        placeholder="••••••••"
                    />
                    <button
                        type="button"
                        x-on:click="show = !show"
                        :aria-label="show ? 'Hide password' : 'Show password'"
                        class="absolute inset-y-0 right-0 flex items-center px-3 text-slate-400 hover:text-slate-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
                    >
                        <svg
                            x-show="!show"
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                            />
                            <circle cx="12" cy="12" r="3" stroke-width="1.5" />
                        </svg>
                        <svg
                            x-show="show"
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.477 0-8.268-2.943-9.542-7a9.979 9.979 0 0 1 3.113-4.568m2.873-1.705A9.956 9.956 0 0 1 12 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 0 1-1.249 2.592M15 12a3 3 0 0 1-3 3m0-6a3 3 0 0 1 3 3m-3 3L4.5 4.5m7.5 4.5a3 3 0 0 0-3 3m3 3 7.5 7.5"
                            />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <label class="inline-flex items-center gap-2 text-sm">
                    <input
                        type="checkbox"
                        class="rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                    />
                    Remember me
                </label>
                <a href="#" class="text-sm text-indigo-600 hover:underline"
                    >Forgot?</a
                >
            </div>
            <button class="btn btn-primary w-full">Sign in</button>
        </form>

        <div class="card space-y-4">
            <label class="label" for="search">Search</label>
            <div class="flex items-center gap-2">
                <input
                    id="search"
                    placeholder="Find components…"
                    class="input"
                />
                <button class="btn btn-secondary">Search</button>
            </div>

            <label class="label">Switch</label>
            <button
                type="button"
                class="switch"
                id="ans-switch"
                aria-pressed="false"
                data-on="false"
            >
                <span class="switch-dot"></span>
            </button>

            <div class="space-x-2">
                <span class="badge">Badge</span>
                <span class="badge-soft">Soft Badge</span>
            </div>
        </div>
    </div>
</section>

<!-- Cards & Layout -->
<section id="cards" class="space-y-4">
    <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">
        Cards & Layout
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <article class="card">
            <h3 class="mb-2 text-xl font-semibold">Metric</h3>
            <p class="text-3xl font-semibold">1,284</p>
            <p class="text-sm text-slate-500">Active users</p>
        </article>
        <article class="card">
            <h3 class="mb-2 text-xl font-semibold">List</h3>
            <ul class="space-y-2">
                <li class="flex items-center justify-between">
                    <span>Quiz Engine</span><span class="badge-soft badge"
                        >Stable</span>
                </li>
                <li class="flex items-center justify-between">
                    <span>Payments</span><span class="badge-soft badge"
                        >WIP</span>
                </li>
                <li class="flex items-center justify-between">
                    <span>Analytics</span><span class="badge-soft badge"
                        >Beta</span>
                </li>
            </ul>
        </article>
        <article class="card">
            <h3 class="mb-2 text-xl font-semibold">CTA</h3>
            <p class="mb-3 text-sm text-slate-600">
                Centralize your UI. Ship faster.
            </p>
            <button class="btn btn-primary w-full">Get Started</button>
        </article>
    </div>
</section>

<!-- Table & Pagination -->
<td class="px-6 py-4">Quiz Engine</td>
<td class="px-6 py-4"><span class="badge-soft badge">Stable</span></td>
<td class="px-6 py-4 text-right"
    ><button class="btn btn-ghost">Manage</button></td
>

<tr>
    <td class="px-6 py-4">Payments</td>
    <td class="px-6 py-4"><span class="badge-soft badge">WIP</span></td>
    <td class="px-6 py-4 text-right"
        ><button class="btn btn-ghost">Manage</button></td
    >
</tr>

<div class="flex items-center justify-between border-t border-slate-200 p-4">
    <p class="text-sm text-slate-500">Showing 1–2 of 2</p>
    <div class="flex items-center gap-2">
        <button class="btn btn-ghost">Previous</button>
        <button class="btn btn-primary">Next</button>
    </div>
</div>

<!-- Alerts -->
<section id="alerts" class="space-y-4">
    <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">Alerts</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card" style="border-color: rgb(187 247 208);">
            <h3 class="mb-2 font-semibold text-green-700">Success</h3>
            <p class="text-sm text-green-700/90">
                Your changes have been saved.
            </p>
        </div>
        <div class="card" style="border-color: rgb(253 230 138);">
            <h3 class="mb-2 font-semibold text-amber-700">Warning</h3>
            <p class="text-sm text-amber-700/90">
                Double‑check required fields.
            </p>
        </div>
        <div class="card md:col-span-2" style="border-color: rgb(254 205 211);">
            <h3 class="mb-2 font-semibold text-rose-700">Error</h3>
            <p class="text-sm text-rose-700/90">
                Something went wrong. Try again.
            </p>
        </div>
    </div>
</section>

<!-- Tabs -->
<section id="tabs" class="space-y-4">
    <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">Tabs</h2>
    <div class="card">
        <div
            class="flex items-center gap-2 border-b border-slate-200 pb-2"
            id="tabs-bar"
        >
            <button class="btn btn-ghost" data-tab="overview">Overview</button>
            <button class="btn btn-ghost" data-tab="components"
                >Components</button
            >
            <button class="btn btn-ghost" data-tab="tokens">Tokens</button>
        </div>
        <div class="pt-4 text-sm text-slate-600" id="tabs-content">
            Tabs are click‑styled. Wire to router/state as needed.
        </div>
    </div>
</section>

<!-- Modal -->
<section id="modal" class="space-y-4">
    <h2 class="scroll-m-20 text-3xl font-semibold tracking-tight">Modal</h2>
    <div class="card">
        <button class="btn btn-primary" id="openModal">Open Modal</button>
        <dialog id="ans-modal" class="rounded-2xl p-0 backdrop:bg-black/50">
            <div class="card m-0 rounded-2xl">
                <div class="mb-3 flex items-center justify-between">
                    <h3 class="text-xl font-semibold">Example Modal</h3>
                    <button class="btn btn-ghost" id="closeModal">Close</button>
                </div>
                <p class="text-sm text-slate-600">
                    Use the native <code>&lt;dialog&gt;</code> element.
                </p>
            </div>
        </dialog>
    </div>
</section>
<script>
    
    // Switch toggle
    const sw = document.getElementById("ans-switch");
    sw?.addEventListener("click", () => {
        const on = sw.getAttribute("data-on") === "true";
        sw.setAttribute("data-on", String(!on));
        sw.setAttribute("aria-pressed", String(!on));
    });

    // Tabs (simple demo styles)
    const bar = document.getElementById("tabs-bar");
    const content = document.getElementById("tabs-content");
    bar?.addEventListener("click", (e) => {
        const btn = e.target.closest("button[data-tab]");
        if (!btn) return;
        [...bar.querySelectorAll("button")].forEach((b) =>
            b.classList.remove("btn-secondary"),
        );
        btn.classList.add("btn-secondary");
        content.textContent = `You selected: ${btn.getAttribute("data-tab")}`;
    });

    // Modal
    const d = document.getElementById("ans-modal");
    document
        .getElementById("openModal")
        ?.addEventListener("click", () => d?.showModal());
    document
        .getElementById("closeModal")
        ?.addEventListener("click", () => d?.close());

    // Toast
    const t = document.getElementById("toast");
    document.getElementById("toastBtn")?.addEventListener("click", () => {
        if (!t) return;
        t.classList.remove("hidden");
        setTimeout(() => t.classList.add("hidden"), 1800);
    });
    
</script>
