---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
---

<Layout>
  <main class="min-h-screen bg-slate-50">
    <section class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-sky-500 to-purple-600 py-16 text-white">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.18),_rgba(79,70,229,0.1))]"></div>
      <div class="relative mx-auto flex max-w-6xl flex-col gap-10 px-4 sm:px-6 lg:flex-row lg:items-end lg:px-8">
        <div class="flex-1 space-y-6">
          <span class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em]">
            Social Caption Generator
          </span>
          <h1 class="text-4xl font-black tracking-tight sm:text-5xl lg:text-6xl">
            Generate, localize, and ship ready-to-post captions
          </h1>
          <p class="max-w-2xl text-white/80">
            Turn any launch idea into platform-perfect captions with brand voices, hashtag sets,
            UTM tracking, and localization â€” all in one flow. Build variants, compare performance,
            and save campaigns without leaving Ansiversa.
          </p>
          <div class="flex flex-wrap gap-4">
            <Button href="/caption/editor" variant="secondary">
              <i class="fas fa-pen-to-square text-sm"></i>
              Open editor
            </Button>
            <Button href="#caption-generator" variant="outline">
              <i class="fas fa-wand-magic-sparkles text-sm"></i>
              Generate caption
            </Button>
            <Button href="/caption/campaigns" variant="ghost">
              <i class="fas fa-calendar-star text-sm"></i>
              Campaign planner
            </Button>
          </div>
        </div>
        <div class="grid w-full max-w-md gap-4 rounded-3xl border border-white/20 bg-white/10 p-6 backdrop-blur">
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Generations this month</p>
            <p class="mt-2 text-3xl font-bold" x-text="$store.caption.dashboardMetrics.generations"></p>
          </div>
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Campaigns in motion</p>
            <p class="mt-2 text-3xl font-bold" x-text="$store.caption.dashboardMetrics.campaigns"></p>
          </div>
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Scheduled posts</p>
            <p class="mt-2 text-3xl font-bold" x-text="$store.caption.dashboardMetrics.scheduled"></p>
          </div>
        </div>
      </div>
    </section>

    <section
      id="caption-generator"
      class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8"
      x-data="() => ({
        store: $store.caption,
        platformMap: Object.fromEntries($store.caption.listPlatforms.map((platform) => [platform.id, platform])),
        get planUsage() {
          return this.store.planUsage;
        },
      })"
    >
      <div class="flex flex-col gap-6 lg:flex-row lg:items-start">
        <div class="flex-1 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
          <header class="flex flex-wrap items-center justify-between gap-4">
            <div>
              <h2 class="text-2xl font-bold text-slate-900">Quick generator</h2>
              <p class="mt-2 text-sm text-slate-600">
                Describe the campaign, pick your channels, and generate tailored variants with one click.
              </p>
            </div>
            <label class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-4 py-2 text-xs font-semibold uppercase tracking-wide text-slate-600">
              <input type="checkbox" class="rounded border-slate-300" x-model="store.generatorState.ephemeral" />
              Ephemeral mode
            </label>
          </header>

          <form class="mt-8 space-y-8" x-on:submit.prevent="store.generateFromForm()">
            <div>
              <label class="text-sm font-semibold text-slate-700">Post idea</label>
              <textarea
                class="mt-2 w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                rows="4"
                placeholder="Announce a product launch, community milestone, or event"
                x-model="store.generatorState.idea"
              ></textarea>
            </div>

            <div class="grid gap-6 md:grid-cols-2">
              <div class="space-y-3">
                <p class="text-sm font-semibold text-slate-700">Platforms</p>
                <div class="grid gap-3 sm:grid-cols-2">
                  <template x-for="platform in store.listPlatforms" :key="platform.id">
                    <label class="flex items-center gap-3 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm shadow-sm">
                      <input
                        type="checkbox"
                        class="rounded border-slate-300"
                        :value="platform.id"
                        x-model="store.generatorState.platforms"
                      />
                      <span class="flex items-center gap-2">
                        <i class="text-base" :class="platform.icon"></i>
                        <span class="font-semibold text-slate-800" x-text="platform.name"></span>
                      </span>
                    </label>
                  </template>
                </div>
              </div>

              <div class="space-y-5">
                <div>
                  <label class="text-sm font-semibold text-slate-700">Brand voice</label>
                  <select
                    class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.voiceId"
                  >
                    <template x-for="voice in store.listVoices" :key="voice.id">
                      <option :value="voice.id" x-text="voice.name"></option>
                    </template>
                  </select>
                </div>
                <div>
                  <label class="text-sm font-semibold text-slate-700">Hashtag set</label>
                  <select
                    class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.hashtagSetId"
                  >
                    <template x-for="set in store.listHashtagSets" :key="set.id">
                      <option :value="set.id" x-text="set.name"></option>
                    </template>
                    <option value="" x-show="store.listHashtagSets.length === 0">No sets yet</option>
                  </select>
                </div>
                <div>
                  <label class="text-sm font-semibold text-slate-700">CTA preset</label>
                  <select
                    class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.ctaId"
                  >
                    <template x-for="cta in store.listCtas" :key="cta.id">
                      <option :value="cta.id" x-text="cta.label"></option>
                    </template>
                  </select>
                </div>
              </div>
            </div>

            <div class="grid gap-6 md:grid-cols-2">
              <div>
                <label class="text-sm font-semibold text-slate-700">Primary link</label>
                <input
                  type="url"
                  placeholder="https://ansiversa.com"
                  class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                  x-model="store.generatorState.link"
                  x-on:blur="store.updateGeneratorLink($event.target.value)"
                />
              </div>
              <div>
                <label class="text-sm font-semibold text-slate-700">UTM builder</label>
                <div class="mt-2 grid gap-3 sm:grid-cols-2">
                  <input
                    type="text"
                    placeholder="Source"
                    class="rounded-2xl border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.utm.source"
                    x-on:input="store.updateUtmField('source')($event.target.value)"
                  />
                  <input
                    type="text"
                    placeholder="Medium"
                    class="rounded-2xl border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.utm.medium"
                    x-on:input="store.updateUtmField('medium')($event.target.value)"
                  />
                  <input
                    type="text"
                    placeholder="Campaign"
                    class="rounded-2xl border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.utm.campaign"
                    x-on:input="store.updateUtmField('campaign')($event.target.value)"
                  />
                  <input
                    type="text"
                    placeholder="Content"
                    class="rounded-2xl border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    x-model="store.generatorState.utm.content"
                    x-on:input="store.updateUtmField('content')($event.target.value)"
                  />
                </div>
                <p class="mt-3 truncate text-xs text-slate-500" x-text="store.generatorState.utm.url"></p>
              </div>
            </div>

            <div class="flex flex-wrap items-center gap-3">
              <Button type="submit" :class="store.generatorState.loading ? 'opacity-70 cursor-wait' : ''">
                <i class="fas fa-wand-magic-sparkles text-sm"></i>
                <span x-text="store.generatorState.loading ? 'Generatingâ€¦' : 'Generate captions'"></span>
              </Button>
              <Button type="button" variant="ghost" x-on:click="store.regenerateActiveDraft()">
                <i class="fas fa-arrows-rotate text-sm"></i>
                Regenerate variants
              </Button>
              <Button href="/caption/editor" variant="outline">
                <i class="fas fa-sliders text-sm"></i>
                Open full editor
              </Button>
            </div>
          </form>
        </div>

        <aside class="w-full max-w-md space-y-6">
          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Plan usage</h3>
            <template x-if="planUsage">
              <div class="mt-4 space-y-4">
                <div>
                  <p class="text-sm text-slate-600">Generations this month</p>
                  <div class="mt-2 flex items-baseline gap-2">
                    <span class="text-3xl font-bold text-slate-900" x-text="planUsage.used"></span>
                    <span class="text-sm text-slate-500" x-text="planUsage.allowance ? `of ${planUsage.allowance}` : 'of Unlimited'"></span>
                  </div>
                </div>
                <div class="rounded-2xl bg-indigo-50 px-4 py-3 text-xs text-indigo-700">
                  <i class="fas fa-circle-info mr-2"></i>
                  <span>
                    Remaining credits:
                    <strong x-text="planUsage.remaining"></strong>
                  </span>
                </div>
              </div>
            </template>
            <template x-if="!planUsage">
              <p class="mt-4 text-sm text-slate-500">Upgrade to unlock pro analytics and exports.</p>
            </template>
          </div>

          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Platform guardrails</h3>
            <ul class="mt-4 space-y-3 text-sm text-slate-600">
              <li class="flex items-start gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-indigo-100 text-xs font-semibold text-indigo-600">1</span>
                Instagram captions can include links, but they won't be clickable. The generator adds "link in bio" guidance.
              </li>
              <li class="flex items-start gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-indigo-100 text-xs font-semibold text-indigo-600">2</span>
                X variants stay under 280 characters with a maximum of two hashtags to preserve clarity.
              </li>
              <li class="flex items-start gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-indigo-100 text-xs font-semibold text-indigo-600">3</span>
                Localization targets respect RTL layouts and translate hashtags where possible.
              </li>
            </ul>
          </div>
        </aside>
      </div>

      <template x-if="store.generatorResult">
        <div class="mt-16 space-y-10">
          <header class="flex flex-wrap items-center justify-between gap-4">
            <div>
              <h3 class="text-2xl font-semibold text-slate-900">Generated variants</h3>
              <p class="text-sm text-slate-600">
                Compare variants per platform, copy your favorites, or open the editor to continue refining.
              </p>
            </div>
            <div class="flex flex-wrap items-center gap-2 text-sm text-slate-500">
              <i class="fas fa-clock"></i>
              <span>Last generated</span>
              <time x-text="new Date(store.generatorState.lastGeneratedAt ?? Date.now()).toLocaleTimeString()"></time>
            </div>
          </header>

          <div class="grid gap-6 lg:grid-cols-2">
            <template x-for="platformId in store.generatorResult.platforms" :key="platformId">
              <div class="space-y-4">
                <header class="flex items-center justify-between">
                  <div class="flex items-center gap-2 text-sm font-semibold uppercase tracking-wide text-slate-500">
                    <i :class="platformMap[platformId]?.icon"></i>
                    <span x-text="platformMap[platformId]?.name"></span>
                  </div>
                  <Button
                    type="button"
                    size="sm"
                    variant="outline"
                    :class="store.generatorResult.chosen[platformId] ? 'border-indigo-500 text-indigo-600' : ''"
                    x-on:click="store.chooseVariant(platformId, store.generatorResult.chosen[platformId])"
                  >
                    <i class="fas fa-check"></i>
                    Marked ready
                  </Button>
                </header>

                <template x-for="variant in store.generatorResult.variants[platformId]" :key="variant.id">
                  <article
                    class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-lg"
                    :class="store.generatorResult.chosen[platformId] === variant.id ? 'border-indigo-500 shadow-lg' : ''"
                  >
                    <div class="flex flex-wrap items-center justify-between gap-3">
                      <h4 class="text-lg font-semibold text-slate-900" x-text="variant.title"></h4>
                      <div class="flex items-center gap-2 text-xs text-slate-500">
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-1">
                          <i class="fas fa-font"></i>
                          <span x-text="`${variant.counters.characters}/${platformMap[platformId]?.limit}`"></span>
                        </span>
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-1">
                          <i class="fas fa-hashtag"></i>
                          <span x-text="variant.counters.hashtags"></span>
                        </span>
                      </div>
                    </div>

                    <p class="mt-4 whitespace-pre-line text-sm text-slate-700" x-text="variant.text"></p>

                    <div class="mt-4 flex flex-wrap gap-2 text-xs font-semibold uppercase tracking-wide text-slate-500">
                      <template x-for="tag in variant.hashtags" :key="tag">
                        <span class="rounded-full bg-slate-100 px-2 py-1">#<span x-text="tag"></span></span>
                      </template>
                    </div>

                    <template x-if="variant.compliance.length">
                      <ul class="mt-4 space-y-2 text-xs">
                        <template x-for="flag in variant.compliance" :key="flag.id">
                          <li
                            class="rounded-xl border px-3 py-2"
                            :class="{
                              'border-amber-200 bg-amber-50 text-amber-700': flag.severity === 'warning',
                              'border-emerald-200 bg-emerald-50 text-emerald-700': flag.severity === 'info',
                              'border-rose-200 bg-rose-50 text-rose-700': flag.severity === 'error',
                            }"
                          >
                            <i
                              class="fas mr-2 text-sm"
                              :class="{
                                'fa-circle-info': flag.severity === 'info',
                                'fa-triangle-exclamation': flag.severity === 'warning',
                                'fa-octagon-exclamation': flag.severity === 'error',
                              }"
                            ></i>
                            <span x-text="flag.message"></span>
                          </li>
                        </template>
                      </ul>
                    </template>

                    <footer class="mt-6 flex flex-wrap items-center justify-between gap-3 text-xs text-slate-500">
                      <div class="flex items-center gap-4">
                        <span class="flex items-center gap-1">
                          <i class="fas fa-sparkles text-indigo-500"></i>
                          <span x-text="`${variant.score.clarity} clarity`"></span>
                        </span>
                        <span class="flex items-center gap-1">
                          <i class="fas fa-bolt text-amber-500"></i>
                          <span x-text="`${variant.score.punch} punch`"></span>
                        </span>
                        <span class="flex items-center gap-1">
                          <i class="fas fa-shield-check text-emerald-500"></i>
                          <span x-text="`${variant.score.compliance} compliance`"></span>
                        </span>
                      </div>
                      <div class="flex flex-wrap items-center gap-2">
                        <Button type="button" size="sm" variant="ghost" x-on:click="store.copyVariantText(variant)">
                          <i class="fas fa-copy text-xs"></i>
                          Copy
                        </Button>
                        <Button
                          type="button"
                          size="sm"
                          variant="outline"
                          x-on:click="store.chooseVariant(platformId, variant.id)"
                        >
                          <i class="fas fa-check text-xs"></i>
                          Mark ready
                        </Button>
                        <Button href="/caption/editor" size="sm" variant="primary">
                          <i class="fas fa-arrow-up-right-from-square text-xs"></i>
                          Edit
                        </Button>
                      </div>
                    </footer>
                  </article>
                </template>
              </div>
            </template>
          </div>
        </div>
      </template>
    </section>

    <template x-if="$store.caption.feedback.message">
      <div class="fixed bottom-6 right-6 max-w-sm rounded-2xl border border-slate-200 bg-white px-4 py-3 shadow-xl">
        <p class="text-sm font-semibold text-slate-900" x-text="$store.caption.feedback.message"></p>
      </div>
    </template>
  </main>
</Layout>
