<section class="bg-slate-900 py-16 text-white">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <header class="text-center lg:text-left">
      <p class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-1.5 text-sm font-semibold uppercase tracking-[0.3em] text-white/80">
        <i class="fas fa-layer-group text-xs"></i>
        Card models
      </p>
      <h2 class="mt-4 text-3xl font-bold tracking-tight sm:text-4xl">Card types for words, phrases, conjugations, and scripts</h2>
      <p class="mt-3 text-base text-white/70 sm:text-lg">Mix and match note types with shared fields. Every card stores IPA, transliteration, media, and metadata for analytics.</p>
    </header>
    <div class="grid gap-6 lg:grid-cols-2">
      <template x-for="definition in app.state.cardTypes" :key="definition.id">
        <article class="rounded-3xl border border-white/10 bg-white/10 p-6 shadow-lg shadow-slate-900/30 backdrop-blur transition hover:-translate-y-1 hover:bg-white/15">
          <header class="flex items-start justify-between gap-3">
            <div>
              <h3 class="text-xl font-semibold" x-text="definition.title"></h3>
              <p class="mt-2 text-sm text-white/70" x-text="definition.description"></p>
            </div>
            <span class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-semibold text-white/70">
              <i class="fas fa-database text-[10px]"></i>
              <span x-text="definition.fields.length + ' fields'"></span>
            </span>
          </header>
          <div class="mt-5 grid gap-3 text-xs text-white/70 sm:grid-cols-2">
            <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
              <p class="text-[11px] font-semibold uppercase tracking-[0.3em] text-white/60">Example front</p>
              <p class="mt-2 text-sm text-white" x-text="definition.example.front"></p>
            </div>
            <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
              <p class="text-[11px] font-semibold uppercase tracking-[0.3em] text-white/60">Example back</p>
              <p class="mt-2 text-sm text-white" x-text="definition.example.back"></p>
              <p class="mt-2 text-[11px] text-white/70" x-show="definition.example.meta" x-text="definition.example.meta"></p>
            </div>
          </div>
          <footer class="mt-5 rounded-2xl border border-dashed border-white/20 bg-white/5 px-4 py-3 text-xs text-white/70">
            <p class="font-semibold text-white">Fields included</p>
            <div class="mt-2 flex flex-wrap gap-2">
              <template x-for="field in definition.fields" :key="field">
                <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-[11px] font-semibold">
                  <i class="fas fa-square text-[8px]"></i>
                  <span x-text="field"></span>
                </span>
              </template>
            </div>
          </footer>
        </article>
      </template>
    </div>
  </div>
</section>
