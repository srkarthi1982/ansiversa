---
import Button from "../../components/Button.astro";
---
<header class="sticky top-0 z-30 border-b border-slate-200 bg-white/95 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-4 py-4 sm:px-6 lg:px-8">
    <div class="flex flex-1 items-center gap-4">
      <a
        href="/blog-writer"
        class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600 transition hover:border-indigo-300 hover:text-indigo-600"
      >
        <i class="fas fa-arrow-left text-[10px]"></i>
        Back to posts
      </a>
      <div class="hidden h-5 w-px bg-slate-200 sm:block"></div>
      <div class="min-w-0">
        <p class="text-xs uppercase tracking-wide text-slate-500">Blog Writer</p>
        <h1 class="truncate text-lg font-semibold text-slate-900" x-text="$store['blog-writer'].builder.record.title || 'Untitled post'"></h1>
      </div>
    </div>
    <div class="flex flex-wrap items-center gap-2">
      <span class="hidden text-xs text-slate-500 sm:inline" x-text="$store['blog-writer'].builder.autosaveLabel || 'Autosave idle'"></span>
      <Button type="button" size="sm" variant="ghost" class="hidden sm:inline-flex" @click.prevent="$store['blog-writer'].saveDraft()">
        <i class="fas fa-floppy-disk text-xs"></i>
        Save now
      </Button>
      <div class="relative" x-data="{ open: false }">
        <Button type="button" size="sm" variant="light" @click.prevent="open = !open">
          <i class="fas fa-file-export text-xs"></i>
          Export
          <i class="fas fa-chevron-down text-[10px]"></i>
        </Button>
        <div
          x-show="open"
          @click.outside="open = false"
          x-transition
          class="absolute right-0 mt-2 w-40 rounded-xl border border-slate-200 bg-white p-2 text-sm text-slate-600 shadow-lg"
        >
          <button class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-left hover:bg-slate-100" @click.prevent="$store['blog-writer'].exportDraft('md'); open = false">
            <i class="fas fa-file-lines text-xs text-indigo-500"></i>
            Markdown
          </button>
          <button class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-left hover:bg-slate-100" @click.prevent="$store['blog-writer'].exportDraft('html'); open = false">
            <i class="fas fa-code text-xs text-amber-500"></i>
            HTML
          </button>
          <button class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-left hover:bg-slate-100" @click.prevent="$store['blog-writer'].exportDraft('pdf'); open = false">
            <i class="fas fa-file-pdf text-xs text-rose-500"></i>
            PDF
          </button>
        </div>
      </div>
      <Button type="button" size="sm" @click.prevent="$store['blog-writer'].publishDraft()">
        <i class="fas fa-earth-americas text-xs"></i>
        Publish
      </Button>
    </div>
  </div>
</header>
