---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';

const templateHighlights = [
  {
    title: 'Professional',
    items: ['Crisp layout with hero + skills grid', 'Dynamic metrics banner', 'Best for consultants and founders'],
  },
  {
    title: 'Minimal',
    items: ['Whitespace-forward typography', 'Single-column storytelling', 'Best for strategists and researchers'],
  },
  {
    title: 'Creative',
    items: ['Accent blocks and alternating sections', 'Motion-ready for showreels', 'Best for designers and storytellers'],
  },
  {
    title: 'Bold',
    items: ['Marquee achievements highlight', 'Full-width hero with CTA', 'Best for speakers and coaches'],
  },
];
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#portfolio-template-gallery"
  >
    Skip to content
  </a>
  <main
    id="portfolio-template-gallery"
    class="bg-slate-50 min-h-screen"
    x-data="() => ({ portfolio: $store['portfolio-creator'] })"
    x-init="portfolio.initTemplates()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-layer-group text-xs"></i>
              Template gallery
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Switch layouts without losing your story
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Every template is handcrafted for conversion, SEO, and instant shareability. Preview in real time and publish with a single click.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button href="/portfolio-creator/builder">
                <i class="fas fa-pencil text-xs"></i>
                Open builder
              </Button>
              <Button
                type="button"
                variant="outline"
                @click.prevent="portfolio.openPlanUpsell()"
              >
                <i class="fas fa-gem text-xs text-rose-500"></i>
                Compare plans
              </Button>
            </div>
            <div class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-2 text-xs font-semibold text-slate-700 shadow-sm">
              <i class="fas fa-lock-open text-[11px] text-emerald-500"></i>
              <span x-text="portfolio.state.plan === 'pro' ? 'All templates unlocked' : 'Upgrade to unlock Creative and Bold'">
              </span>
            </div>
          </div>
          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
            <h2 class="text-lg font-semibold text-slate-900">Template highlights</h2>
            <div class="mt-4 grid gap-3 text-sm text-slate-600">
              {templateHighlights.map((section) => (
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <p class="text-sm font-semibold text-slate-900">{section.title}</p>
                  <ul class="mt-2 space-y-2 text-xs text-slate-600">
                    {section.items.map((item) => (
                      <li class="flex items-start gap-2">
                        <i class="fas fa-check text-[10px] text-emerald-500"></i>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
        <header class="space-y-3 text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Preview templates</h2>
          <p class="mx-auto max-w-2xl text-base text-slate-600 sm:text-lg">
            Templates are structured to spotlight your hero story, proof, and social credibility. Switch between them anytimeâ€”your data stays intact.
          </p>
        </header>

        <div class="grid gap-8 md:grid-cols-2">
          <template x-for="template in portfolio.accessibleTemplates" :key="template.key">
            <article
              class="relative flex h-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:shadow-lg focus-within:-translate-y-1 focus-within:border-indigo-300 focus-within:shadow-lg"
            >
              <div class="h-32 bg-gradient-to-r" :class="template.accent"></div>
              <div class="space-y-5 p-6">
                <div class="flex items-center justify-between gap-3">
                  <div>
                    <h3 class="text-xl font-semibold text-slate-900">
                      <span class="inline-flex items-center gap-2">
                        <i :class="template.icon" class="text-indigo-500"></i>
                        <span x-text="template.label"></span>
                      </span>
                    </h3>
                    <p class="mt-1 text-sm text-slate-600" x-text="template.description"></p>
                  </div>
                  <template x-if="template.locked">
                    <span class="inline-flex items-center gap-2 rounded-full bg-rose-100 px-3 py-1 text-xs font-semibold text-rose-600">
                      <i class="fas fa-lock text-[10px]"></i>
                      Pro
                    </span>
                  </template>
                  <template x-if="!template.locked && template.plan === 'pro'">
                    <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                      <i class="fas fa-gem text-[10px]"></i>
                      Included in Pro
                    </span>
                  </template>
                </div>
                <div class="space-y-3 rounded-2xl border border-slate-100 bg-slate-50 p-4 text-xs text-slate-600">
                  <p class="font-semibold uppercase tracking-wide text-slate-500">Layout details</p>
                  <ul class="space-y-2">
                    <li class="flex items-center gap-2">
                      <i class="fas fa-layer-group text-[10px] text-indigo-500"></i>
                      Hero, about, proof, testimonials, contact
                    </li>
                    <li class="flex items-center gap-2">
                      <i class="fas fa-font text-[10px] text-indigo-500"></i>
                      Adaptive typography and accent color control
                    </li>
                    <li class="flex items-center gap-2">
                      <i class="fas fa-file-export text-[10px] text-indigo-500"></i>
                      Optimized for PDF/HTML exports
                    </li>
                  </ul>
                </div>
                <div class="flex flex-wrap items-center gap-3">
                  <Button
                    type="button"
                    :disabled="template.locked"
                    :class="template.locked ? 'opacity-60' : ''"
                    @click.prevent="template.locked ? portfolio.openPlanUpsell() : portfolio.setTemplate(template.key)"
                  >
                    <i class="fas fa-check text-xs"></i>
                    Use template
                  </Button>
                  <Button
                    type="button"
                    variant="outline"
                    :href="`/portfolio-creator/builder?template=${template.key}`"
                  >
                    <i class="fas fa-eye text-xs"></i>
                    Preview in builder
                  </Button>
                </div>
              </div>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
