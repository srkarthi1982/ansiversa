---
import Layout from "../layouts/Layout.astro";
import { actions } from 'astro:actions';
import { getSessionWithUser } from '../utils/session';

// Ensure this page is rendered on-demand (required for form actions)
export const prerender = false;

// If the user is already logged in, skip login
const existingSession = await getSessionWithUser(Astro.cookies);
if (existingSession) {
  return Astro.redirect('/'); // or '/dashboard'
}

// Read the result when the action POST happens
const loginAction = actions.auth.login;
const loginResult = await Astro.getActionResult(loginAction);
const loginError =
  loginResult?.error?.message ||
  (loginResult?.error && 'Login failed. Please try again.');
---
<Layout>
  <section class="mx-auto max-w-md px-4 py-16">
    <h1 class="text-2xl font-bold">Log in</h1>
    <p class="mt-2 text-slate-600">Welcome back! Enter your credentials to continue.</p>

    {loginError && (
      <div class="mt-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        {loginError}
      </div>
    )}

    <form class="mt-6 space-y-4" method="POST" action={loginAction}>
      <div>
        <label for="identifier" class="block text-sm font-medium text-slate-700">Username or email</label>
        <input
          id="identifier"
          name="identifier"
          required
          class="mt-1 w-full rounded-lg border px-3 py-2 outline-none focus:ring-2 focus:ring-indigo-500"
          placeholder="you@example.com"
        />
      </div>

      <div x-data="{ show: false }">
        <label for="password" class="block text-sm font-medium text-slate-700">Password</label>
        <div class="relative mt-1">
          <input
            id="password"
            name="password"
            :type="show ? 'text' : 'password'"
            required
            minlength="6"
            class="w-full rounded-lg border px-3 py-2 pr-10 outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="••••••••"
          />
          <button
            type="button"
            x-on:click="show = !show"
            :aria-label="show ? 'Hide password' : 'Show password'"
            class="absolute inset-y-0 right-0 flex items-center px-3 text-slate-400 hover:text-slate-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
          >
            <svg
              x-show="!show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              <circle cx="12" cy="12" r="3" stroke-width="1.5" />
            </svg>
            <svg
              x-show="show"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.477 0-8.268-2.943-9.542-7a9.979 9.979 0 0 1 3.113-4.568m2.873-1.705A9.956 9.956 0 0 1 12 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 0 1-1.249 2.592M15 12a3 3 0 0 1-3 3m0-6a3 3 0 0 1 3 3m-3 3L4.5 4.5m7.5 4.5a3 3 0 0 0-3 3m3 3 7.5 7.5" />
            </svg>
          </button>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <label class="inline-flex items-center gap-2 text-sm">
          <input type="checkbox" name="remember" value="on" class="h-4 w-4 rounded border" />
          <span>Remember me</span>
        </label>
        <a href="/forgot-password" class="text-sm text-indigo-600 hover:underline">Forgot password?</a>
      </div>

      <button
        type="submit"
        class="w-full rounded-lg bg-indigo-600 px-4 py-2 font-semibold text-white hover:bg-indigo-500"
      >
        Sign in
      </button>
    </form>

    <p class="mt-6 text-center text-sm text-slate-600">
      Don’t have an account?
      <a href="/signup" class="font-medium text-indigo-600 hover:underline">Create one</a>
    </p>
  </section>

  {loginResult?.data?.ok && Astro.redirect('/')} 
  <!-- If you prefer redirecting in the action page instead of here, remove this line
       and do a redirect from /pages after reading the result. -->
</Layout>
