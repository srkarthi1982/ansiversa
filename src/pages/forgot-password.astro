---
import Layout from '../layouts/Layout.astro';
import { actions } from 'astro:actions';
import { getSessionWithUser } from '../utils/session';
import Textbox from "../components/Textbox.astro";
import Button from "../components/Button.astro";

export const prerender = false;

const existingSession = await getSessionWithUser(Astro.cookies);
if (existingSession) {
  return Astro.redirect('/');
}

const forgotPasswordAction = actions.auth.forgotPassword;
const actionResult = await Astro.getActionResult(forgotPasswordAction);
const actionError =
  actionResult?.error?.message ||
  (actionResult?.error && 'We could not process your request. Please try again.');
const actionSuccess = actionResult?.data?.ok && !actionResult?.error;
---
<Layout>
  <section class="mx-auto max-w-md px-4 py-16">
    <h1 class="text-2xl font-bold">Forgot password</h1>
    <p class="mt-2 text-slate-600">Enter the email associated with your account and we will send you a temporary password.</p>

    {actionError && (
      <div class="mt-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        {actionError}
      </div>
    )}

    {actionSuccess && (
      <div class="mt-6 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
        If the address you entered is linked to an Ansiversa account, you will receive an email with a temporary password shortly.
      </div>
    )}

    <form class="mt-6 space-y-4" method="POST" action={forgotPasswordAction}>
      <Textbox
        id="email"
        name="email"
        type="email"
        label="Email address"
        placeholder="you@example.com"
        required
        autocomplete="email"
      />
      <Button type="submit" block>
        Send temporary password
      </Button>
    </form>

    <p class="mt-6 text-center text-sm text-slate-600">
      Remembered your password?
      <a href="/login" class="font-medium text-indigo-600 hover:underline">Return to login</a>
    </p>
  </section>
</Layout>
