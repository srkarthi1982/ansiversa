---
import { Button, SectionHeading } from '@ansiversa/components';
import Layout from '../../../layouts/Layout.astro';

const { profileId = '' } = Astro.params;

const artifactTabs = [
  { key: 'headline', label: 'Headline', description: '220 characters max', icon: 'fas fa-heading' },
  { key: 'about', label: 'About / Bio', description: 'Up to 2,600 characters', icon: 'fas fa-id-card-clip' },
  { key: 'featured', label: 'Featured', description: 'Links, media, case studies', icon: 'fas fa-star' },
] as const;

const shortcuts = [
  { combo: '⌘ / Ctrl + Enter', action: 'Regenerate variant with current tone stack' },
  { combo: '⌘ / Ctrl + 1-3', action: 'Switch between headline, About, and Featured tabs' },
  { combo: '⌘ / Ctrl + Shift + C', action: 'Copy active variant to clipboard' },
  { combo: '⌘ / Ctrl + K', action: 'Focus keyword checklist to mark coverage' },
];
---

<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#linkedin-bio-editor"
  >
    Skip to LinkedIn Bio editor
  </a>
  <main
    id="linkedin-bio-editor"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ linkedinBio: $store.linkedinBio, tab: 'headline' })"
    x-init="linkedinBio.initEditor('${profileId}')"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-sliders text-xs"></i>
              LinkedIn Bio Optimizer · Editor
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl" x-text="linkedinBio.activeProfile?.title ?? 'LinkedIn Bio profile'"></h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Compare tone variants, validate evidence, and finalize LinkedIn-ready copy with live scoring and compliance guardrails.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button variant="outline" href="/linkedin-bio">
                <i class="fas fa-arrow-left text-xs"></i>
                Back to overview
              </Button>
              <Button
                variant="ghost"
                href="/linkedin-bio/history"
              >
                <i class="fas fa-clock-rotate-left text-xs"></i>
                Version history
              </Button>
            </div>
            <p class="text-xs text-slate-500">
              Persona: <span class="font-semibold text-slate-700" x-text="linkedinBio.state.persona === 'first' ? 'First person' : 'Third person'"></span>
              · Tone: <span class="font-semibold text-slate-700" x-text="linkedinBio.toneSummary"></span>
              · Language: <span class="font-semibold text-slate-700" x-text="linkedinBio.state.language.toUpperCase()"></span>
            </p>
          </div>
          <aside class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-40 blur-2xl"></div>
            <div class="relative space-y-4 rounded-3xl border border-slate-200 bg-white/90 p-6 shadow-xl backdrop-blur">
              <header class="flex items-center justify-between">
                <p class="text-sm font-semibold text-slate-900">Scoreboard</p>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <i class="fas fa-gauge text-[10px] text-indigo-500"></i>
                  Live
                </span>
              </header>
              <dl class="space-y-3 text-sm text-slate-600">
                <div class="flex items-center justify-between rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3">
                  <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Coverage</dt>
                  <dd class="text-sm font-semibold text-slate-900" x-text="`${linkedinBio.scoreSummary.coverage}%`"></dd>
                </div>
                <div class="flex items-center justify-between rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3">
                  <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Readability</dt>
                  <dd class="text-sm font-semibold text-slate-900" x-text="linkedinBio.scoreSummary.readability"></dd>
                </div>
                <div class="flex items-center justify-between rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3">
                  <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Length</dt>
                  <dd class="text-sm font-semibold text-slate-900" x-text="linkedinBio.scoreSummary.length"></dd>
                </div>
                <div class="flex items-center justify-between rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3">
                  <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Buzzword lint</dt>
                  <dd class="text-sm font-semibold text-slate-900" x-text="linkedinBio.scoreSummary.buzzword"></dd>
                </div>
                <div class="flex items-center justify-between rounded-2xl border border-slate-100 bg-slate-50 px-4 py-3">
                  <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Authenticity</dt>
                  <dd class="text-sm font-semibold text-slate-900" x-text="linkedinBio.scoreSummary.authenticity"></dd>
                </div>
              </dl>
              <footer class="space-y-2 text-xs text-slate-500">
                <p>Generations used today: <span class="font-semibold text-slate-700" x-text="linkedinBio.generationUsageLabel"></span></p>
                <p class="font-semibold text-indigo-600" x-text="linkedinBio.coverageRemainingLabel"></p>
              </footer>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,0.8fr)]">
          <div class="space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <header class="flex flex-wrap items-center justify-between gap-3">
              <div>
                <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-500">Variants</p>
                <h2 class="text-xl font-semibold text-slate-900">Select the best artifact</h2>
              </div>
              <div class="flex flex-wrap gap-2 text-xs">
                <template x-for="tabOption in ${JSON.stringify(artifactTabs)}" :key="tabOption.key">
                  <button
                    type="button"
                    class="inline-flex items-center gap-2 rounded-full border px-3 py-1.5 font-semibold transition"
                    :class="tab === tabOption.key ? 'border-indigo-300 bg-indigo-50 text-indigo-700 shadow-sm' : 'border-slate-200 bg-white text-slate-600 hover:border-indigo-200 hover:text-indigo-700'"
                    @click="tab = tabOption.key"
                  >
                    <i class="fas text-[10px]" :class="tabOption.icon"></i>
                    <span x-text="tabOption.label"></span>
                  </button>
                </template>
              </div>
            </header>
            <p class="text-xs text-slate-500" x-text="artifactTabs.find((item) => item.key === tab)?.description"></p>
            <div class="space-y-4">
              <template x-for="variant in linkedinBio.variantGroups[tab]" :key="variant.id">
                <article
                  class="space-y-3 rounded-2xl border px-4 py-3"
                  :class="linkedinBio.isVariantActive(tab, variant.id) ? 'border-indigo-300 bg-indigo-50/80 shadow-sm' : 'border-slate-200 bg-white'"
                >
                  <header class="flex flex-wrap items-center justify-between gap-3">
                    <div class="space-y-1">
                      <p class="text-sm font-semibold text-slate-900" x-text="variant.label"></p>
                      <div class="flex flex-wrap gap-2 text-[11px] text-slate-500">
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-1 font-semibold">
                          <i class="fas fa-language text-[9px]"></i>
                          <span x-text="variant.language.toUpperCase()"></span>
                        </span>
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-1 font-semibold">
                          <i class="fas fa-user text-[9px]"></i>
                          <span x-text="variant.persona === 'first' ? 'First' : 'Third'"></span>
                        </span>
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-1 font-semibold">
                          <i class="fas fa-ruler text-[9px]"></i>
                          <span x-text="`${variant.chars} chars`"></span>
                        </span>
                      </div>
                    </div>
                    <div class="flex flex-wrap gap-2">
                      <button
                        type="button"
                        class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition hover:border-indigo-200 hover:text-indigo-700"
                        @click="linkedinBio.selectVariant(tab, variant.id)"
                      >
                        Set active
                      </button>
                      <button
                        type="button"
                        class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition hover:border-indigo-200 hover:text-indigo-700"
                        @click.prevent="navigator.clipboard?.writeText(linkedinBio.renderVariantText(variant))"
                      >
                        Copy
                      </button>
                    </div>
                  </header>
                  <div class="rounded-2xl border border-slate-200 bg-white/80 p-4 text-sm text-slate-800">
                    <p class="whitespace-pre-line" x-text="linkedinBio.renderVariantText(variant)"></p>
                  </div>
                  <div class="flex flex-wrap gap-2 text-[11px] text-slate-500">
                    <template x-for="badge in linkedinBio.variantBadges(variant)" :key="`${variant.id}-${badge}`">
                      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-semibold text-slate-600">
                        <i class="fas fa-tag text-[9px]"></i>
                        <span x-text="badge"></span>
                      </span>
                    </template>
                  </div>
                  <footer class="space-y-2 text-xs text-slate-500">
                    <p class="font-semibold text-slate-700">Evidence</p>
                    <ul class="grid gap-2 sm:grid-cols-2">
                      <template x-for="ref in variant.evidenceRefs" :key="`${variant.id}-${ref}`">
                        <li>
                          <button
                            type="button"
                            class="flex w-full items-start gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 text-left transition hover:border-indigo-200 hover:text-indigo-700"
                            @click="linkedinBio.revealEvidence(ref)"
                          >
                            <i class="fas fa-link text-[9px] text-indigo-500"></i>
                            <span class="text-[11px] font-semibold" x-text="linkedinBio.evidenceRecords.find((record) => record.id === ref)?.claim"></span>
                          </button>
                        </li>
                      </template>
                    </ul>
                  </footer>
                </article>
              </template>
            </div>
          </div>
          <aside class="space-y-6">
            <article class="space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <SectionHeading
                eyebrow="Keyword checklist"
                title="Track coverage in real time"
                description="Mark keywords as covered or missing to keep recruiter search alignment."
              />
              <div class="grid gap-4 text-xs text-slate-600">
                <div>
                  <p class="text-sm font-semibold text-slate-900">Covered</p>
                  <ul class="mt-2 space-y-1">
                    <template x-for="keyword in linkedinBio.keywordChecklist?.covered ?? []" :key="`editor-covered-${keyword}`">
                      <li class="flex items-center gap-2">
                        <i class="fas fa-circle-check text-[9px] text-emerald-500"></i>
                        <span x-text="keyword"></span>
                      </li>
                    </template>
                  </ul>
                </div>
                <div>
                  <p class="text-sm font-semibold text-slate-900">Needs attention</p>
                  <ul class="mt-2 space-y-1">
                    <template x-for="keyword in (linkedinBio.keywordChecklist?.partial ?? []).concat(linkedinBio.keywordChecklist?.missing ?? [])" :key="`editor-missing-${keyword}`">
                      <li class="flex items-center gap-2">
                        <i class="fas fa-circle-exclamation text-[9px] text-rose-500"></i>
                        <span x-text="keyword"></span>
                      </li>
                    </template>
                  </ul>
                </div>
                <div>
                  <p class="text-sm font-semibold text-slate-900">Suggestions</p>
                  <ul class="mt-2 space-y-1">
                    <template x-for="keyword in linkedinBio.keywordChecklist?.suggested ?? []" :key="`editor-suggested-${keyword}`">
                      <li class="flex items-center gap-2">
                        <i class="fas fa-lightbulb text-[9px] text-indigo-500"></i>
                        <span x-text="keyword"></span>
                      </li>
                    </template>
                  </ul>
                </div>
              </div>
            </article>
            <article class="space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <SectionHeading
                eyebrow="History"
                title="Recent saves"
                description="Snapshot of previous exports and lint runs for this profile."
              />
              <ul class="space-y-3 text-xs text-slate-600">
                <template x-for="record in linkedinBio.historyRecords.filter((entry) => entry.profileId === linkedinBio.state.activeProfileId).slice(0, 3)" :key="record.id">
                  <li class="rounded-2xl border border-slate-200 bg-slate-50/80 px-4 py-3">
                    <div class="flex items-center justify-between">
                      <p class="font-semibold text-slate-900" x-text="new Date(record.savedAt).toLocaleString()"></p>
                      <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-[11px] font-semibold text-slate-600">
                        <i class="fas fa-star text-[9px] text-indigo-500"></i>
                        <span x-text="`${record.score}%`"></span>
                      </span>
                    </div>
                    <p class="mt-1 text-[11px]" x-text="record.note"></p>
                    <p class="mt-1 text-[11px] text-slate-500">
                      Exports: <span class="font-semibold text-slate-700" x-text="record.exported.join(', ').toUpperCase()"></span>
                      · Plan: <span class="font-semibold text-slate-700" x-text="record.planRequired === 'pro' ? 'Pro' : 'Free'"></span>
                    </p>
                  </li>
                </template>
              </ul>
              <Button variant="ghost" href="/linkedin-bio/history">
                <i class="fas fa-ellipsis text-xs"></i>
                View full history
              </Button>
            </article>
            <article class="space-y-3 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <h2 class="text-sm font-semibold text-slate-900">Keyboard shortcuts</h2>
              <ul class="space-y-2 text-xs text-slate-600">
                {shortcuts.map((shortcut) => (
                  <li class="flex items-center justify-between gap-3 rounded-2xl border border-slate-200 bg-slate-50/70 px-3 py-2">
                    <span class="font-mono text-[11px]">{shortcut.combo}</span>
                    <span class="text-right">{shortcut.action}</span>
                  </li>
                ))}
              </ul>
            </article>
          </aside>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <SectionHeading
            eyebrow="Publishing"
            title="Export or push downstream"
            description="Choose your artifact set, then export Markdown/PDF or send to connected Ansiversa apps."
          />
          <div class="mt-6 flex flex-wrap gap-3">
            <Button variant="outline">
              <i class="fas fa-file-lines text-xs"></i>
              Export Markdown
            </Button>
            <Button variant="outline">
              <i class="fas fa-file-pdf text-xs"></i>
              Export PDF
            </Button>
            <Button variant="ghost">
              <i class="fas fa-share-nodes text-xs"></i>
              Push to integrations
            </Button>
          </div>
          <p class="mt-3 text-xs text-slate-500">
            Free plan exports include a subtle “Optimized with Ansiversa” watermark. Upgrade to remove branding and unlock localization packs.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>
