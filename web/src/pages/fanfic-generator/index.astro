---
import Layout from "../../layouts/Layout.astro";
import Hero from "@features/fanfic-generator/Hero.astro";
import SetupWizard from "@features/fanfic-generator/SetupWizard.astro";
import Library from "@features/fanfic-generator/Library.astro";
import Workspace from "@features/fanfic-generator/Workspace.astro";
import PlanMatrix from "@features/fanfic-generator/PlanMatrix.astro";
import Integrations from "@features/fanfic-generator/Integrations.astro";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#fanfic-workspace"
  >
    Skip to Fanfic Generator workspace
  </a>
  <main id="fanfic-generator-app" class="min-h-screen bg-slate-100 text-slate-900">
    <Hero />
    <SetupWizard />
    <Library />
    <Workspace />
    <PlanMatrix />
    <Integrations />
  </main>
</Layout>
