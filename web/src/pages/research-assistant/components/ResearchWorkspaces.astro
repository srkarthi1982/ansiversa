---
import { SectionHeading } from '@ansiversa/components';
import { workspaceModules } from "../data/researchData";
---
<section class="bg-slate-950 py-16 text-white sm:py-20" id="research-workspaces" aria-labelledby="research-workspaces-title">
  <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Workspace"
      title="Five connected surfaces keep research in flow"
      description="Projects, sources, reader, synthesis, and writer views share state so highlights, claims, and drafts stay synchronized."
      id="research-workspaces-title"
      class="text-white"
    />
    <div class="grid gap-6 lg:grid-cols-2">
      {workspaceModules.map((module) => (
        <article class="flex h-full flex-col gap-4 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur" key={module.id}>
          <header class="flex items-start justify-between gap-3">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-indigo-200">{module.id}</p>
              <h3 class="text-lg font-semibold text-white">{module.title}</h3>
            </div>
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-500/20 px-3 py-1 text-xs font-semibold text-indigo-100">
              <i class="fas fa-circle-nodes text-[10px]"></i>
              Linked
            </span>
          </header>
          <p class="text-sm text-slate-200">{module.description}</p>
          <ul class="space-y-3 text-sm text-slate-100">
            {module.highlights.map((highlight) => (
              <li class="flex items-start gap-2 rounded-2xl border border-white/10 bg-white/5 p-3" key={highlight}>
                <i class="fas fa-sparkles mt-0.5 text-[11px] text-indigo-200"></i>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
