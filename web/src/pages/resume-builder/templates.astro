---
import { Button } from '@ansiversa/components';
import Layout from '../../layouts/Layout.astro';

const templates = [
  {
    key: 'modern',
    label: 'Modern',
    description: 'Clean two-column layout with bold headings and skill chips.',
    accent: 'from-indigo-500 via-purple-500 to-pink-500',
    icon: 'fas fa-bolt',
    pro: false,
  },
  {
    key: 'classic',
    label: 'Classic',
    description: 'Traditional layout with serif typography and subtle separators.',
    accent: 'from-amber-500 via-orange-500 to-rose-500',
    icon: 'fas fa-feather',
    pro: false,
  },
  {
    key: 'minimal',
    label: 'Minimal',
    description: 'Single-column minimal resume focusing on white space and clarity.',
    accent: 'from-emerald-500 via-teal-500 to-cyan-500',
    icon: 'fas fa-circle-notch',
    pro: false,
  },
  {
    key: 'creative',
    label: 'Creative',
    description: 'Expressive layout with accent blocks for designers and creatives.',
    accent: 'from-fuchsia-500 via-purple-500 to-indigo-500',
    icon: 'fas fa-palette',
    pro: true,
  },
];
---
<Layout>
  <a class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500" href="#resume-template-gallery">
    Skip to content
  </a>
  <main id="resume-template-gallery" class="bg-slate-50 min-h-screen" x-data="() => ({ resume: $store.resume })" x-init="resume.initTemplates()">
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-layer-group text-xs"></i>
              Template gallery
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Choose a resume template that matches your style
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Switch templates instantly without losing your content. Pro subscribers unlock creative layouts, unlimited exports, and advanced typography controls.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button
                href="/resume-builder/builder"
              >
                <i class="fas fa-pencil text-xs"></i>
                Open builder
              </Button>
              <Button
                type="button"
                variant="outline"
                @click.prevent="resume.openPlanUpsell()"
              >
                <i class="fas fa-gem text-xs text-rose-500"></i>
                Compare plans
              </Button>
            </div>
          </div>
          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
            <h2 class="text-lg font-semibold text-slate-900">Template access</h2>
            <dl class="mt-4 grid gap-4 text-sm text-slate-600">
              <div class="rounded-2xl bg-slate-50 p-4">
                <dt class="font-semibold text-slate-900">Free plan</dt>
                <dd class="mt-2 space-y-2">
                  <p>Access to 1 resume and Modern template.</p>
                  <p class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-500">
                    <i class="fas fa-water text-[11px]"></i>
                    PDF export includes watermark.
                  </p>
                </dd>
              </div>
              <div class="rounded-2xl bg-indigo-50/70 p-4">
                <dt class="font-semibold text-indigo-900">Pro plan</dt>
                <dd class="mt-2 space-y-2 text-indigo-800">
                  <p>Unlock all templates, unlimited resumes, and AI improvements.</p>
                  <p class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-semibold text-indigo-600 shadow-sm">
                    <i class="fas fa-check-circle text-[11px]"></i>
                    Clean exports without watermark.
                  </p>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
        <header class="space-y-3 text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Preview templates</h2>
          <p class="mx-auto max-w-2xl text-base text-slate-600 sm:text-lg">
            Each template is optimized for applicant tracking systems (ATS) and designed for clarity. Customize typography, accent colors, and section order based on your plan.
          </p>
        </header>

        <div class="grid gap-8 md:grid-cols-2">
          {templates.map((template) => (
            <article
              class="relative flex h-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:shadow-lg focus-within:-translate-y-1 focus-within:border-indigo-300 focus-within:shadow-lg"
            >
              <div class={`h-32 bg-gradient-to-r ${template.accent}`}></div>
              <div class="space-y-5 p-6">
                <div class="flex items-center justify-between gap-3">
                  <div>
                    <h3 class="text-xl font-semibold text-slate-900">
                      <span class="inline-flex items-center gap-2">
                        <i class={`${template.icon} text-indigo-500`}></i>
                        {template.label}
                      </span>
                    </h3>
                    <p class="mt-1 text-sm text-slate-600">{template.description}</p>
                  </div>
                  {template.pro && (
                    <span class="inline-flex items-center gap-2 rounded-full bg-rose-100 px-3 py-1 text-xs font-semibold text-rose-600">
                      <i class="fas fa-gem text-[10px]"></i>
                      Pro
                    </span>
                  )}
                </div>
                <div class="space-y-3 rounded-2xl border border-slate-100 bg-slate-50 p-4 text-xs text-slate-600">
                  <p class="font-semibold uppercase tracking-wide text-slate-500">Preview outline</p>
                  <ul class="space-y-2">
                    <li class="flex items-center gap-2">
                      <i class="fas fa-layer-group text-[10px] text-indigo-500"></i>
                      Dual column layout with sidebar profile.
                    </li>
                    <li class="flex items-center gap-2">
                      <i class="fas fa-font text-[10px] text-indigo-500"></i>
                      Supports 3 accent colors and custom typography.
                    </li>
                    <li class="flex items-center gap-2">
                      <i class="fas fa-file-export text-[10px] text-indigo-500"></i>
                      Optimized for PDF/DOCX exports.
                    </li>
                  </ul>
                </div>
                <div class="flex flex-wrap items-center gap-3">
                  <Button
                    type="button"
                    data-template={template.key}
                    @click.prevent="resume.selectTemplateFromGallery($el.dataset.template)"
                  >
                    <i class="fas fa-check text-xs"></i>
                    Use template
                  </Button>
                  <Button
                    type="button"
                    variant="outline"
                    data-template={template.key}
                    @click.prevent="resume.previewTemplate($el.dataset.template)"
                  >
                    <i class="fas fa-eye text-xs"></i>
                    Quick preview
                  </Button>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
