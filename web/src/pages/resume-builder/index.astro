---
import { Button } from '@ansiversa/components';
import Layout from '../../layouts/Layout.astro';
---
<Layout>
  <a class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500" href="#resume-dashboard">
    Skip to content
  </a>
  <main
    id="resume-dashboard"
    class="bg-slate-50 min-h-screen"
    x-data="() => ({ resume: $store.resume })"
    x-init="resume.initList()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent opacity-70"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-briefcase text-xs"></i>
              Professional resumes, simplified
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Build polished, ATS-friendly resumes in minutes
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Manage multiple resumes, tailor them for every opportunity, and export in the format you need. Upgrade to Pro for premium templates and unlimited exports.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button
                type="button"
                @click.prevent="resume.createDraft()"
              >
                <i class="fas fa-plus text-xs"></i>
                New resume
              </Button>
              <Button
                href="/resume-builder/templates"
                variant="outline"
              >
                <i class="fas fa-layer-group text-xs"></i>
                Explore templates
              </Button>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-50 blur-xl"></div>
            <div class="relative rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-slate-900">Snapshot</h2>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <i class="fas fa-circle-dot text-[10px]" :class="resume.state.hasUnsavedChanges ? 'text-amber-500' : 'text-emerald-500'"></i>
                  <span x-text="resume.state.hasUnsavedChanges ? 'Unsaved changes' : 'All caught up'"></span>
                </span>
              </div>
              <dl class="mt-6 grid gap-4 sm:grid-cols-2">
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Resumes</dt>
                  <dd class="mt-2 flex items-end gap-2 text-2xl font-semibold text-slate-900">
                    <span x-text="resume.state.resumes.length"></span>
                    <span class="text-xs font-medium text-slate-500">total</span>
                  </dd>
                </div>
                <div class="rounded-2xl border border-slate-100 bg-slate-50 p-4">
                  <dt class="text-xs font-medium uppercase tracking-wide text-slate-500">Last saved</dt>
                  <dd class="mt-2 text-sm font-semibold text-slate-900" x-text="resume.state.lastSavedLabel ?? '—'"></dd>
                </div>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto max-w-6xl space-y-8 px-4 sm:px-6 lg:px-8">
        <header class="flex flex-wrap items-center justify-between gap-4">
          <div class="space-y-1">
            <h2 class="text-2xl font-semibold text-slate-900">Your resumes</h2>
            <p class="text-sm text-slate-600">Create drafts, duplicate, or export whenever you are ready.</p>
          </div>
          <div class="flex items-center gap-3">
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Template filter</span>
              <i class="fas fa-filter text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="resume.filters.template"
                @change="resume.applyFilters()"
              >
                <option value="all">All templates</option>
                <option value="modern">Modern</option>
                <option value="classic">Classic</option>
                <option value="minimal">Minimal</option>
                <option value="creative">Creative</option>
              </select>
            </label>
            <label class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 shadow-sm">
              <span class="sr-only">Sort order</span>
              <i class="fas fa-sort-amount-down text-xs"></i>
              <select
                class="appearance-none bg-transparent text-sm font-medium text-slate-700 focus:outline-none"
                x-model="resume.filters.sort"
                @change="resume.applyFilters()"
              >
                <option value="recent">Recent first</option>
                <option value="oldest">Oldest first</option>
                <option value="name-asc">Name A → Z</option>
                <option value="name-desc">Name Z → A</option>
              </select>
            </label>
          </div>
        </header>

        <div class="grid gap-6 lg:grid-cols-2">
          <template x-if="resume.state.loading">
            <div class="lg:col-span-2 grid gap-6 sm:grid-cols-2">
              <template x-for="placeholder in 4" :key="`resume-skeleton-${placeholder}`">
                <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                  <div class="space-y-3">
                    <div class="h-6 w-40 rounded bg-slate-200"></div>
                    <div class="h-4 w-32 rounded bg-slate-100"></div>
                    <div class="h-[72px] rounded bg-slate-50"></div>
                  </div>
                  <div class="mt-6 flex items-center justify-between">
                    <div class="h-6 w-24 rounded-full bg-slate-100"></div>
                    <div class="h-10 w-28 rounded-full bg-slate-200"></div>
                  </div>
                </article>
              </template>
            </div>
          </template>

          <template x-if="!resume.state.loading && resume.filteredResumes.length === 0">
            <div class="lg:col-span-2 rounded-2xl border border-dashed border-slate-200 bg-white p-12 text-center">
              <i class="fas fa-clipboard-list text-3xl text-slate-300"></i>
              <h3 class="mt-4 text-lg font-semibold text-slate-900">No resumes yet</h3>
              <p class="mt-2 text-sm text-slate-600">
                Start by creating your first resume. You can duplicate and customize it anytime.
              </p>
              <Button
                type="button"
                @click.prevent="resume.createDraft()"
              >
                <i class="fas fa-plus text-xs"></i>
                Create resume
              </Button>
            </div>
          </template>

          <template x-for="item in resume.filteredResumes" :key="item.id">
            <article class="flex h-full flex-col justify-between rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-indigo-200 hover:shadow-md focus-within:-translate-y-1 focus-within:border-indigo-300 focus-within:shadow-lg">
              <div class="space-y-4">
                <div class="flex items-center justify-between gap-3">
                  <h3 class="text-xl font-semibold text-slate-900" x-text="item.title || 'Untitled resume'"></h3>
                  <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                    <i class="fas fa-layer-group text-[11px]"></i>
                    <span class="capitalize" x-text="item.templateKey"></span>
                  </span>
                </div>
                <p class="text-sm text-slate-600" x-text="resume.describeResume(item)"></p>
              </div>
              <dl class="mt-6 flex flex-wrap items-center gap-x-6 gap-y-3 text-sm text-slate-500">
                <div class="flex items-center gap-2">
                  <i class="fas fa-clock text-xs"></i>
                  <span>
                    Updated&nbsp;
                    <span class="font-medium text-slate-700" x-text="resume.formatRelative(item.lastSavedAt)"></span>
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <i class="fas fa-language text-xs"></i>
                  <span class="uppercase" x-text="item.locale"></span>
                </div>
                <template x-if="item.isDefault">
                  <div class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                    <i class="fas fa-star text-[10px]"></i>
                    Default
                  </div>
                </template>
              </dl>

              <div class="mt-6 flex flex-wrap items-center gap-3">
                <Button
                  :href="`/resume-builder/builder?id=${item.id}`"
                >
                  <i class="fas fa-pen text-xs"></i>
                  Edit
                </Button>
                <Button
                  type="button"
                  variant="outline"
                  @click.prevent="resume.duplicate(item.id)"
                >
                  <i class="fas fa-copy text-xs"></i>
                  Duplicate
                </Button>
                <Button
                  type="button"
                  variant="ghost"
                  @click.prevent="resume.requestDelete(item.id)"
                >
                  <i class="fas fa-trash text-xs"></i>
                  Delete
                </Button>
                <Button
                  type="button"
                  variant="outline"
                  @click.prevent="resume.toggleDefault(item.id)"
                >
                  <i class="fas fa-star-half-alt text-xs"></i>
                  <span x-text="item.isDefault ? 'Unset default' : 'Set as default'"></span>
                </Button>
              </div>
            </article>
          </template>
        </div>
      </div>
    </section>
  </main>
</Layout>
