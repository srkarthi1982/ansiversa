---
import { Button } from '@ansiversa/components';
import { heroStats } from "../data/notesSummarizerData";
---
<section
  class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 py-20 text-white"
  aria-labelledby="notes-summarizer-hero"
>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(99,102,241,0.25),_transparent_55%)]"></div>
  <div class="relative mx-auto grid max-w-6xl gap-16 px-4 sm:px-6 lg:grid-cols-[1.1fr_0.9fr] lg:px-8 lg:items-center">
    <div class="space-y-8">
      <span class="inline-flex items-center gap-2 rounded-full bg-indigo-500/15 px-4 py-1 text-sm font-semibold text-indigo-200">
        <i class="fas fa-sparkles text-xs"></i>
        Structured insight engine
      </span>
      <header class="space-y-4">
        <h1 id="notes-summarizer-hero" class="text-4xl font-bold tracking-tight sm:text-5xl">
          AI Notes Summarizer
        </h1>
        <p class="text-base text-slate-200 sm:text-lg">
          Transform messy notes, transcripts, or research PDFs into clean, structured summaries with highlights, action items,
          sentiment, and export-ready deliverables. Seamlessly hand off insights to FlashNote, Meeting Minutes AI, and Research
          Assistant.
        </p>
      </header>
      <div class="flex flex-wrap gap-3">
        <Button href="/ai-notes-summarizer/builder" class="shadow-lg shadow-indigo-500/30">
          <i class="fas fa-wand-magic-sparkles text-xs"></i>
          Launch workspace
        </Button>
        <Button
          href="/ai-notes-summarizer/history"
          variant="outline"
          class="border-indigo-300 text-indigo-200 hover:bg-indigo-500/10"
        >
          <i class="fas fa-clock-rotate-left text-xs"></i>
          View summary history
        </Button>
        <Button href="/ai-notes-summarizer/settings" variant="ghost" class="text-slate-200 hover:bg-white/10">
          <i class="fas fa-sliders text-xs"></i>
          Configure defaults
        </Button>
      </div>
      <dl class="grid gap-4 sm:grid-cols-3">
        {heroStats.map((stat) => (
          <div key={stat.label} class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-lg backdrop-blur">
            <dt class="text-xs font-semibold uppercase tracking-wide text-indigo-200">{stat.label}</dt>
            <dd class="mt-2 text-3xl font-semibold">{stat.value}</dd>
            <dd class="text-xs text-slate-300">{stat.trend}</dd>
          </div>
        ))}
      </dl>
    </div>
    <div class="relative">
      <div class="absolute inset-0 -translate-y-8 translate-x-8 rounded-3xl bg-indigo-500/40 blur-3xl"></div>
      <div class="relative space-y-5 rounded-3xl border border-white/10 bg-slate-900/70 p-6 shadow-2xl backdrop-blur">
        <header class="flex items-center justify-between">
          <div>
            <p class="text-sm font-semibold text-white">Live summary preview</p>
            <p class="text-xs text-slate-300">Marketing All-hands • 14 min transcript</p>
          </div>
          <span class="inline-flex items-center gap-1 rounded-full bg-emerald-500/15 px-3 py-1 text-[11px] font-semibold text-emerald-200">
            <i class="fas fa-circle-check text-[10px]"></i>
            Ready to export
          </span>
        </header>
        <ol class="space-y-4 text-sm text-slate-200">
          <li class="flex items-start gap-3">
            <span class="mt-1 flex h-7 w-7 items-center justify-center rounded-full bg-indigo-500 text-xs font-semibold text-white">1</span>
            <div>
              <p class="font-semibold">Key takeaways</p>
              <p class="text-xs text-slate-300">Top launches, campaign lift, and blockers condensed to 4 bullets.</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 flex h-7 w-7 items-center justify-center rounded-full bg-indigo-500 text-xs font-semibold text-white">2</span>
            <div>
              <p class="font-semibold">Action plan</p>
              <p class="text-xs text-slate-300">Owners, due dates, and risk tags ready for Meeting Minutes AI sync.</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 flex h-7 w-7 items-center justify-center rounded-full bg-indigo-500 text-xs font-semibold text-white">3</span>
            <div>
              <p class="font-semibold">Highlights</p>
              <p class="text-xs text-slate-300">Quote bank for FlashNote cards and leadership updates.</p>
            </div>
          </li>
        </ol>
        <div class="rounded-2xl border border-white/10 bg-white/5 p-4 text-xs text-slate-100">
          <p class="font-semibold uppercase tracking-wide text-indigo-200">Summary health</p>
          <div class="mt-3 grid gap-3 sm:grid-cols-2">
            <p><span class="font-semibold text-white">Compression:</span> 11.8%</p>
            <p><span class="font-semibold text-white">Sentiment:</span> Confident • +0.78</p>
            <p><span class="font-semibold text-white">Highlights:</span> 6 flagged quotes</p>
            <p><span class="font-semibold text-white">Exports:</span> Markdown · PDF · FlashNote</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
