---
import Layout from "../../layouts/Layout.astro";
import PoemHero from "@features/poem/PoemHero.astro";
import PoemLibrary from "@features/poem/PoemLibrary.astro";
import PoemWorkspace from "@features/poem/PoemWorkspace.astro";
import "./stores";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-violet-500"
    href="#poem-workspace"
  >
    Skip to Poem Studio workspace
  </a>
  <main class="min-h-screen bg-slate-950 text-white">
    <PoemHero />
    <PoemLibrary />
    <PoemWorkspace />
  </main>
</Layout>
