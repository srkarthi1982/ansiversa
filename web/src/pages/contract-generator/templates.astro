---
import { Button } from '@ansiversa/components';
import Layout from '../../layouts/Layout.astro';
---
<Layout>
  <main
    class="min-h-screen bg-slate-50"
    x-data="() => ({ contract: $store.contract })"
    x-init="contract.initDashboard()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 text-center">
        <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-4 py-1.5 text-sm font-semibold text-emerald-700">
          <i class="fas fa-layer-group text-xs"></i>
          Contract template gallery
        </span>
        <h1 class="mt-4 text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">Start with a legally-aware template</h1>
        <p class="mt-4 text-base text-slate-600 sm:text-lg">
          Choose from specialised agreements optimised for freelance, services, consulting, NDA, or employment scenarios. Every template comes with editable clauses and merge fields.
        </p>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto grid max-w-5xl gap-6 px-4 sm:grid-cols-2 sm:px-6 lg:px-8">
        <template x-for="template in contract.templates" :key="template.key">
          <article class="flex h-full flex-col justify-between rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-emerald-200 hover:shadow-md">
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <i class="fas fa-file-signature text-xs"></i>
                  <span x-text="template.label"></span>
                </span>
                <span class="text-xs font-semibold uppercase tracking-wide text-emerald-500">Ready</span>
              </div>
              <h2 class="text-lg font-semibold text-slate-900" x-text="template.headline"></h2>
              <p class="text-sm text-slate-600" x-text="template.description"></p>
              <div class="mt-3 space-y-2 text-sm text-slate-600">
                <template x-for="item in template.recommendedFor" :key="item">
                  <p class="flex items-start gap-2">
                    <i class="fas fa-check text-emerald-500 text-xs mt-1"></i>
                    <span x-text="item"></span>
                  </p>
                </template>
              </div>
            </div>
            <div class="mt-6 flex items-center justify-between">
              <div class="text-xs text-slate-400">Use template</div>
              <Button
                type="button"
                variant="ghost"
                @click.prevent="contract.createDraft(template.key)"
              >
                <i class="fas fa-arrow-right text-xs"></i>
                Start with
                <span class="ml-1" x-text="template.label"></span>
              </Button>
            </div>
          </article>
        </template>
      </div>
    </section>
  </main>
</Layout>
