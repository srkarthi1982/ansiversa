---
import { Button, SectionHeading } from '@ansiversa/components';
import Layout from "../../layouts/Layout.astro";
import EmailNewsletterWorkspace from "./EmailNewsletterWorkspace.astro";
import EmailNewsletterBlockLibrary from "./EmailNewsletterBlockLibrary.astro";
import EmailNewsletterIntelligence from "./EmailNewsletterIntelligence.astro";
import EmailNewsletterPlans from "./EmailNewsletterPlans.astro";
import EmailNewsletterApiContracts from "./EmailNewsletterApiContracts.astro";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#email-newsletter-content"
  >
    Skip to content
  </a>
  <main
    id="email-newsletter-content"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ emailNewsletter: $store.emailNewsletterWriter })"
    x-init="emailNewsletter.initLanding()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-envelope-open-text text-xs"></i>
              Campaign operations workspace
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Email Newsletter Writer
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Plan, draft, and QA deliverability-friendly newsletters that teams can ship with confidence.
              Import sources, orchestrate block libraries, run accessibility and spam checks, and export production-ready HTML, Markdown, JSON, or ZIP bundles.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button href="#workspace">
                <i class="fas fa-rocket-launch text-xs"></i>
                Launch workspace
              </Button>
              <Button href="#plans" variant="outline">
                <i class="fas fa-clipboard-check text-xs"></i>
                View plans
              </Button>
              <Button href="#api" variant="ghost">
                <i class="fas fa-code text-xs"></i>
                API overview
              </Button>
            </div>
            <p class="text-xs text-slate-500">
              <span class="font-semibold text-slate-700" x-text="`Free plan 路 ${emailNewsletter.state.usage.issuesUsed}/${emailNewsletter.state.usage.issuesLimit} issues drafted`"></span>
              路 Last export
              <span class="font-semibold text-slate-700" x-text="new Date(emailNewsletter.state.usage.lastExportAt).toLocaleString()"></span>
            </p>
            <dl class="grid gap-4 rounded-3xl border border-slate-200 bg-white/80 p-5 text-left shadow-sm sm:grid-cols-3">
              <div>
                <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Send window</dt>
                <dd class="mt-1 text-sm font-semibold text-slate-900" x-text="emailNewsletter.issue?.sendWindow.timezone"></dd>
                <dd class="text-xs text-slate-500" x-text="`${new Date(emailNewsletter.issue?.sendWindow.start ?? '').toLocaleDateString()} 路 ${emailNewsletter.issue?.status}`"></dd>
              </div>
              <div>
                <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Primary KPI</dt>
                <dd class="mt-1 text-sm font-semibold text-slate-900" x-text="emailNewsletter.issue?.kpis[0]?.target"></dd>
                <dd class="text-xs text-slate-500" x-text="emailNewsletter.issue?.kpis[0]?.label"></dd>
              </div>
              <div>
                <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Active experiments</dt>
                <dd class="mt-1 text-sm font-semibold text-slate-900" x-text="emailNewsletter.issue?.subjectTests.length ?? 0"></dd>
                <dd class="text-xs text-slate-500">Subject &amp; preheader variants ready</dd>
              </div>
            </dl>
          </div>
          <div class="relative" x-cloak>
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-40 blur-xl"></div>
            <div class="relative space-y-6 rounded-3xl border border-slate-200 bg-white/90 p-6 shadow-xl backdrop-blur">
              <header class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-semibold text-slate-900">Active issue</p>
                  <p class="text-xs text-slate-500" x-text="emailNewsletter.issue?.title"></p>
                </div>
                <span class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                  <i class="fas fa-sparkles text-[10px]"></i>
                  AI assists included
                </span>
              </header>
              <div class="grid gap-4 sm:grid-cols-2">
                <template x-for="kpi in emailNewsletter.issue?.kpis" :key="kpi.label">
                  <div class="rounded-2xl bg-indigo-50 px-4 py-3 text-center">
                    <p class="text-xs font-medium uppercase tracking-wide text-indigo-600" x-text="kpi.label"></p>
                    <p class="mt-2 text-3xl font-semibold text-indigo-900" x-text="kpi.label === 'New trials' ? kpi.target : `${kpi.progress}%`"></p>
                    <p class="text-xs font-medium text-indigo-700" x-text="kpi.target"></p>
                  </div>
                </template>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-white px-4 py-3">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Subject experiments</p>
                <ul class="mt-2 space-y-2 text-sm text-slate-600">
                  <template x-for="test in emailNewsletter.issue?.subjectTests" :key="test.id">
                    <li class="flex items-start justify-between gap-3">
                      <div>
                        <p class="font-semibold text-slate-900" x-text="test.target"></p>
                        <p class="text-xs text-slate-500" x-text="test.hypothesis"></p>
                      </div>
                      <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-2 py-1 text-[11px] font-semibold text-indigo-600">
                        <i class="fas fa-check-double text-[10px]"></i>
                        <span x-text="test.chosen ? 'Variant locked' : 'Testing'"></span>
                      </span>
                    </li>
                  </template>
                </ul>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-slate-900 px-4 py-4 text-slate-100">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-semibold">QA snapshot</p>
                  <span class="inline-flex items-center gap-2 rounded-full bg-amber-500/20 px-2 py-1 text-[11px] font-semibold text-amber-100">
                    <i class="fas fa-triangle-exclamation text-[10px]"></i>
                    Needs review
                  </span>
                </div>
                <ul class="mt-3 space-y-2 text-xs">
                  <template x-for="warning in emailNewsletter.issue?.qa.warnings" :key="warning.id">
                    <li class="flex items-start gap-2">
                      <i class="fas fa-circle-dot mt-0.5 text-[10px]"></i>
                      <span x-text="warning.message"></span>
                    </li>
                  </template>
                </ul>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Exports</p>
                <p class="mt-1 text-sm font-semibold text-slate-900" x-text="`${emailNewsletter.state.exportHistory.filter((job) => job.status === 'done').length} completed 路 ${emailNewsletter.state.exportHistory[0]?.format?.toUpperCase() ?? 'HTML'} queued`"></p>
                <p class="text-xs text-slate-500">HTML, Markdown, JSON, and ZIP packaging ready for ESPs.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <EmailNewsletterWorkspace />
    <EmailNewsletterBlockLibrary />
    <EmailNewsletterIntelligence />
    <EmailNewsletterPlans />
    <EmailNewsletterApiContracts />
  </main>
</Layout>
