---
import { SectionHeading, Button } from '@ansiversa/components';
---
<section id="intelligence" class="bg-white py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Intelligence"
      title="Assistants, automations, and QA guardrails"
      description="AI copilots help plan issues, remix tone, and localise content while automations enforce QA and integrate with the rest of your marketing stack."
    />
    <div class="mt-10 grid gap-6 lg:grid-cols-[1.1fr_0.9fr]" x-cloak>
      <div class="space-y-6">
        <div class="rounded-3xl border border-indigo-100 bg-indigo-50/70 p-6">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-indigo-900">AI assistants</h3>
            <Button type="button" size="sm" variant="outline" class="text-indigo-700" @click.prevent="emailNewsletter.togglePlan('pro')">
              Unlock Pro suite
            </Button>
          </div>
          <ul class="mt-5 space-y-3 text-sm">
            <template x-for="assistant in emailNewsletter.state.aiAssistants" :key="assistant.id">
              <li class="rounded-2xl border border-indigo-200 bg-white px-4 py-3">
                <div class="flex flex-wrap items-start justify-between gap-3">
                  <div>
                    <p class="text-sm font-semibold text-slate-900" x-text="assistant.name"></p>
                    <p class="mt-1 text-xs text-slate-500" x-text="assistant.description"></p>
                  </div>
                  <span class="inline-flex items-center gap-2 rounded-full px-2 py-1 text-xs font-semibold"
                    :class="assistant.plan === 'pro' ? 'bg-indigo-100 text-indigo-700' : 'bg-emerald-100 text-emerald-700'"
                  >
                    <i class="fas" :class="assistant.plan === 'pro' ? 'fa-sparkles' : 'fa-circle-check'"></i>
                    <span x-text="assistant.plan === 'pro' ? 'Pro' : 'Free'"></span>
                  </span>
                </div>
                <div class="mt-3 flex flex-wrap gap-2 text-[11px] text-slate-500">
                  <template x-for="mode in assistant.modes" :key="mode">
                    <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1" x-text="mode"></span>
                  </template>
                </div>
              </li>
            </template>
          </ul>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-900">Workflow automations</h3>
            <span class="text-xs font-semibold uppercase tracking-wide text-indigo-500">Zapier & native hooks</span>
          </div>
          <ul class="mt-4 space-y-4 text-sm text-slate-600">
            <template x-for="automation in emailNewsletter.state.automations" :key="automation.id">
              <li class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                <div class="flex flex-wrap items-start justify-between gap-3">
                  <div>
                    <p class="text-sm font-semibold text-slate-900" x-text="automation.title"></p>
                    <p class="text-xs text-slate-500" x-text="automation.trigger"></p>
                  </div>
                  <span class="inline-flex items-center gap-2 rounded-full px-2 py-1 text-[11px] font-semibold"
                    :class="automation.status === 'active' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600'"
                  >
                    <i class="fas" :class="automation.status === 'active' ? 'fa-bolt' : 'fa-flask'"></i>
                    <span x-text="automation.status"></span>
                  </span>
                </div>
                <div class="mt-3 space-y-1 text-xs text-slate-500">
                  <template x-for="action in automation.actions" :key="action">
                    <p class="flex items-start gap-2">
                      <i class="fas fa-arrow-turn-up text-[10px] text-indigo-400"></i>
                      <span x-text="action"></span>
                    </p>
                  </template>
                </div>
                <p class="mt-3 text-[11px] text-indigo-600" x-text="automation.plan === 'pro' ? 'Pro automation' : 'Available on Free plan'"></p>
              </li>
            </template>
          </ul>
        </div>
      </div>
      <div class="space-y-6">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-slate-900">Integrations</h3>
          <p class="mt-1 text-sm text-slate-600">Connect to ESPs, design tools, and collaboration hubs.</p>
          <ul class="mt-4 space-y-3 text-sm text-slate-600">
            <template x-for="integration in emailNewsletter.state.integrations" :key="integration.id">
              <li class="flex items-start justify-between gap-3 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                <div>
                  <p class="text-sm font-semibold text-slate-900" x-text="integration.name"></p>
                  <p class="text-xs text-slate-500" x-text="integration.capability"></p>
                </div>
                <div class="text-right text-xs text-slate-500">
                  <p class="font-semibold uppercase tracking-wide" x-text="integration.category"></p>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 font-semibold"
                    :class="integration.status === 'beta' ? 'bg-amber-100 text-amber-700' : 'bg-emerald-100 text-emerald-700'"
                  >
                    <i class="fas" :class="integration.status === 'beta' ? 'fa-seedling' : 'fa-circle-check'"></i>
                    <span x-text="integration.status"></span>
                  </span>
                </div>
              </li>
            </template>
          </ul>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-slate-900 p-6 text-slate-100 shadow-sm">
          <h3 class="text-lg font-semibold text-white">QA highlights</h3>
          <div class="mt-4 grid gap-4" x-cloak>
            <template x-for="highlight in emailNewsletter.state.qaHighlights" :key="highlight.title">
              <div class="rounded-2xl border border-slate-700 bg-slate-800/80 p-4">
                <p class="text-sm font-semibold text-indigo-200" x-text="highlight.title"></p>
                <ul class="mt-3 space-y-2 text-sm">
                  <template x-for="item in highlight.items" :key="item.label">
                    <li class="flex items-start justify-between gap-3 rounded-xl border px-3 py-2"
                      :class="item.status === 'good' ? 'border-emerald-400/30 bg-emerald-500/10 text-emerald-200' : 'border-amber-400/30 bg-amber-500/10 text-amber-100'"
                    >
                      <div class="flex items-start gap-2">
                        <i class="mt-1 text-[12px]" :class="item.icon"></i>
                        <div>
                          <p class="font-semibold" x-text="item.label"></p>
                          <p class="text-xs" x-text="item.value"></p>
                        </div>
                      </div>
                      <i class="fas fa-circle-chevron-right text-[12px]"></i>
                    </li>
                  </template>
                </ul>
              </div>
            </template>
          </div>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-slate-50 p-6">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-900">Roadmap</h3>
            <span class="text-xs font-semibold uppercase tracking-wide text-indigo-500">Public</span>
          </div>
          <ul class="mt-4 space-y-4 text-sm text-slate-600">
            <template x-for="stage in emailNewsletter.state.roadmap" :key="stage.quarter">
              <li class="rounded-2xl border border-slate-200 bg-white px-4 py-3">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-semibold text-slate-900" x-text="stage.quarter"></p>
                  <span class="text-xs text-slate-500">Planned</span>
                </div>
                <ul class="mt-2 space-y-1 text-xs text-slate-500">
                  <template x-for="item in stage.items" :key="item">
                    <li class="flex items-start gap-2">
                      <i class="fas fa-star text-[10px] text-indigo-400"></i>
                      <span x-text="item"></span>
                    </li>
                  </template>
                </ul>
              </li>
            </template>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
