---
import { Button } from '@ansiversa/components';
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <main class="min-h-screen bg-slate-50">
    <section class="relative overflow-hidden bg-gradient-to-br from-purple-600 via-indigo-600 to-sky-500 py-16 text-white">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.18),_rgba(99,102,241,0.12))]"></div>
      <div class="relative mx-auto flex max-w-6xl flex-col gap-8 px-4 sm:px-6 lg:flex-row lg:items-end lg:px-8">
        <div class="flex-1 space-y-5">
          <span class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em]">
            Campaign Planner
          </span>
          <h1 class="text-4xl font-black tracking-tight sm:text-5xl lg:text-6xl">
            Coordinate launches across every channel
          </h1>
          <p class="max-w-2xl text-white/80">
            See scheduled posts, due dates, assets, and status for each campaign. Export deliverables
            for stakeholders or handoff to teammates with one click.
          </p>
          <div class="flex flex-wrap gap-4">
            <Button href="/social-caption-generator" variant="light">
              <i class="fas fa-wand-magic-sparkles text-sm"></i>
              Generate new captions
            </Button>
            <Button href="/social-caption-generator/editor" variant="outline">
              <i class="fas fa-pen-to-square text-sm"></i>
              Open editor
            </Button>
          </div>
        </div>
        <div class="grid w-full max-w-md gap-4 rounded-3xl border border-white/20 bg-white/10 p-6 backdrop-blur">
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Active campaigns</p>
            <p class="mt-2 text-3xl font-bold" x-text="$store.caption.listCampaigns.length"></p>
          </div>
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Scheduled posts</p>
            <p
              class="mt-2 text-3xl font-bold"
              x-text="$store.caption.listCampaigns.reduce((total, campaign) => total + campaign.items.filter((item) => item.status === 'scheduled').length, 0)"
            ></p>
          </div>
          <div class="rounded-2xl border border-white/20 bg-white/10 px-4 py-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-white/70">Ready to publish</p>
            <p
              class="mt-2 text-3xl font-bold"
              x-text="$store.caption.listCampaigns.reduce((total, campaign) => total + campaign.items.filter((item) => item.status === 'ready').length, 0)"
            ></p>
          </div>
        </div>
      </div>
    </section>

    <section
      class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8"
      x-data="() => ({
        store: $store.caption,
        view: 'board',
        get campaigns() {
          return this.store.listCampaigns;
        },
        statusLabel(status) {
          return status === 'draft' ? 'Draft' : status === 'ready' ? 'Ready' : 'Scheduled';
        },
        groupItems(items) {
          return {
            draft: items.filter((item) => item.status === 'draft'),
            ready: items.filter((item) => item.status === 'ready'),
            scheduled: items.filter((item) => item.status === 'scheduled'),
          };
        },
      })"
    >
      <header class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <h2 class="text-2xl font-bold text-slate-900">Campaign overview</h2>
          <p class="mt-2 text-sm text-slate-600">
            Track status, due dates, and exports for each campaign. Use the board to triage tasks or switch to calendar view.
          </p>
        </div>
        <div class="flex flex-wrap items-center gap-2 text-sm">
          <Button type="button" size="sm" variant="outline" :class="view === 'board' ? 'border-indigo-500 text-indigo-600' : ''" x-on:click="view = 'board'">
            <i class="fas fa-kanban"></i>
            Board
          </Button>
          <Button type="button" size="sm" variant="outline" :class="view === 'calendar' ? 'border-indigo-500 text-indigo-600' : ''" x-on:click="view = 'calendar'">
            <i class="fas fa-calendar"></i>
            Calendar
          </Button>
          <Button type="button" size="sm" variant="ghost" href="#exports">
            <i class="fas fa-file-export"></i>
            Export options
          </Button>
        </div>
      </header>

      <template x-if="view === 'board'">
        <div class="mt-10 grid gap-6 lg:grid-cols-3">
          <template x-for="campaign in campaigns" :key="campaign.id">
            <div class="space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="text-xl font-semibold text-slate-900" x-text="campaign.title"></h3>
                  <p class="mt-1 text-xs uppercase tracking-wide text-slate-500" x-text="campaign.status"></p>
                </div>
                <Button size="sm" variant="outline" :href="`/social-caption-generator/export?campaign=${campaign.id}`">
                  <i class="fas fa-download text-xs"></i>
                  Export
                </Button>
              </div>
              <p class="text-sm text-slate-600" x-text="campaign.description"></p>
              <div class="flex items-center justify-between text-xs text-slate-500">
                <span><i class="fas fa-calendar-day mr-1"></i><span x-text="campaign.startOn"></span></span>
                <span><i class="fas fa-flag-checkered mr-1"></i><span x-text="campaign.endOn"></span></span>
              </div>
              <div class="grid gap-3 text-sm" x-data="groupItems(campaign.items)">
                <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                  <h4 class="text-xs font-semibold uppercase tracking-wide text-slate-500">Draft</h4>
                  <template x-if="draft.length === 0">
                    <p class="mt-2 text-xs text-slate-500">No items in draft.</p>
                  </template>
                  <template x-for="item in draft" :key="item.id">
                    <div class="mt-2 rounded-2xl border border-slate-200 bg-white px-4 py-3">
                      <p class="font-semibold text-slate-800" x-text="item.title"></p>
                      <div class="mt-2 flex items-center justify-between text-xs text-slate-500">
                        <span><i class="fas fa-calendar"></i> <span x-text="item.dueOn"></span></span>
                        <span><i class="fas fa-hashtag"></i> <span x-text="item.platforms.length"></span> platforms</span>
                      </div>
                    </div>
                  </template>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                  <h4 class="text-xs font-semibold uppercase tracking-wide text-slate-500">Ready</h4>
                  <template x-if="ready.length === 0">
                    <p class="mt-2 text-xs text-slate-500">No ready posts yet.</p>
                  </template>
                  <template x-for="item in ready" :key="item.id">
                    <div class="mt-2 rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-700">
                      <p class="font-semibold" x-text="item.title"></p>
                      <div class="mt-2 flex items-center justify-between text-xs">
                        <span><i class="fas fa-calendar-check"></i> <span x-text="item.dueOn"></span></span>
                        <span><i class="fas fa-link"></i> Asset</span>
                      </div>
                    </div>
                  </template>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3">
                  <h4 class="text-xs font-semibold uppercase tracking-wide text-slate-500">Scheduled</h4>
                  <template x-if="scheduled.length === 0">
                    <p class="mt-2 text-xs text-slate-500">Nothing scheduled yet.</p>
                  </template>
                  <template x-for="item in scheduled" :key="item.id">
                    <div class="mt-2 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-indigo-700">
                      <p class="font-semibold" x-text="item.title"></p>
                      <div class="mt-2 flex items-center justify-between text-xs">
                        <span><i class="fas fa-calendar-star"></i> <span x-text="item.dueOn"></span></span>
                        <span><i class="fas fa-share-nodes"></i> <span x-text="item.platforms.length"></span> platforms</span>
                      </div>
                    </div>
                  </template>
                </div>
              </div>
            </div>
          </template>
        </div>
      </template>

      <template x-if="view === 'calendar'">
        <div class="mt-10 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="grid gap-4 lg:grid-cols-7">
            <template x-for="day in 14" :key="day">
              <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4 text-xs text-slate-500">
                <div class="flex items-center justify-between">
                  <span class="font-semibold text-slate-700" x-text="new Date(Date.now() + (day - 1) * 86400000).toLocaleDateString()"></span>
                  <span class="rounded-full bg-slate-200 px-2 py-0.5" x-text="store.listCampaigns.reduce((total, campaign) => total + campaign.items.filter((item) => item.dueOn === new Date(Date.now() + (day - 1) * 86400000).toISOString().slice(0, 10)).length, 0)"></span>
                </div>
                <template x-for="campaign in store.listCampaigns" :key="campaign.id">
                  <template x-for="item in campaign.items" :key="item.id">
                    <template x-if="item.dueOn === new Date(Date.now() + (day - 1) * 86400000).toISOString().slice(0, 10)">
                      <div class="mt-3 rounded-2xl border border-indigo-200 bg-indigo-50 px-3 py-2 text-indigo-700">
                        <p class="font-semibold" x-text="item.title"></p>
                        <p class="text-[11px]" x-text="campaign.title"></p>
                      </div>
                    </template>
                  </template>
                </template>
              </div>
            </template>
          </div>
        </div>
      </template>

      <section id="exports" class="mt-16 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
        <h3 class="text-xl font-semibold text-slate-900">Export deliverables</h3>
        <p class="mt-2 text-sm text-slate-600">
          Download campaign packages as CSV, Markdown briefs, or JSON for integrations. Exports respect plan limits and include platform formatting.
        </p>
        <div class="mt-6 grid gap-6 md:grid-cols-3">
          <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-5 text-sm text-slate-600">
            <i class="fas fa-file-csv text-xl text-slate-500"></i>
            <h4 class="mt-3 text-base font-semibold text-slate-900">CSV schedule</h4>
            <p class="mt-2 text-xs">
              Includes platform, caption, hashtags, link, UTM, and due date. Perfect for import into social suites.
            </p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-5 text-sm text-slate-600">
            <i class="fas fa-file-lines text-xl text-slate-500"></i>
            <h4 class="mt-3 text-base font-semibold text-slate-900">Markdown brief</h4>
            <p class="mt-2 text-xs">
              Campaign overview formatted for stakeholder reviews or standups.
            </p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-slate-50 px-4 py-5 text-sm text-slate-600">
            <i class="fas fa-code-branch text-xl text-slate-500"></i>
            <h4 class="mt-3 text-base font-semibold text-slate-900">JSON handoff</h4>
            <p class="mt-2 text-xs">
              Structured export for automation or ingestion into internal systems.
            </p>
          </div>
        </div>
      </section>
    </section>
  </main>
</Layout>
