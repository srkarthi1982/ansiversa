---
import { Loader } from '@ansiversa/components';
import Layout from '../../layouts/Layout.astro';
import SpeechWriterHero from './components/SpeechWriterHero.astro';
import SpeechWriterWorkflow from './components/SpeechWriterWorkflow.astro';
import SpeechWriterWorkspace from './components/SpeechWriterWorkspace.astro';
import SpeechWriterPractice from './components/SpeechWriterPractice.astro';
import SpeechWriterPlans from './components/SpeechWriterPlans.astro';
import SpeechWriterDataModel from './components/SpeechWriterDataModel.astro';
import SpeechWriterIntegrations from './components/SpeechWriterIntegrations.astro';
import SpeechWriterCTA from './components/SpeechWriterCTA.astro';
---
<Layout title="Speech Writer">
  <Loader />
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#speech-writer-app"
  >
    Skip to Speech Writer content
  </a>
  <main id="speech-writer-app" class="bg-slate-950 text-white">
    <SpeechWriterHero />
    <SpeechWriterWorkflow />
    <SpeechWriterWorkspace />
    <SpeechWriterPractice />
    <SpeechWriterPlans />
    <SpeechWriterDataModel />
    <SpeechWriterIntegrations />
    <SpeechWriterCTA />
  </main>
</Layout>
