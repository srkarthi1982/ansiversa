---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/novel-outliner/Hero.astro";
import Wizard from "../../components/novel-outliner/Wizard.astro";
import ProjectLibrary from "../../components/novel-outliner/ProjectLibrary.astro";
import StructureShowcase from "../../components/novel-outliner/StructureShowcase.astro";
import SnowflakeWorkbench from "../../components/novel-outliner/SnowflakeWorkbench.astro";
import WorkspaceOverview from "../../components/novel-outliner/WorkspaceOverview.astro";
import Integrations from "../../components/novel-outliner/Integrations.astro";
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#novel-outliner-app"
  >
    Skip to Novel Outliner app
  </a>
  <main id="novel-outliner-app" class="min-h-screen bg-slate-100 text-slate-900">
    <Hero />
    <Wizard />
    <ProjectLibrary />
    <StructureShowcase />
    <SnowflakeWorkbench />
    <WorkspaceOverview />
    <Integrations />
  </main>
</Layout>
