---
import Layout from '../../layouts/Layout.astro';
import ConfiguratorPanel from './components/ConfiguratorPanel.astro';
import PreviewPanel from './components/PreviewPanel.astro';
import DynamicPanel from './components/DynamicPanel.astro';
import BatchPanel from './components/BatchPanel.astro';
import { Button } from '@ansiversa/components';
import { qrWorkspaceHighlights } from '../../lib/qr-code-creator/constants';
---
<Layout>
  <a
    class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    href="#qr-code-creator"
  >
    Skip to QR Code Creator workspace
  </a>
  <main
    id="qr-code-creator"
    class="min-h-screen bg-slate-50"
    x-data="() => ({ qr: $store['qr-code-creator'] })"
    x-init="qr.refreshPreview()"
  >
    <section class="relative overflow-hidden py-16 sm:py-20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-transparent"></div>
      <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-[1.15fr_0.85fr] lg:items-center">
          <div class="space-y-6 text-center lg:text-left">
            <span class="inline-flex items-center gap-2 rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700">
              <i class="fas fa-qrcode text-xs"></i>
              QR Code Creator
            </span>
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
              Build branded static and dynamic QR codes in seconds
            </h1>
            <p class="text-base text-slate-600 sm:text-lg">
              Generate QR codes for URLs, Wi-Fi, contact cards, and events, then style them with gradients, logos, and custom eyes. Upgrade to dynamic mode for short links, retargeting, geo rules, and analytics.
            </p>
            <div class="flex flex-wrap justify-center gap-3 lg:justify-start">
              <Button type="button" @click.prevent="$store['qr-code-creator'].setMode('static')">
                <i class="fas fa-qrcode text-xs"></i>
                Start static QR
              </Button>
              <Button type="button" variant="outline" @click.prevent="$store['qr-code-creator'].setMode('dynamic')">
                <i class="fas fa-link text-xs"></i>
                Explore dynamic features
              </Button>
              <Button href="#batch" variant="ghost">
                <i class="fas fa-table text-xs"></i>
                Batch generator
              </Button>
            </div>
            <div class="grid gap-4 sm:grid-cols-2">
              {qrWorkspaceHighlights.map((item) => (
                <div class="rounded-3xl border border-slate-200 bg-white/80 p-4 text-left shadow-sm" key={item.title}>
                  <div class="flex items-center gap-3 text-sm font-semibold text-slate-900">
                    <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-indigo-100 text-indigo-600">
                      <i class={`${item.icon} text-sm`}></i>
                    </span>
                    {item.title}
                  </div>
                  <p class="mt-2 text-xs text-slate-600">{item.description}</p>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 translate-x-6 translate-y-6 rounded-3xl bg-indigo-200 opacity-50 blur-2xl"></div>
            <div class="relative space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-xl">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Active campaigns</p>
                  <p class="text-2xl font-bold text-slate-900" x-text="$store['qr-code-creator'].state.dynamic.records.length"></p>
                </div>
                <div class="text-right">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">7-day scans</p>
                  <p class="text-2xl font-bold text-slate-900" x-text="$store['qr-code-creator'].state.dynamic.analytics.rolling7Day.total"></p>
                </div>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-slate-50/70 p-4 text-xs text-slate-600">
                <p class="font-semibold text-slate-900">Why teams choose dynamic QR:</p>
                <ul class="mt-2 space-y-1">
                  <li class="flex items-start gap-2"><i class="fas fa-circle-dot text-[9px] text-indigo-500 mt-0.5"></i>Swap destinations without reprinting signage.</li>
                  <li class="flex items-start gap-2"><i class="fas fa-circle-dot text-[9px] text-indigo-500 mt-0.5"></i>Gate with passwords, expiry dates, or geo fences.</li>
                  <li class="flex items-start gap-2"><i class="fas fa-circle-dot text-[9px] text-indigo-500 mt-0.5"></i>Monitor scans by device, location, and campaign.</li>
                </ul>
              </div>
              <div class="rounded-2xl border border-slate-200 bg-white p-4 text-xs text-slate-600">
                <p class="font-semibold text-slate-900">Plan guardrails</p>
                <dl class="mt-2 grid gap-2 sm:grid-cols-2">
                  <div>
                    <dt class="text-[11px] uppercase tracking-wide text-slate-500">Free</dt>
                    <dd>Static QR, SVG download, up to 25 batch rows.</dd>
                  </div>
                  <div>
                    <dt class="text-[11px] uppercase tracking-wide text-slate-500">Pro</dt>
                    <dd>Dynamic QR, PNG/SVG, analytics, logo overlay, 10k batch rows.</dd>
                  </div>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pb-20">
      <div class="mx-auto grid max-w-6xl gap-10 px-4 sm:px-6 lg:grid-cols-[1.1fr_0.9fr] lg:items-start lg:px-8">
        <ConfiguratorPanel />
        <PreviewPanel />
      </div>
    </section>

    <section class="bg-white py-16">
      <div class="mx-auto max-w-6xl space-y-10 px-4 sm:px-6 lg:px-8">
        <DynamicPanel />
        <div id="batch">
          <BatchPanel />
        </div>
      </div>
    </section>

    <template x-if="$store['qr-code-creator'].state.toast">
      <div
        class="fixed bottom-6 right-6 z-40 w-full max-w-sm rounded-2xl border border-slate-200 bg-white p-4 shadow-lg"
        role="status"
        x-transition
      >
        <div class="flex items-start gap-3">
          <div class="mt-1">
            <i
              class="fas"
              :class="{
                'fa-circle-check text-emerald-500': $store['qr-code-creator'].state.toast?.type === 'success',
                'fa-circle-info text-indigo-500': $store['qr-code-creator'].state.toast?.type === 'info',
                'fa-circle-exclamation text-rose-500': $store['qr-code-creator'].state.toast?.type === 'error'
              }"
            ></i>
          </div>
          <div class="flex-1 text-sm text-slate-700" x-text="$store['qr-code-creator'].state.toast?.message"></div>
          <button
            type="button"
            class="text-xs text-slate-500 hover:text-slate-700"
            @click="$store['qr-code-creator'].clearToast($store['qr-code-creator'].state.toast?.id)"
          >
            <i class="fas fa-xmark"></i>
          </button>
        </div>
      </div>
    </template>
  </main>
</Layout>
