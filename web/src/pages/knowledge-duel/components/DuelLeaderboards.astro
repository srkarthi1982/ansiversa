---
import { SectionHeading } from '@ansiversa/components';
import { duelLeaderboardTabs, duelSeasonMilestones } from "../../../data/knowledgeDuel";
---
<section id="leaderboards" class="bg-white py-16">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-start">
      <div>
        <SectionHeading
          eyebrow="Leaderboards and seasons"
          title="Climb ladders built for every community"
          description="Global ELO, seasonal tiers, friend ladders, and category spotlights run on the same data model. Surface them in-app or feed them into marketing sites with SSR-ready endpoints."
        />
        <div class="mt-8 grid gap-4">
          {duelLeaderboardTabs.map((tab) => (
            <article class="rounded-3xl border border-slate-200 bg-slate-50/70 p-5 shadow-sm">
              <header class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-slate-900">{tab.name}</h3>
                <span class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">{tab.id}</span>
              </header>
              <p class="mt-2 text-sm text-slate-600">{tab.description}</p>
              <ul class="mt-4 flex flex-wrap gap-2 text-xs font-semibold text-slate-500">
                {tab.metrics.map((metric) => (
                  <li class="rounded-full bg-white px-3 py-1">{metric}</li>
                ))}
              </ul>
            </article>
          ))}
        </div>
      </div>
      <aside class="rounded-3xl border border-indigo-100 bg-gradient-to-br from-indigo-50 via-white to-sky-50 p-6 shadow-lg">
        <h3 class="text-xl font-semibold text-slate-900">Season timeline</h3>
        <p class="mt-2 text-sm text-slate-600">
          Rotate rewards and spotlight categories across a structured timeline. Use these beats to schedule notifications, marketing pushes, or live-stream showcases.
        </p>
        <ol class="mt-6 space-y-4">
          {duelSeasonMilestones.map((milestone) => (
            <li class="flex items-start gap-3 rounded-2xl border border-indigo-100 bg-white/70 p-4">
              <span class="mt-1 inline-flex h-9 w-9 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
                <i class={`${milestone.icon} text-base`} aria-hidden="true"></i>
              </span>
              <div>
                <p class="text-sm font-semibold text-slate-900">{milestone.phase}</p>
                <p class="text-xs text-slate-600">{milestone.detail}</p>
              </div>
            </li>
          ))}
        </ol>
        <div class="mt-6 rounded-2xl border border-indigo-100 bg-white/80 p-4 text-xs text-slate-600">
          <p class="font-semibold text-slate-900">API snapshot</p>
          <p class="mt-1">GET /knowledge-duel/api/leaderboard?season=current</p>
          <p class="mt-1">GET /knowledge-duel/api/season/current</p>
          <p class="mt-1 text-slate-500">Responses include top 100 entries, your placement, and highlight thresholds.</p>
        </div>
      </aside>
    </div>
  </div>
</section>
