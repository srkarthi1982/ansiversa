{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "paths": {
      "@ansiversa/components": ["../components/src/index.ts"],
      "@ansiversa/components/*": ["../components/src/*"],
      "@ansiversa/core/*": ["../core/src/*"],
      "@ansiversa/core/db/*": ["../core/db/*"],
      "@ansiversa/db": ["../ansiversa-db/src/index.ts"],
      "@ansiversa/db/*": ["../ansiversa-db/src/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
